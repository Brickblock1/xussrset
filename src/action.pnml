switch (FEAT_TRAINS, SELF, speed_after25_120to100,
  age_in_days >= (25*365+5))
{
  1: return 100;
  return 120;
}
// ограничиваем скорость через 30 лет работы 130 --> 110
switch (FEAT_TRAINS, SELF, speed_after30_130to110,
