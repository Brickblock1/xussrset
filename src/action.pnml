 /// action

// --- ограничение скорости по окончанию установленного срока службы ---
// ограничиваем скорость через 25 лет работы 120 --> 110
switch (FEAT_TRAINS, SELF, speed_after25_120to110,
  age_in_days >= (25*365+5))
{
  1: return 110;
  return 120;
}
