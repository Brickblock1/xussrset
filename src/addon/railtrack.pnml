#define new_standard_rails(rail_name, rail_label, year, strname, powered, cost, RCcost, speed, colour, sort_oder, rails_graphics, fences_graphics, depots_graphics, flags)  \
item (FEAT_RAILTYPES, rail_name) {                                                                                                                                          \
  property {                                                                                                                                                                \
                       label: rail_label;                                                                                                                                   \
           introduction_date: date(year, 1, 1);                                                                                                                             \
                        name: string(STR_S_##strname##_NAME);                                                                                                               \
             toolbar_caption: string(STR_S_##strname##_TOOLBAR);                                                                                                            \
                   menu_text: string(STR_S_##strname##_MENU);                                                                                                               \
        build_window_caption: string(STR_S_##strname##_BUILD_CAPTION);                                                                                                      \
            autoreplace_text: string(STR_S_##strname##_AUTOREPLACE);                                                                                                        \
             new_engine_text: string(STR_S_##strname##_NEW_ENGINE);                                                                                                         \
    compatible_railtype_list: [all_standard_rails()];                                                                                                                       \
       powered_railtype_list: [powered##_standard_rails()];                                                                                                                 \
              railtype_flags: flags;                                                                                                                                        \
      curve_speed_multiplier: 1;                                                                                                                                            \
            station_graphics: RAILTYPE_STATION_NORMAL;                                                                                                                      \
           construction_cost: cost;                                                                                                                                         \
            maintenance_cost: RCcost;                                                                                                                                       \
                 speed_limit: speed;                                                                                                                                        \
          acceleration_model: ACC_MODEL_RAIL;                                                                                                                               \
                  map_colour: colour;                                                                                                                                       \
                  sort_order: sort_oder;                                                                                                                                    \
  }                                                                                                                                                                         \
  graphics {                                                                                                                                                                \
    bridge_surfaces: get_##rails_graphics##_bridge_surfaces;                                                                                                                \
             depots: depots_graphics;                                                                                                                                       \
             fences: fences_graphics;                                                                                                                                       \
                gui: rails_graphics##_gui;                                                                                                                                  \
    level_crossings: get_##rails_graphics##_level_crossings;                                                                                                                \
      track_overlay: get_##rails_graphics##_track_overlay;                                                                                                                  \
            tunnels: get_##rails_graphics##_tunnels;                                                                                                                        \
           underlay: get_##rails_graphics##_underlay;                                                                                                                       \
  }                                                                                                                                                                         \
}                                                                                                                                                                           \

#define electric_rails(rail_name, catenary_graphics)       \
item (FEAT_RAILTYPES, rail_name) {                         \
  graphics {                                               \
    catenary_pylons: catenary_graphics##_catenary_pylons;  \
      catenary_wire: catenary_graphics##_catenary_wire;    \
  }                                                        \
}                                                          \

if ((disable_rails == 0) && (sets_on == 0)) {
  new_standard_rails(rla       , "SAAN", 1880, RAIL       , all         ,  64,  2, 0 km/h, map_color_rail+6,    0x88, rail4, fences_1435, rail4_depots, 0)  // Unelectrified rails
  item (FEAT_RAILTYPES, rla) { property { alternative_railtype_list: ["SABN", "SACN", "SADN", "SAEN"]; } }

  new_standard_rails(er25ac    , "SAAA", 1952, ER25AC     , all_25AC    , 115,  4, 0 km/h, map_color_ac+6,      0x8A, rail4, fences_1435, rail4_depots, bitmask(RAILTYPE_FLAG_CATENARY))  // Electrified rails AC 25kV
  item (FEAT_RAILTYPES, er25ac) { property { alternative_railtype_list: ["SABA", "SACA", "SADA", "SAEA"]; } }

  new_standard_rails(er15ac    , "SAAa", 1961, ER15AC     , all_15AC    , 115,  4, 0 km/h, map_color_15ac+6,    0x89, rail4, fences_1435, rail4_depots, bitmask(RAILTYPE_FLAG_CATENARY))  // Electrified rails AC 15kV
  item (FEAT_RAILTYPES, er15ac) { property { alternative_railtype_list: ["SABa", "SACa", "SADa", "SAEa"]; } }

  new_standard_rails(er3dc     , "SAAD", 1930, ER3DC      , all_3DC     , 128,  5, 0 km/h, map_color_dc+6,      0x8C, rail4, fences_1435, rail4_depots, bitmask(RAILTYPE_FLAG_CATENARY))  // Electrified rails DC 3 kV
  item (FEAT_RAILTYPES, er3dc) { property { alternative_railtype_list: ["SABD", "SACD", "SADD", "SAED"]; } }

  new_standard_rails(er15dc    , "SAAd", 1924, ER15DC     , all_15DC    , 100,  4, 0 km/h, map_color_15dc+6,    0x8B, rail4, fences_1435, rail4_depots, bitmask(RAILTYPE_FLAG_CATENARY))  // Electrified rails DC 1,5 kV
  item (FEAT_RAILTYPES, er15dc) { property { alternative_railtype_list: ["SABd", "SACd", "SADd", "SAEd"]; } }

  new_standard_rails(er2s      , "SAA)", 1963, ER25AC3DC  , all_ACDC    , 384, 10, 0 km/h, map_color_double+0,  0x80, rail4, fences_1435, rail4_depots, bitmask(RAILTYPE_FLAG_CATENARY, RAILTYPE_FLAG_HIDDEN))  // Electrified Trunk rails AC 25 kV + DC 3 kV
  new_standard_rails(er2d      , "SAA=", 1930, ERDDC      , all_dDC     , 192,  7, 0 km/h, map_color_double+2,  0x81, rail4, fences_1435, rail4_depots, bitmask(RAILTYPE_FLAG_CATENARY, RAILTYPE_FLAG_HIDDEN))  // Electrified rails DC 1,5 kV + DC 3 kV
  new_standard_rails(er2ac15dc , "SAA(", 1963, ER25AC15DC , all_AC15DC  , 384, 10, 0 km/h, map_color_double+4,  0x82, rail4, fences_1435, rail4_depots, bitmask(RAILTYPE_FLAG_CATENARY, RAILTYPE_FLAG_HIDDEN))  // Electrified Trunk rails AC 25 kV + DC 1,5 kV
  new_standard_rails(er3acddc  , "SAA_", 1963, ER25ACDDC  , all_ACdDC   , 384, 10, 0 km/h, map_color_double+6,  0x83, rail4, fences_1435, rail4_depots, bitmask(RAILTYPE_FLAG_CATENARY, RAILTYPE_FLAG_HIDDEN))  // Electrified Trunk rails AC 25 kV + DC 3 kV + DC 1,5 kV
  new_standard_rails(er3aac15dc, "SAA^", 1963, ERAAC15DC  , all_aAC15DC , 384, 10, 0 km/h, map_color_double+8,  0x84, rail4, fences_1435, rail4_depots, bitmask(RAILTYPE_FLAG_CATENARY, RAILTYPE_FLAG_HIDDEN))  // Electrified Trunk rails AC 25 kV + AC 15 kV + DC 1,5 kV
  new_standard_rails(er4aacddc , "SAA*", 1963, ERAACDDC   , all_aACdDC  , 384, 10, 0 km/h, map_color_double+10, 0x85, rail4, fences_1435, rail4_depots, bitmask(RAILTYPE_FLAG_CATENARY, RAILTYPE_FLAG_HIDDEN))  // Electrified Trunk rails AC 25 kV + AC 15 kV + DC 3 kV + DC 1,5 kV

  item (FEAT_RAILTYPES, er4aacddc) { property {
    alternative_railtype_list: ["SAAE"]; } }

