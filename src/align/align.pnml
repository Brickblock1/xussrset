// Одинаковые свойства для всех размеров
#define align_set_shared_property() \
    climates_available: enable_debug_car ? get_climates_available() \
      : NO_CLIMATE; \
    introduction_date: date(0, 1, 1); \
    vehicle_life: 255; \
    sprite_id: SPRITE_ID_NEW_TRAIN; \
    misc_flags: bitmask(TRAIN_FLAG_TILT); \
    model_life: VEHICLE_NEVER_EXPIRES; \
    loading_speed: 10; \
    cost_factor: 1; \
    running_cost_factor: 1; \
    speed: 1 km/h; \
    track_type: RAIL; \
    power: 500 hpM; \
    running_cost_base: RUNNING_COST_DIESEL; \
    cargo_capacity: 10; \
    weight: 25 ton; \
    engine_class: ENGINE_CLASS_DIESEL; \
    tractive_effort_coefficient: 0.11; \
    visual_effect_and_powered: \
      visual_effect_and_powered(VISUAL_EFFECT_DISABLE, 0, DISABLE_WAGON_POWER);


// Для размера 3-8
#define define_align_template(size) \
switch (FEAT_TRAINS, SELF, align##size##_get_spriteset, \
  is_flipped()) \
{ \
  1: align_##size##_flipped_spriteset; \
  align_##size##_spriteset; \
} \
\
item (FEAT_TRAINS, align##size) \
{ \
  property \
  { \
    name: string(STR_ALIGN##size##_NAME); \
    misc_flags: bitmask(TRAIN_FLAG_TILT, TRAIN_FLAG_FLIP); \
    shorten_vehicle: SHORTEN_TO_##size##_8; \
    align_set_shared_property() \
  } \
  graphics \
  { \
    default: align##size##_get_spriteset; \
    purchase: align_##size##_purchase_spriteset; \
    additional_text: return string(STR_ALIGN_PURCHASE_HINT); \
  } \
}

define_align_template(3)
define_align_template(4)
define_align_template(5)
define_align_template(6)
define_align_template(7)
define_align_template(8)

// Для размера 9-16
#define define_align_template2(size, short) \
 \
switch (FEAT_TRAINS, SELF, align_##size##_get_spriteset, \
  is_drawn_in_viewport() && is_hidden_at(1)) \
{ \
  1: dummy_spriteset; \
  align_##size##_spriteset; \
} \
 \
item (FEAT_TRAINS, align##size) \
{ \
  property \
  { \
    name: string(STR_ALIGN##size##_NAME); \
    misc_flags: bitmask(TRAIN_FLAG_TILT, TRAIN_FLAG_MU); \
    shorten_vehicle: SHORTEN_TO_##short##_8; \
    align_set_shared_property() \
  } \
  graphics \
  { \
    default: align_##size##_get_spriteset; \
    purchase: align_##size##_purchase_spriteset; \
    additional_text: return string(STR_ALIGN_PURCHASE_HINT); \
    articulated_part: articulated_part_tender; \
  } \
}

define_align_template2(9, 1)
define_align_template2(10, 2)
define_align_template2(11, 3)
define_align_template2(12, 4)
define_align_template2(13, 5)
define_align_template2(14, 6)
define_align_template2(15, 7)
define_align_template2(16, 8)
