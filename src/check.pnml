 /// check

// version check
if (ttd_platform != PLATFORM_OPENTTD ||
  openttd_version < version_openttd(1, 13, 5))
{
  error(ERROR, REQUIRES_OPENTTD, string(STR_MIN_OPENTTD_VERSION));
}

// Check for engine pool
if (!dynamic_engines)
{
  error(ERROR, USED_WITH, string(STR_USE_ENGINE_POOL));
}

