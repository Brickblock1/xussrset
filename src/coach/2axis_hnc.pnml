 // 2axis_hnc

/// Вагон
// Двухосный, с длиной кузова 14 м, жесткий некупейный вагон
// дальнего следования выпуска 1925-1933 гг.
/// 2-осный 14 м жесткий некупейный (1925-1933)
// hard non-compartment

#define IMAGEFILE  "src/coach/2axis-hard-noncompartment-1925-1933.png"

// покупка
spriteset (_2axis_hnc_purchase_spriteset_ico, IMAGEFILE)
{ new_purchase_template(0, 0) }
spriteset (_2axis_hnc_purchase_spriteset_noico, IMAGEFILE)
{ new_purchase_template_noico(0, 0) }
switch (FEAT_TRAINS, SELF, _2axis_hnc_purchase_spriteset, 
  enable_icons)
{  1: _2axis_hnc_purchase_spriteset_ico;
      _2axis_hnc_purchase_spriteset_noico;}

// вид 1
spriteset (_2axis_hnc_spriteset, IMAGEFILE)
{
  s9_template(0, 23, 0)
}

// Реверс: (436, y, 0)

#undef IMAGEFILE

// Если рисуем на карте и следующий в цепочке вагон скрыт, то
// отдаём пустышку
switch (FEAT_TRAINS, SELF, _2axis_hnc_get_spriteset,
  is_drawn_in_viewport() && is_hidden_at(1))
{
  1: dummy_spriteset;
  _2axis_hnc_spriteset;
}

item (FEAT_TRAINS, _2axis_hnc) 
{
  property
  {
    name: string(STR_2AXIS_HNC_NAME);
    climates_available: get_climates_available();
    introduction_date: date(get_car_year(1925), 1, 1);
    model_life: get_model_life(1925,1933);
    retire_early: get_retire_early(1925,1933);
    vehicle_life: 28;
    reliability_decay: 20;
    cargo_allow_refit: [PASS];
    default_cargo_type: PASS;
    refit_cost: 0;
    cost_factor: get_car_cost_factor();
    running_cost_factor: get_car_running_cost_factor();
    sprite_id: SPRITE_ID_NEW_TRAIN;
    speed: 110 km/h;
    misc_flags: bitmask(TRAIN_FLAG_TILT, TRAIN_FLAG_MU);
    track_type: get_normal_track_type();
    power: 0 hpM;
    running_cost_base: RUNNING_COST_DIESEL;
    loading_speed: 15;
    cargo_capacity: 30;
    weight: 23 ton;
    length: 8;
    visual_effect_and_powered: disable_visual_effect_and_powered();
    bitmask_vehicle_info: 0;
  }
  graphics
  {
    default: _2axis_hnc_get_spriteset;
    purchase: _2axis_hnc_purchase_spriteset;
    articulated_part: articulated_part_dummy1;
    additional_text: return string(STR_2AXIS_HNC_PURCHASE_HINT);
  }
}
