item (FEAT_TRAINS, ammendorf_d_k) 
{
  property
  {
    name: string(STR_AMMENDORF_D_K_NAME);
    climates_available: get_climates_available();
    introduction_date: date(get_car_year(1972), 1, 1);
    model_life: get_model_life(1972,1981);
    retire_early: get_retire_early(1972,1981);
    vehicle_life: 28;
    reliability_decay: 1;
    cargo_allow_refit: [PASS, TOUR];
    default_cargo_type: PASS;
    refit_cost: 0;
    cost_factor: 23;
    sprite_id: SPRITE_ID_NEW_TRAIN;
    speed: 160 km/h;
    misc_flags: bitmask(TRAIN_FLAG_TILT, TRAIN_FLAG_MU, TRAIN_FLAG_AUTOREFIT);
    track_type: get_normal_track_type();
    power: 0 hpM;
    running_cost_base: RUNNING_COST_ROADVEH;
    loading_speed: 15;
    cargo_capacity: 38;
    weight: 52 ton;
    length: 8;
    visual_effect_and_powered: disable_visual_effect_and_powered();
    bitmask_vehicle_info: 0;
  }
  graphics
  {
    default: ammendorf_d_k_sprites;
    purchase: ammendorf_d_k_purchase_sprites;
    cargo_age_period: return 255;
    running_cost_factor: ammendorf_d_k_running_cost_factor;
    articulated_part: articulated_part_dummy6;
    additional_text: return string(STR_AMMENDORF_D_K_PURCHASE_HINT);
    cargo_subtype_text: ammendorf_d_k_cargo_subtype_text;
    refit_cost: return 0 | CB_RESULT_AUTOREFIT;
  }
