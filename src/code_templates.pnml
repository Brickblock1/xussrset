// Выбор ориентации кабины секции для СМЕ (схема без альтернатив в СМЕ)

#define engine_direction_template(name)                \
switch (FEAT_TRAINS, SELF, name##_sprites_2l,          \
[ set_offset_to(2),                                    \
  (prev_vehicle_type_id() == name) ||                  \
  (position_in_consist == 0) ])                        \
{ 1: name##_sprites_l;                                 \
     name##_sprites_r;}                                \
