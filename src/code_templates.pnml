{ 1: return new_speed;                                                                                \
     return speed; }                                                                                  \
switch (FEAT_TRAINS, SELF, name##_speed,                                                              \
[ STORE_TEMP(get_max_speed(life, speed_r, ((build_year >= year) ? new_speed : speed)), 0),            \
