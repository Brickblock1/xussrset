switch (FEAT_TRAINS, PARENT, d1_m_can_attach_wagon6,
[
  STORE_TEMP(num_vehs_in_consist-4, 0x10F),
  var[0x61, 0, 0xFFFF, 0xC6]
])
{
  d1_m: return CB_RESULT_ATTACH_ALLOW;
  d1_c: return CB_RESULT_ATTACH_DISALLOW;
  return CB_RESULT_ATTACH_DISALLOW;
}

switch (FEAT_TRAINS, PARENT, d1_m_can_attach_wagon5,
  num_vehs_in_consist)
{
  4: return CB_RESULT_ATTACH_ALLOW;
  d1_m_can_attach_wagon6;
}

switch (FEAT_TRAINS, PARENT, d1_m_can_attach_wagon4,
[
  STORE_TEMP(num_vehs_in_consist-2, 0x10F),
  var[0x61, 0, 0xFFFF, 0xC6]
])
{
  d1_m: return CB_RESULT_ATTACH_ALLOW;
  d1_c: d1_m_can_attach_wagon5;
  return CB_RESULT_ATTACH_DISALLOW;
}

switch (FEAT_TRAINS, PARENT, d1_m_can_attach_wagon3,
  num_vehs_in_consist)
{
  2: return CB_RESULT_ATTACH_ALLOW;
  d1_m_can_attach_wagon4;
}

switch (FEAT_TRAINS, PARENT, d1_m_can_attach_wagon1,
  count_veh_id(d1_m) % 2)
{
  1: d1_m_can_attach_wagon3;
  return CB_RESULT_ATTACH_DISALLOW;
}

switch (FEAT_TRAINS, SELF, d1_m_can_attach_wagon,
  vehicle_type_id)
{
  d1_m: return CB_RESULT_ATTACH_ALLOW;
  d1_c: d1_m_can_attach_wagon1;
  return CB_RESULT_ATTACH_DISALLOW;
}

switch (FEAT_TRAINS, PARENT, d1_m_start_stop,
  count_veh_id(d1_m) % 2)
{
  0: return 0xFF;
  return string(STR_CANNOT_START);
}

switch (FEAT_TRAINS, SELF, d1_m_visual_effect_and_powered1,
  (last_computed_result - count_veh_id(d1_m)) % 2)
{
  0: return visual_effect_and_powered(VISUAL_EFFECT_DIESEL, -2,
    DISABLE_WAGON_POWER);
  return visual_effect_and_powered(VISUAL_EFFECT_DIESEL, 7,
    DISABLE_WAGON_POWER);
}

switch (FEAT_TRAINS, PARENT, d1_m_visual_effect_and_powered,
  count_veh_id(d1_m))
{
  d1_m_visual_effect_and_powered1;
}

switch (FEAT_TRAINS, SELF, d1_cargo_capacity,
  build_year >= 1967)
{
  1: return 72;
  return 77;
}

