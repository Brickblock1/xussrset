// 3 диапазона: 1963-67, 1967-68, 1969-88 по году постройки
switch (FEAT_TRAINS, SELF, d1_c_get_spriteset1,
  (build_year >= 1967) +
  (build_year >= 1969)
)
{
  0: d1_c_spriteset;
  1: d1_c_v20_spriteset;
  d1_c_v30_spriteset;
}

// Если рисуем на карте и следующий в цепочке вагон скрыт, то
// отдаём пустышку
switch (FEAT_TRAINS, SELF, d1_c_get_spriteset,
  is_drawn_in_viewport() && is_hidden_at(1))
{
  1: dummy_spriteset;
  d1_c_get_spriteset1;
}

// Определяем необходимость разворота моторного вагона по чётности его позиции
// от начала состава
// 3 диапазона: 1963-67, 1967-68, 1969-88 по году постройки
switch (FEAT_TRAINS, SELF, d1_m_get_spriteset2,
  ((last_computed_result - count_veh_id(d1_m)) % 2) +
  ((build_year >= 1967) * 2) +
  ((build_year >= 1969) * 2)
)
{
  0: d1_m_spritegroup;
  1: d1_rm_spriteset;

  2: d1_m_v20_spritegroup;
  3: d1_rm_v20_spriteset;

  4: d1_m_v30_spritegroup;
  d1_rm_v30_spriteset;
}

switch (FEAT_TRAINS, PARENT, d1_m_get_spriteset1,
  count_veh_id(d1_m))
{
  d1_m_get_spriteset2;
}

// Если рисуем на карте и следующий в цепочке вагон скрыт, то
// отдаём пустышку
switch (FEAT_TRAINS, SELF, d1_m_get_spriteset,
  is_drawn_in_viewport() && is_hidden_at(1))
{
