{
  s15_hidden_template(4, 57, 0)
} 

spriteset (d1_rh_hidden_spriteset, IMAGEFILE)
{
  s15_hidden_template(4, 144, 1)
} 

spriteset (d1_c_hidden_spriteset, IMAGEFILE)
{
  s15_hidden_template(4, 231, 0)
} 

// покупка
spriteset (d1_h_purchase_spriteset, IMAGEFILE)
{
  s15_purchase_template(292, 57, 4)
}

spriteset (d1_c_purchase_spriteset, IMAGEFILE)
{
  s15_purchase_template(292, 231, 4)
}

// головной: погрузка/перемещение
spriteset (d1_h_loading_spriteset, IMAGEFILE)
{
  s15a_template(4, 57, 0)
} 

spriteset (d1_h_traveling_spriteset, IMAGEFILE)
{
  s15a_template(458, 57, 0)
} 

spritegroup d1_h_spritegroup
{
  loading: d1_h_loading_spriteset;
  loaded: d1_h_traveling_spriteset;
}


// развёрнутая голова
spriteset (d1_rh_spriteset, IMAGEFILE)
{
  s15r_template(4, 144, 0)
} 

// прицепной
spriteset (d1_c_spriteset, IMAGEFILE)
{
  s15_template(4, 231, 0)
} 

#undef IMAGEFILE
#define IMAGEFILE  "src/d1/d1-1969-1988.png"

spriteset (d1_h_2_hidden_spriteset, IMAGEFILE)
{
  s15_hidden_template(4, 57, 0)
} 

spriteset (d1_rh_2_hidden_spriteset, IMAGEFILE)
{
  s15_hidden_template(4, 144, 1)
} 

spriteset (d1_c_2_hidden_spriteset, IMAGEFILE)
{
  s15_hidden_template(4, 231, 0)
} 

// покупка
spriteset (d1_h_2_purchase_spriteset, IMAGEFILE)
{
  s15_purchase_template(292, 57, 4)
}

spriteset (d1_c_2_purchase_spriteset, IMAGEFILE)
{
  s15_purchase_template(292, 231, 4)
}

// головной: погрузка/перемещение
spriteset (d1_h_2_loading_spriteset, IMAGEFILE)
{
  s15_template(4, 57, 0)
} 

spriteset (d1_h_2_traveling_spriteset, IMAGEFILE)
{
  s15_template(458, 57, 0)
} 

spritegroup d1_h_2_spritegroup
{
  loading: d1_h_2_loading_spriteset;
  loaded: d1_h_2_traveling_spriteset;
}


// развёрнутая голова
spriteset (d1_rh_2_spriteset, IMAGEFILE)
{
  s15r_template(4, 144, 0)
