  11: _2m62_r_v6_spriteset;
  12: _2m62_v7_spritegroup;
  _2m62_r_v7_spriteset;
}

switch (FEAT_TRAINS, PARENT, _2m62_get_spriteset1,
  count_veh_id(_2m62))
{
  _2m62_get_spriteset2;
}

// Если рисуем на карте и следующий в цепочке вагон скрыт, то
// отдаём пустышку
switch (FEAT_TRAINS, SELF, _2m62_get_spriteset,
  is_drawn_in_viewport() && is_hidden_at(1))
{
  1: dummy_spriteset;
  _2m62_get_spriteset1;
}

// Что присоединяем?
switch (FEAT_TRAINS, SELF, _2m62_can_attach_wagon,
  0)
{
  return CB_RESULT_ATTACH_ALLOW;
}

switch (FEAT_TRAINS, PARENT, _2m62_start_stop,
  0)
{
  return CB_RESULT_NO_TEXT;
}

switch (FEAT_TRAINS, SELF, _2m62_cargo_subtype_text2,
  current_year >= 1990)
{
  1: string(STR_REFIT_BELARUSSIAN_RAILWAY);
  return CB_RESULT_NO_TEXT;
}

switch (FEAT_TRAINS, SELF, _2m62_cargo_subtype_text,
  cargo_subtype)
{
  0: string(STR_REFIT_RAL_6020);
  1: string(STR_REFIT_GREEN_GRASS);
  2: _2m62_cargo_subtype_text2;
  3: string(STR_REFIT_KALININGRAD_RAILWAY);
  4: string(STR_REFIT_OCTOBER_RAILWAY);
  5: string(STR_REFIT_LG_OLD);
  6: string(STR_REFIT_LG_NEW);
  return CB_RESULT_NO_TEXT;
}

item (FEAT_TRAINS, _2m62) 
{
  property
  {
    name: string(STR_2M62_NAME);
    climates_available: get_climates_available();
    introduction_date: date(1976, 1, 1);
    vehicle_life: 30; // срок службы
    model_life: 30; // VEHICLE_NEVER_EXPIRES;
    reliability_decay: 20;
    cargo_allow_refit: [PASS];
    cost_factor: get_diesel_cost_factor();
    running_cost_factor: get_diesel_running_cost_factor();
    sprite_id: SPRITE_ID_NEW_TRAIN;
    speed: 100 km/h;
    misc_flags: bitmask(TRAIN_FLAG_MU);
    refit_cost: 0;
    track_type: RAIL;
    ai_special_flag: AI_FLAG_PASSENGER;
    power: 1545 hpM;
    running_cost_base: RUNNING_COST_DIESEL;
    cargo_capacity: 1;
    weight: 120 ton;
    engine_class: ENGINE_CLASS_DIESEL;
    tractive_effort_coefficient: 0.1666667;
    shorten_vehicle: SHORTEN_TO_8_8;
    visual_effect_and_powered: diesel_visual_effect_and_powered(0);
  }
  graphics {
    default: _2m62_get_spriteset;
    purchase: _2m62_purchase_spriteset;
    articulated_part: articulated_part_dummy2;
    can_attach_wagon: _2m62_can_attach_wagon;
    start_stop: _2m62_start_stop;
    additional_text: return string(STR_2M62_PURCHASE_HINT);
    cargo_subtype_text: _2m62_cargo_subtype_text;
    cargo_capacity: return 0;
  }
}
