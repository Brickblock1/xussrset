  ((num_vehs_in_consist - count_veh_id(dr1a_c) * 2 - count_veh_id(dr1a_n) * 2 - count_veh_id(_2m62u) * 2) == 0) && ((count_veh_id(dr1a_n) + count_veh_id(dr1a_c)) >= 1)
)
{
  1: _2m62u_get_spriteset_DRB1;
