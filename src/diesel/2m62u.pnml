  13: _2m62u_r_v7_spriteset;
  14: _2m62u_v8_spritegroup;
  15: _2m62u_r_v8_spriteset;
  16: _2m62u_v9_spritegroup;
  _2m62u_r_v9_spriteset;
}

switch (FEAT_TRAINS, PARENT, _2m62u_get_spriteset1,
  count_veh_id(_2m62u))
{
  _2m62u_get_spriteset2;
}

// Если рисуем на карте и следующий в цепочке вагон скрыт, то
// отдаём пустышку
switch (FEAT_TRAINS, SELF, _2m62u_get_spriteset,
  is_drawn_in_viewport() && is_hidden_at(1))
{
  1: dummy_spriteset;
  _2m62u_get_spriteset1;
}

// Что присоединяем?
switch (FEAT_TRAINS, SELF, _2m62u_can_attach_wagon,
  0)
{
  return CB_RESULT_ATTACH_ALLOW;
}

switch (FEAT_TRAINS, PARENT, _2m62u_start_stop,
  0)
{
  return CB_RESULT_NO_TEXT;
}

switch (FEAT_TRAINS, SELF, _2m62u_cargo_subtype_text2,
  current_year >= 1990)
{
  1: string(STR_REFIT_BELARUSSIAN_RAILWAY);
  return CB_RESULT_NO_TEXT;
}

switch (FEAT_TRAINS, SELF, _2m62u_cargo_subtype_text,
  cargo_subtype)
{
  0: string(STR_REFIT_RAL_6020);
  1: string(STR_REFIT_GREEN_GRASS);
  2: _2m62u_cargo_subtype_text2;
  3: string(STR_REFIT_BELARUSSIAN_RAILWAY_DDB1_DRB1);
  4: string(STR_REFIT_LG_NEW);
  5: string(STR_REFIT_LDZ_GREEN);
  6: string(STR_REFIT_LDZ_RED);
  7: string(STR_REFIT_KALININGRAD_RAILWAY);
  8: string(STR_REFIT_OCTOBER_RAILWAY);
  return CB_RESULT_NO_TEXT;
}

// Макс. скорость: 100 км/ч
#define MAX_SPEED 100

switch (FEAT_TRAINS, SELF, _2m62u_purchase_speed,
  MAX_SPEED)
{
  return;
}

switch (FEAT_TRAINS, SELF, _2m62u_speed,
  is_penalise_speed() ? get_penalised_speed(MAX_SPEED) : MAX_SPEED)
{
  return;
}

#undef MAX_SPEED

switch (FEAT_TRAINS, SELF, _2m62u_bitmask_vehicle_info3,
[
  STORE_TEMP(LOAD_TEMP(0) - count_veh_id(_2m62u), 0),
  ((last_computed_result == _2m62u) &&
    (position_in_consist == 2 * LOAD_TEMP(0)) && (LOAD_TEMP(0) < 8)) ||
    ((last_computed_result == _3m62u) &&
    (position_in_consist == 2 * (LOAD_TEMP(0) + 3)) && (LOAD_TEMP(0) < 4))
])
{
  1: return 0;
  return FLAG_PENALISE_SPEED;
}

switch (FEAT_TRAINS, PARENT, _2m62u_bitmask_vehicle_info2,
[
  STORE_TEMP(count_veh_id(_2m62u), 0),
  vehicle_type_id
])
{
  _2m62u_bitmask_vehicle_info3;
}

switch (FEAT_TRAINS, SELF, _2m62u_bitmask_vehicle_info,
  position_in_consist == 0)
{
  1: return 0;
  _2m62u_bitmask_vehicle_info2;
}

switch (FEAT_TRAINS, SELF, _2m62u_cost_factor,
  (current_year >= 1991) +
  (current_year >= 1994) +
  (current_year >= 1997))
{
  1: return 65;
  2: return 67;
  3: return 69;
  return 61;
}

