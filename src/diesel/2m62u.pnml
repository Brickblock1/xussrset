switch (FEAT_TRAINS, SELF, _2m62u_get_spriteset2,
  ((last_computed_result - count_veh_id(_2m62u)) % 2) +
  (cargo_subtype * 2)
)
{
  0: _2m62u_spritegroup;
  1: _2m62u_r_spriteset;
  2: _2m62u_v2_spritegroup;
  3: _2m62u_r_v2_spriteset;
  4: _2m62u_v3_spritegroup;
  5: _2m62u_r_v3_spriteset;
  6: _2m62u_v4_spritegroup;
