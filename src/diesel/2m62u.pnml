    length: 8;
    visual_effect_and_powered: diesel_visual_effect_and_powered(0);
  }
  graphics {
    default: _2m62u_get_spriteset;
    purchase: _2m62u_purchase_spriteset;
    articulated_part: articulated_part_dummy2;
    can_attach_wagon: _2m62u_can_attach_wagon;
    start_stop: _2m62u_start_stop;
    additional_text: return string(STR_2M62U_PURCHASE_HINT);
    cargo_subtype_text: _2m62u_cargo_subtype_text;
    cargo_capacity: return 0;
    speed: _2m62u_speed;
    purchase_speed: _2m62u_purchase_speed;
    bitmask_vehicle_info: _2m62u_bitmask_vehicle_info;
    cost_factor: _2m62u_cost_factor;
  }
