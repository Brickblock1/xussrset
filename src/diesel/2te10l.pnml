switch (FEAT_TRAINS, SELF, _2te10l_get_spriteset2,
  ((last_computed_result - count_veh_id(_2te10l)) % 2) +
  ((current_year >= 1963) * 2) +
  ((current_year >= 1972) * 4) +
  cargo_subtype * 2 * (current_year >= 1963)
)
{
  0: _2te10l_spritegroup;
  1: _2te10l_r_spriteset;
  2: _2te10l_v2_spritegroup;
  3: _2te10l_r_v2_spriteset;
  4: _2te10l_v3_spritegroup;
  5: _2te10l_r_v3_spriteset;
  6: _2te10l_v4_spritegroup;
  7: _2te10l_r_v4_spriteset;
  8: _2te10l_v5_spritegroup;
  _2te10l_r_v5_spriteset;
}

switch (FEAT_TRAINS, PARENT, _2te10l_get_spriteset1,
  count_veh_id(_2te10l))
{
  _2te10l_get_spriteset2;
}

// Если рисуем на карте и следующий в цепочке вагон скрыт, то
// отдаём пустышку
switch (FEAT_TRAINS, SELF, _2te10l_get_spriteset,
  is_drawn_in_viewport() && is_hidden_at(1))
{
  1: dummy_spriteset;
  _2te10l_get_spriteset1;
}

// покупка
switch (FEAT_TRAINS, SELF, _2te10l_get_purchase_spriteset,
  (current_year >= 1963) +
  (current_year >= 1972)
)
{
  0: _2te10l_purchase_spriteset;
  1: _2te10l_v2_purchase_spriteset;
  _2te10l_v4_purchase_spriteset;
}

// Что присоединяем?
switch (FEAT_TRAINS, SELF, _2te10l_can_attach_wagon,
  0)
{
  return CB_RESULT_ATTACH_ALLOW;
}

switch (FEAT_TRAINS, PARENT, _2te10l_start_stop,
  0)
{
  return CB_RESULT_NO_TEXT;
}

switch (FEAT_TRAINS, SELF, _2te10l_cargo_subtype_text2,
  cargo_subtype)
{
  0: string(STR_2TE10L_REFIT_V1);
  1: string(STR_2TE10L_REFIT_V2);
  return CB_RESULT_NO_TEXT;
}

switch (FEAT_TRAINS, SELF, _2te10l_cargo_subtype_text,
  current_year >= 1963)
{
  1: _2te10l_cargo_subtype_text2;
  return CB_RESULT_NO_TEXT;
//  CB_FAILED;
}

item (FEAT_TRAINS, _2te10l)
{
  property
  {
    name: string(STR_2TE10L_NAME);
    climates_available: bitmask(CLIMATE_TEMPERATE, CLIMATE_ARCTIC, CLIMATE_TROPICAL);
    introduction_date: date(1961, 1, 1);
    vehicle_life: 30; // срок службы
    model_life: 30; // VEHICLE_NEVER_EXPIRES;
    reliability_decay: 20;
    refittable_cargo_classes: bitmask(CC_PASSENGERS);
//    loading_speed: 12; // скорость погрузки/выгрузки, пассажиров
    cost_factor: 2;
    running_cost_factor: 10;
    sprite_id: SPRITE_ID_NEW_TRAIN;
    speed: 100 km/h;
    misc_flags: bitmask(TRAIN_FLAG_MU);
    refit_cost: 0;
    track_type: RAIL;
    ai_special_flag: AI_FLAG_CARGO;
    power: 2310 hpM;
    running_cost_base: RUNNING_COST_DIESEL;
    dual_headed: 0;
    cargo_capacity: 1;
    weight: 128 ton;
    ai_engine_rank: 0;
    engine_class: ENGINE_CLASS_DIESEL;
    extra_power_per_wagon: 0 kW;
    tractive_effort_coefficient: 0.20328443877;
    air_drag_coefficient: 0.06;
    shorten_vehicle: SHORTEN_TO_8_8;
    extra_weight_per_wagon: 0;
    bitmask_vehicle_info: 0;
    visual_effect_and_powered:
      visual_effect_and_powered(VISUAL_EFFECT_DIESEL, 1, DISABLE_WAGON_POWER);
  }
  graphics {
    default: _2te10l_get_spriteset;
    purchase: _2te10l_get_purchase_spriteset;
    articulated_part: articulated_part_dummy2;
    can_attach_wagon: _2te10l_can_attach_wagon;
    start_stop: _2te10l_start_stop;
    additional_text: return string(STR_2TE10L_PURCHASE_HINT);
    cargo_subtype_text: _2te10l_cargo_subtype_text;
    cargo_capacity: return 0;
  }
}
