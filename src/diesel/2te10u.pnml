switch (FEAT_TRAINS, SELF, _2te10u_get_spriteset,
  is_drawn_in_viewport() && is_hidden_at(1))
{
  1: dummy_spriteset;
  _2te10u_get_spriteset_t;
}

switch (FEAT_TRAINS, SELF, _2te10u_cargo_subtype_text,
  cargo_subtype)
{
  0: string(STR_REFIT_TTD_63);
  1: string(STR_REFIT_TTD_93);
  2: string(STR_REFIT_TTD_B5);
  3: string(STR_REFIT_TTD_14);
  return CB_RESULT_NO_TEXT;
}

