// расчёт ориентации секций локомотива.

switch (FEAT_TRAINS, SELF, _2te10u_get_spriteset_l,
  cargo_subtype)
{
  0: _2te10u_spritegroup;
  1: _2te10u_v2_spritegroup;
  2: _2te10u_v3_spritegroup;
     _2te10u_v4_spritegroup;
}

