  7: _2te10utk_r_v4_spriteset;
  8: _2te10utk_v5_spritegroup;
  9: _2te10utk_r_v5_spriteset;
  10: _2te10utk_v6_spritegroup;
  _2te10utk_r_v6_spriteset;
}

switch (FEAT_TRAINS, PARENT, _2te10utk_get_spriteset1,
  count_veh_id(_2te10utk))
{
  _2te10utk_get_spriteset2;
}

// Если рисуем на карте и следующий в цепочке вагон скрыт, то
// отдаём пустышку
switch (FEAT_TRAINS, SELF, _2te10utk_get_spriteset,
  is_drawn_in_viewport() && is_hidden_at(1))
{
  1: dummy_spriteset;
  _2te10utk_get_spriteset1;
}

// Что присоединяем?
switch (FEAT_TRAINS, SELF, _2te10utk_can_attach_wagon,
  0)
{
  return CB_RESULT_ATTACH_ALLOW;
}

switch (FEAT_TRAINS, PARENT, _2te10utk_start_stop,
  0)
{
  return CB_RESULT_NO_TEXT;
}

switch (FEAT_TRAINS, SELF, _2te10utk_cargo_subtype_text,
  cargo_subtype)
{
  0: string(STR_2TE10UTK_REFIT_V1);
  1: string(STR_2TE10UTK_REFIT_V2);
  2: string(STR_2TE10UTK_REFIT_V3);
  3: string(STR_2TE10UTK_REFIT_V4);
  4: string(STR_2TE10UTK_REFIT_V5);
  5: string(STR_2TE10UTK_REFIT_V6);
  return CB_RESULT_NO_TEXT;
}

