switch (FEAT_TRAINS, SELF, _2te10utk_get_spriteset2,
  ((last_computed_result - count_veh_id(_2te10utk)) % 2) +
  cargo_subtype * 2
)
{
  0: _2te10utk_spritegroup;
  1: _2te10utk_r_spriteset;
  2: _2te10utk_v2_spritegroup;
  3: _2te10utk_r_v2_spriteset;
  4: _2te10utk_v3_spritegroup;
  5: _2te10utk_r_v3_spriteset;
