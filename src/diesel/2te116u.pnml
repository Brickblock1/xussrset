    misc_flags: bitmask(TRAIN_FLAG_TILT, TRAIN_FLAG_MU);
    track_type: get_normal_track_type();
    ai_special_flag: AI_FLAG_CARGO;
    power: 2700 hpM;
    running_cost_base: RUNNING_COST_DIESEL;
    weight: 138 ton;
    engine_class: ENGINE_CLASS_DIESEL;
    tractive_effort_coefficient: get_tec(324.0, 138);
    length: 8;
    visual_effect_and_powered: diesel_visual_effect_and_powered(0);
    cargo_allow_refit: [GOOD];
    default_cargo_type: GOOD;
    cargo_capacity: 1;
  }
  graphics {
    default: _2te116u_sprites;
    purchase: _2te116u_purchase_sprites;
    articulated_part: articulated_part_dummy3;
    can_attach_wagon: any_can_attach_wagon;
    start_stop: any_start_stop;
    additional_text: return string(STR_2TE116U_PURCHASE_HINT);
    speed: _2te116u_speed;
    purchase_speed: _2te116u_purchase_speed;
    bitmask_vehicle_info: _2te116u_bitmask_vehicle_info;
    cargo_subtype_text: _2te116u_cargo_subtype_text;
    cargo_capacity: return 0;
  }
}

if (enable_long_names) {
