  s11_template(505, 166, 0)
} 

#undef IMAGEFILE

// покупка
switch (FEAT_TRAINS, SELF, _2te116u_purchase_sprites,
  (current_year >= 2009) +
  (current_year >= 2011) )
{
  0: _2te116u_v1_purchase_sprites;
  1: _2te116u_v2_purchase_sprites;
     _2te116u_v3_purchase_sprites;
}  

switch (FEAT_TRAINS, SELF, _2te116u_sprites_left,
  (LOAD_TEMP(2) >= date(2009,1,1)) +
  (build_year >= 2011) )
{
  0: _2te116u_spritegroup;
  1: _2te116u_v2_spritegroup;
  2: _2te116u_v3_spritegroup;
     align_11_sprites;
}

switch (FEAT_TRAINS, SELF, _2te116u_sprites_right,
  (LOAD_TEMP(2) >= date(2009,1,1)) +
  (build_year >= 2011) )
{
  0: _2te116u_r_spriteset;
  1: _2te116u_r_v2_spriteset;
  2: _2te116u_r_v3_spriteset;
     align_11_sprites;
}

engine_direction_template2(_2te116u, _2te116, ) 

long_vehicle(_2te116u)

engine_speed(_2te116u, 100)

engine_penalise_speed(_2te116u, 4)

switch (FEAT_TRAINS, SELF, _2te116u_cargo_subtype_text,
  (build_year >= 2011) +
  (cargo_subtype * 2))
{
  0: return string(STR_REFIT_FACTORY);
  1: return string(STR_REFIT_RZD_PID);
     return CB_RESULT_NO_TEXT;
}

item (FEAT_TRAINS, _2te116u)
{
  property {
    name: string(STR_2TE116U_NAME);
    climates_available: get_climates_available();
    introduction_date: date(get_loc_year(2007), 1, 1);
    vehicle_life: 30;
