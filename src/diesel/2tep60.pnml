switch (FEAT_TRAINS, SELF, _2tep60_get_spriteset2,
  ((last_computed_result - count_veh_id(_2tep60)) % 2) +
  ((build_year >= 1966) * 2) +
  ((build_year >= 1970) * 4) +
  cargo_subtype * 2
)
{
  0: _2tep60_spritegroup;
  1: _2tep60_r_spriteset;
  2: _2tep60_v2_spritegroup; //--
  3: _2tep60_r_v2_spriteset;
  4: _2tep60_v3_spritegroup;
  5: _2tep60_r_v3_spriteset;
  6: _2tep60_v4_spritegroup; //--
  7: _2tep60_r_v4_spriteset;
  8: _2tep60_v5_spritegroup;    
  _2tep60_r_v5_spriteset;
}

switch (FEAT_TRAINS, PARENT, _2tep60_get_spriteset1,
  count_veh_id(_2tep60))
{
  _2tep60_get_spriteset2;
}

// Если рисуем на карте и следующий в цепочке вагон скрыт, то
// отдаём пустышку
switch (FEAT_TRAINS, SELF, _2tep60_get_spriteset,
  is_drawn_in_viewport() && is_hidden_at(1))
{
  1: dummy_spriteset;
  _2tep60_get_spriteset1;
}

// покупка
switch (FEAT_TRAINS, SELF, _2tep60_get_purchase_spriteset,
  (current_year >= 1966) +
  (current_year >= 1970)
)
{
  0: _2tep60_purchase_spriteset;
  1: _2tep60_v2_purchase_spriteset;
  _2tep60_v4_purchase_spriteset;
}

// Что присоединяем?
switch (FEAT_TRAINS, SELF, _2tep60_can_attach_wagon,
  0)
{
  return CB_RESULT_ATTACH_ALLOW;
}

switch (FEAT_TRAINS, PARENT, _2tep60_start_stop,
  0)
{
  return CB_RESULT_NO_TEXT;
}

switch (FEAT_TRAINS, SELF, _2tep60_cargo_subtype_text2,
  (build_year >= 1966)
)
{
  1: string(STR_REFIT_V2);
  return CB_RESULT_NO_TEXT;
}

switch (FEAT_TRAINS, SELF, _2tep60_cargo_subtype_text,
  cargo_subtype)
{
  0: string(STR_REFIT_V1);
  1: _2tep60_cargo_subtype_text2;
  return CB_RESULT_NO_TEXT;
}

item (FEAT_TRAINS, _2tep60) 
{
  property
  {
    name: string(STR_2TEP60_NAME);
    climates_available: get_climates_available();
    introduction_date: date(1965, 1, 1);
    vehicle_life: 20; // срок службы
    model_life: 20; // VEHICLE_NEVER_EXPIRES;
    reliability_decay: 20;
    cargo_allow_refit: [PASS];
    cost_factor: get_diesel_cost_factor();
    running_cost_factor: get_diesel_running_cost_factor();
    sprite_id: SPRITE_ID_NEW_TRAIN;
    speed: 160 km/h;
    misc_flags: bitmask(TRAIN_FLAG_MU);
    refit_cost: 0;
    track_type: RAIL;
    ai_special_flag: AI_FLAG_PASSENGER;
    power: 2310 hpM;
    running_cost_base: RUNNING_COST_DIESEL;
    cargo_capacity: 1;
    weight: 127 ton;
    engine_class: ENGINE_CLASS_DIESEL;
    tractive_effort_coefficient: 0.09882693;
    shorten_vehicle: SHORTEN_TO_8_8;
    visual_effect_and_powered: diesel_visual_effect_and_powered(0);
  }
  graphics {
    default: _2tep60_get_spriteset;
    purchase: _2tep60_get_purchase_spriteset;
    articulated_part: articulated_part_dummy3;
    can_attach_wagon: _2tep60_can_attach_wagon;
    start_stop: _2tep60_start_stop;
    additional_text: return string(STR_2TEP60_PURCHASE_HINT);
    speed: speed_after20_160to130;
    cargo_subtype_text: _2tep60_cargo_subtype_text;
    cargo_capacity: return 0;
  }
}
