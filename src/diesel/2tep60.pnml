switch (FEAT_TRAINS, SELF, _2tep60_get_spriteset_l,
  ((build_year >= 1966)) +
  ((build_year >= 1970) * 2) +
  cargo_subtype 
)
{
  0: _2tep60_spritegroup;
  1: _2tep60_v2_spritegroup;          
  2: _2tep60_v3_spritegroup;
  3: _2tep60_v4_spritegroup;        
     _2tep60_v5_spritegroup;    
}

