  8: _3m62u_b_v3_spriteset;
  9: _3m62u_v4_spritegroup;
  10: _3m62u_c_v4_spriteset;
  _3m62u_b_v4_spriteset;
}

switch (FEAT_TRAINS, PARENT, _3m62u_get_spriteset1,
  count_veh_id(_3m62u))
{
  _3m62u_get_spriteset2;
}

// Если рисуем на карте и следующий в цепочке вагон скрыт, то
// отдаём пустышку
switch (FEAT_TRAINS, SELF, _3m62u_get_spriteset,
  is_drawn_in_viewport() && is_hidden_at(1))
{
  1: dummy_spriteset;
  _3m62u_get_spriteset1;
}

// Что присоединяем?
switch (FEAT_TRAINS, SELF, _3m62u_can_attach_wagon,
  0)
{
  return CB_RESULT_ATTACH_ALLOW;
}

switch (FEAT_TRAINS, PARENT, _3m62u_start_stop,
  0)
{
  return CB_RESULT_NO_TEXT;
}

switch (FEAT_TRAINS, SELF, _3m62u_cargo_subtype_text2,
  current_year >= 1990)
{
  1: string(STR_3M62U_REFIT_V3);
  return CB_RESULT_NO_TEXT;
}

switch (FEAT_TRAINS, SELF, _3m62u_cargo_subtype_text,
  cargo_subtype)
{
  0: string(STR_3M62U_REFIT_V1);
  1: string(STR_3M62U_REFIT_V2);
  2: _3m62u_cargo_subtype_text2;
  3: string(STR_3M62U_REFIT_V4);
  return CB_RESULT_NO_TEXT;
}

