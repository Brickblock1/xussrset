  (cargo_subtype * 3)
)
{
  0: _3m62u_spritegroup;
  1: _3m62u_c_spriteset;
  2: _3m62u_b_spriteset;
  3: _3m62u_v2_spritegroup;
  4: _3m62u_c_v2_spriteset;
