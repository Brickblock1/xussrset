// расчёт ориентации секций локомотива. 

switch (FEAT_TRAINS, SELF, _3te10m_get_spriteset_l,
  ((LOAD_TEMP(2) >= date(1985,1,1)) * 2) +
  cargo_subtype)
{
  0: _3te10m_spritegroup;
  1: _3te10m_v2_spritegroup;
  2: _3te10m_v3_spritegroup;
     _3te10m_v4_spritegroup;
}

switch (FEAT_TRAINS, SELF, _3te10m_get_spriteset_r,
  ((LOAD_TEMP(2) >= date(1985,1,1)) * 2) +
  cargo_subtype)
{
  0: _3te10m_rb_spriteset;
  1: _3te10m_rb_v2_spriteset;
  2: _3te10m_rb_v3_spriteset;
     _3te10m_rb_v4_spriteset;
}  

engine_direction_template3m(_3te10m, _2te10m, _3te10m_m) 

// Если рисуем на карте и следующий в цепочке вагон скрыт, то
// отдаём пустышку
switch (FEAT_TRAINS, SELF, _3te10m_get_spriteset,
  is_drawn_in_viewport() && is_hidden_at(1))
{
  1: dummy_spriteset;
  _3te10m_get_spriteset_t;
}

// покупка
switch (FEAT_TRAINS, SELF, _3te10m_get_purchase_spriteset,
  (current_year >= 1985)
)
{
  0: _3te10m_purchase_spriteset;
  _3te10m_v3_purchase_spriteset;
}

// Если хотя бы 3 не следуют др. за др., то не выпускать
switch (FEAT_TRAINS, PARENT, _3te10m_start_stop2,
[
  set_offset_to(2),
  STORE_TEMP((prev_vehicle_type_id() == _3te10m) || (prev_vehicle_type_id() == _3te10m_m), 0),
  set_offset_to(4),
  ((prev_vehicle_type_id() == _3te10m) || (prev_vehicle_type_id() == _3te10m_m)) && LOAD_TEMP(0)
])
{
  1: any_start_stop;
  return string(STR_START_STOP_NEED_AT_LEAST_3_CONSECUTIVE_ENGINE);
}

// Если локомотивов меньше 3, то не выпускать
switch (FEAT_TRAINS, PARENT, _3te10m_start_stop,
  (count_veh_id(_3te10m) >= 2) && (count_veh_id(_3te10m_m) >= 1))
{
  1: _3te10m_start_stop2;
  return string(STR_START_STOP_NEED_2AND1_OR_MORE_ENGINE);
}

switch (FEAT_TRAINS, SELF, _3te10m_cargo_subtype_text,
  cargo_subtype)
{
  0: string(STR_REFIT_V1);
  1: string(STR_REFIT_V2);
  return CB_RESULT_NO_TEXT;
}


engine_speed(_3te10m, 100)

engine_penalise_speed7(_3te10m, _3te10m_m, _3te10u, _2te10m, _2te10u, _2te116, _2te116u, 8) 

item (FEAT_TRAINS, _3te10m)
{
  property
  {
    name: string(STR_3TE10M_NAME);
    climates_available: get_climates_available();
    introduction_date: date(get_loc_year(1979), 1, 1);
    vehicle_life: 30; // срок службы
    model_life: get_model_life(1979,1990);
    retire_early: get_retire_early(1979,1990); // VEHICLE_NEVER_EXPIRES;
    reliability_decay: 20;
    cargo_allow_refit: [GOOD];
    default_cargo_type: GOOD;
    cost_factor: get_diesel_cost_factor();
    running_cost_factor: get_diesel_running_cost_factor();
    sprite_id: SPRITE_ID_NEW_TRAIN;
    speed: 100 km/h;
    misc_flags: bitmask(TRAIN_FLAG_TILT, TRAIN_FLAG_MU);
    refit_cost: 0;
    track_type: get_normal_track_type();
    ai_special_flag: AI_FLAG_CARGO;
    power: 2273 hpM;
    running_cost_base: RUNNING_COST_DIESEL;
    cargo_capacity: 1;
    weight: 138 ton;
    engine_class: ENGINE_CLASS_DIESEL;
    tractive_effort_coefficient: get_tec(245.0, 138);
    length: 8;
    visual_effect_and_powered: diesel_visual_effect_and_powered(0);
  }
  graphics {
    default: _3te10m_get_spriteset;
    purchase: _3te10m_get_purchase_spriteset;
    articulated_part: articulated_part_dummy2;
    can_attach_wagon: any_can_attach_wagon;
    start_stop: _3te10m_start_stop;
    additional_text: return string(STR_3TE10M_PURCHASE_HINT);
    cargo_subtype_text: _3te10m_cargo_subtype_text;
    cargo_capacity: return 0;
    speed: _3te10m_speed;
    purchase_speed: _3te10m_purchase_speed;
    bitmask_vehicle_info: _3te10m_bitmask_vehicle_info;
    cost_factor: return 81;
  }
}
