{
  s10_template(4, 82, 0)
} 

spritegroup _3te10u_spritegroup
{
  loading: _3te10u_loading_spriteset;
  loaded: _3te10u_traveling_spriteset;
}

// развёрнутый
spriteset (_3te10u_rb_spriteset, IMAGEFILE)
