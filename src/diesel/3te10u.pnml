 // 3te10u

// Спрайты

#define IMAGEFILE  "src/diesel/3te10u-1990.png"

// покупка
spriteset (_3te10u_purchase_spriteset, IMAGEFILE)
{
  s10_purchase_template(4, 16, -4)
}

