// отдаём пустышку
switch (FEAT_TRAINS, SELF, chme3_get_spritegroup1,
  is_drawn_in_viewport() && is_hidden_at(1))
{
  1: dummy_spriteset;
  chme3_get_spritegroup2;
}

switch (FEAT_TRAINS, SELF, chme3_get_spritegroup,
[  STORE_TEMP(date_of_last_service, 2) ])
{
  chme3_get_spritegroup1;
}

switch (FEAT_TRAINS, SELF, chme3_cargo_subtype_text2,
  cargo_subtype)
{
  0: string(STR_REFIT_TTD_53);
  1: string(STR_REFIT_TTD_5A);
  2: string(STR_REFIT_UKRAINIAN_RAILWAY);
     return CB_RESULT_NO_TEXT;
}

switch (FEAT_TRAINS, SELF, chme3_cargo_subtype_text1,
  cargo_subtype)
{
  0: string(STR_REFIT_TTD_53);
  1: string(STR_REFIT_TTD_5A);
     return CB_RESULT_NO_TEXT;
}

switch (FEAT_TRAINS, SELF, chme3_cargo_subtype_text,
  (current_year >= 1991) || (build_year >= 1991))
{
  1: chme3_cargo_subtype_text2;
     chme3_cargo_subtype_text1;
}

engine_penalise_speed(chme3, 2)

item (FEAT_TRAINS, chme3)
{
  property
  {
    name: string(STR_CHME3_NAME);
    climates_available: get_climates_available();
    introduction_date: date(get_loc_year(1964), 1, 1);
    vehicle_life: 30; // срок службы
    model_life: get_model_life(1964,1988);
    retire_early: get_retire_early(1964,1988); // VEHICLE_NEVER_EXPIRES;
    reliability_decay: 20;
    cost_factor: 68;
    running_cost_factor: get_diesel_running_cost_factor();
    sprite_id: SPRITE_ID_NEW_TRAIN;
    speed: 95 km/h;
    misc_flags: bitmask(TRAIN_FLAG_TILT, TRAIN_FLAG_MU);
    track_type: get_normal_track_type();
    power: 970 hpM;
    running_cost_base: RUNNING_COST_DIESEL;
    weight: 123 ton;
    engine_class: ENGINE_CLASS_DIESEL;
    tractive_effort_coefficient: get_tec(255.0, 123);
    length: 8;
    visual_effect_and_powered: diesel_visual_effect_and_powered(0);
    cargo_allow_refit: [GOOD];
    default_cargo_type: GOOD;
    cargo_capacity: 1;
  }
  graphics {
    default: chme3_get_spritegroup;
    purchase: chme3_get_purchase_spriteset;
    articulated_part: articulated_part_dummy2;
    can_attach_wagon: any_can_attach_wagon;
    start_stop: any_start_stop;
    additional_text: return string(STR_CHME3_PURCHASE_HINT);
    bitmask_vehicle_info: chme3_bitmask_vehicle_info;
    cargo_subtype_text: chme3_cargo_subtype_text;
    cargo_capacity: return 0;
  }
}
