 // chme3

// Спрайты

// 2 окраса в зависимости от года выпуска

#define IMAGEFILE  "src/diesel/chme3.png"

// покупка
spriteset (chme3_purchase_spriteset, IMAGEFILE)
{
  new_purchase_template(0, 0)
}

spriteset (chme3_v2_purchase_spriteset, IMAGEFILE)
{
  new_purchase_template(100, 0)
}

switch (FEAT_TRAINS, SELF, chme3_get_purchase_spriteset,
  (current_year >= 1972))
{
  0: chme3_purchase_spriteset;
  chme3_v2_purchase_spriteset;
}

// Окрас 1

// обычный: погрузка/перемещение
spriteset (chme3_loading_spriteset, IMAGEFILE)
{
  s10_template(2, 25, 0)
} 

spriteset (chme3_traveling_spriteset, IMAGEFILE)
{
  s10_template(2, 91, 0)
} 

spritegroup chme3_spritegroup
{
  loading: chme3_loading_spriteset;
  loaded: chme3_traveling_spriteset;
}

// Окрас 2

// обычный: погрузка/перемещение
