 // da

// Спрайты

#define IMAGEFILE  "src/diesel/da-te1.png"

// покупка
spriteset (da_purchase_spriteset, IMAGEFILE)
{
  s10_purchase_template(0, 0, -4)
}

// обычный
spriteset (da_spriteset, IMAGEFILE)
{
  s10_template(0, 0, 0)
} 

// развёрнутый
spriteset (da_r_spriteset, IMAGEFILE)
{
  s10_template(440, 0, 0)
} 

#undef IMAGEFILE

switch (FEAT_TRAINS, SELF, da_get_spriteset1, 
  vehicle_is_reversed)
{
  0: da_spriteset;
  da_r_spriteset;
}

// Если рисуем на карте и следующий в цепочке вагон скрыт, то
// отдаём пустышку
switch (FEAT_TRAINS, SELF, da_get_spriteset,
  is_drawn_in_viewport() && is_hidden_at(1))
{
  1: dummy_spriteset;
  da_get_spriteset1;
}

// Что присоединяем?
switch (FEAT_TRAINS, SELF, da_can_attach_wagon,
  0)
{
  return CB_RESULT_ATTACH_ALLOW;
}

// Кол-во моторных чётное?
switch (FEAT_TRAINS, PARENT, da_start_stop,
  0)
{
  return CB_RESULT_NO_TEXT;
}

item (FEAT_TRAINS, da) 
{
  property
  {
    name: string(STR_DA_NAME);
    climates_available: bitmask(CLIMATE_TEMPERATE, CLIMATE_ARCTIC, CLIMATE_TROPICAL);
    introduction_date: date(1945, 1, 1);
    vehicle_life: 30; // срок службы
    model_life: 30; // VEHICLE_NEVER_EXPIRES;
    reliability_decay: 20;
//    refittable_cargo_classes: bitmask(CC_PASSENGERS);
//    loading_speed: 12; // скорость погрузки/выгрузки, пассажиров
    cost_factor: 2;
    running_cost_factor: 10;
    sprite_id: SPRITE_ID_NEW_TRAIN;
    speed: 96 km/h;
    misc_flags: bitmask(TRAIN_FLAG_MU);
    refit_cost: 0;
    track_type: RAIL;
    ai_special_flag: AI_FLAG_PASSENGER;
    power: 800 hpM;
    running_cost_base: RUNNING_COST_DIESEL;
    dual_headed: 0;
//    cargo_capacity: 77;
    weight: 121 ton;
    ai_engine_rank: 0;
    engine_class: ENGINE_CLASS_DIESEL;
    extra_power_per_wagon: 0 kW;
    tractive_effort_coefficient: 0.13493;
    air_drag_coefficient: 0.06;
    shorten_vehicle: SHORTEN_TO_8_8;
    extra_weight_per_wagon: 0;
    bitmask_vehicle_info: 0;
    visual_effect_and_powered:
      visual_effect_and_powered(VISUAL_EFFECT_DIESEL, 5, DISABLE_WAGON_POWER);
  }
  graphics {
    default: da_get_spriteset;
    purchase: da_purchase_spriteset;
    articulated_part: articulated_part_dummy2;
    can_attach_wagon: da_can_attach_wagon;
    start_stop: da_start_stop;
    additional_text: return string(STR_DA_PURCHASE_HINT);
  }
}
