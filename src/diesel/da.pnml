 // da

// Спрайты

#define IMAGEFILE  "src/diesel/da-te1.png"

// покупка
purchase_spriteset(da, 283, 44)

// обычный
spriteset (da_spriteset, IMAGEFILE)
{
  s10_template(0, 0, 0)
} 

// развёрнутый
spriteset (da_r_spriteset, IMAGEFILE)
{
  s10_template(440, 0, 0)
} 

#undef IMAGEFILE

switch (FEAT_TRAINS, SELF, da_get_spriteset_2, 
  vehicle_is_reversed)
{
  0: da_spriteset;
     da_r_spriteset;
}

long_vehicle(da, )

engine_speed(da, 96)

engine_penalise_speed(da, 2)

item (FEAT_TRAINS, da) 
{
  property
  {
    name: string(STR_DA_NAME);
    climates_available: get_climates_available();
    introduction_date: date(get_loc_year(1945), 1, 1);
    vehicle_life: 30; // срок службы
    model_life: get_model_life(1945,1945);
    retire_early: get_retire_early(1945,1945); // VEHICLE_NEVER_EXPIRES;
    reliability_decay: 20;
    cost_factor: 15;
    running_cost_factor: get_diesel_running_cost_factor();
    sprite_id: SPRITE_ID_NEW_TRAIN;
    misc_flags: bitmask(TRAIN_FLAG_TILT, TRAIN_FLAG_MU);
    track_type: get_normal_track_type();
    ai_special_flag: AI_FLAG_PASSENGER;
    power: 800 hpM;
    running_cost_base: RUNNING_COST_DIESEL;
    weight: 121 ton;
    engine_class: ENGINE_CLASS_DIESEL;
    tractive_effort_coefficient: get_tec(160.0, 121);
    length: 8;
    visual_effect_and_powered: diesel_visual_effect_and_powered(0);
    cargo_allow_refit: [MAIL];
    default_cargo_type: MAIL;
    cargo_capacity: 1;
  }
  graphics {
    default: da_get_spriteset;
    purchase: da_purchase_spriteset;
    articulated_part: articulated_part_dummy2;
    can_attach_wagon: any_can_attach_wagon;
    start_stop: any_start_stop;
    additional_text: return string(STR_DA_PURCHASE_HINT);
    speed: da_speed;
    purchase_speed: da_purchase_speed;
    bitmask_vehicle_info: da_bitmask_vehicle_info;
    cargo_capacity: return 0;
  }
}

if (enable_long_names)
{
  item (FEAT_TRAINS, da)
  {
    property
    { name: string(STR_DA_NAME_LONG); }
  }
}

