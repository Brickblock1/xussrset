#undef IMAGEFILE

switch (FEAT_TRAINS, SELF, dm62_get_spriteset2,
  ((last_computed_result - count_veh_id(dm62)) % 2) +
  (cargo_subtype * 2)
)
{
  0: dm62_spritegroup;
  1: dm62_r_spritegroup;
  2: dm62_v2_spritegroup;
  3: dm62_r_v2_spritegroup;
  4: dm62_v3_spritegroup;
  5: dm62_r_v3_spritegroup;
  6: dm62_v4_spritegroup;
  7: dm62_r_v4_spritegroup;
  8: dm62_v5_spritegroup;
  9: dm62_r_v5_spritegroup;
  10: dm62_v6_spritegroup;
  11: dm62_r_v6_spritegroup;
  12: dm62_v7_spritegroup;
  dm62_r_v7_spritegroup;
}

switch (FEAT_TRAINS, PARENT, dm62_get_spriteset1,
  count_veh_id(dm62))
{
  dm62_get_spriteset2;
}

// Если рисуем на карте и следующий в цепочке вагон скрыт, то
// отдаём пустышку
switch (FEAT_TRAINS, SELF, dm62_get_spriteset,
  is_drawn_in_viewport() && is_hidden_at(1))
{
  1: dummy_spriteset;
  dm62_get_spriteset1;
}

// Что присоединяем?
switch (FEAT_TRAINS, SELF, dm62_can_attach_wagon,
  0)
{
  return CB_RESULT_ATTACH_ALLOW;
}

switch (FEAT_TRAINS, PARENT, dm62_start_stop,
  0)
{
  return CB_RESULT_NO_TEXT;
}

switch (FEAT_TRAINS, SELF, dm62_cargo_subtype_text,
  cargo_subtype)
{
  0: string(STR_REFIT_RAL_6020);
  1: string(STR_REFIT_GREEN_GRASS);
  2: string(STR_REFIT_SZD_RED);
  3: string(STR_REFIT_BELARUSSIAN_RAILWAY);
  4: string(STR_REFIT_BELARUSSIAN_RAILWAY_RED);
  5: string(STR_REFIT_KALININGRAD_RAILWAY);
  6: string(STR_REFIT_OCTOBER_RAILWAY);
  return CB_RESULT_NO_TEXT;
}

// Макс. скорость: 100 км/ч
#define MAX_SPEED 100

switch (FEAT_TRAINS, SELF, dm62_purchase_speed,
  MAX_SPEED)
{
  return;
}

switch (FEAT_TRAINS, SELF, dm62_speed,
  is_penalise_speed() ? get_penalised_speed(MAX_SPEED) : MAX_SPEED)
{
  return;
}

#undef MAX_SPEED

switch (FEAT_TRAINS, SELF, dm62_bitmask_vehicle_info3,
[
  STORE_TEMP(LOAD_TEMP(0) - count_veh_id(dm62), 0),
  (last_computed_result && (position_in_consist == 2 * LOAD_TEMP(0)) &&
    LOAD_TEMP(0) < 4)
])
{
  1: return 0;
  return FLAG_PENALISE_SPEED;
}

switch (FEAT_TRAINS, PARENT, dm62_bitmask_vehicle_info2,
[
  STORE_TEMP(count_veh_id(dm62), 0),
  vehicle_type_id == dm62
])
{
  dm62_bitmask_vehicle_info3;
}

switch (FEAT_TRAINS, SELF, dm62_bitmask_vehicle_info,
  position_in_consist == 0)
{
  1: return 0;
  dm62_bitmask_vehicle_info2;
}

item (FEAT_TRAINS, dm62) 
{
  property
  {
    name: string(STR_DM62_NAME);
    climates_available: get_climates_available();
    introduction_date: date(1994, 1, 1);
    vehicle_life: 20; // срок службы
    model_life: 20; // VEHICLE_NEVER_EXPIRES;
    reliability_decay: 20;
    cargo_allow_refit: [MAIL];
    default_cargo_type: MAIL;
    cost_factor: get_diesel_cost_factor();
    running_cost_factor: get_diesel_running_cost_factor();
    sprite_id: SPRITE_ID_NEW_TRAIN;
    speed: 100 km/h;
    misc_flags: bitmask(TRAIN_FLAG_TILT, TRAIN_FLAG_MU);
    refit_cost: 0;
    track_type: RAIL;
    ai_special_flag: AI_FLAG_PASSENGER;
    power: 1545 hpM;
    running_cost_base: RUNNING_COST_DIESEL;
    cargo_capacity: 1;
    weight: 116 ton;
    engine_class: ENGINE_CLASS_DIESEL;
    tractive_effort_coefficient: 0.1724137931;
    length: 8;
    visual_effect_and_powered: diesel_visual_effect_and_powered(0);
  }
  graphics {
    default: dm62_get_spriteset;
    purchase: dm62_purchase_spriteset;
    articulated_part: articulated_part_dummy2;
    can_attach_wagon: dm62_can_attach_wagon;
    start_stop: dm62_start_stop;
    additional_text: return string(STR_DM62_PURCHASE_HINT);
    cargo_subtype_text: dm62_cargo_subtype_text;
    cargo_capacity: return 0;
    speed: dm62_speed;
    purchase_speed: dm62_purchase_speed;
    bitmask_vehicle_info: dm62_bitmask_vehicle_info;
  }
}
