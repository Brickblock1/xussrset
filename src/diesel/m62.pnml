switch (FEAT_TRAINS, SELF, m62_get_spriteset2,
  ((LOAD_TEMP(0) - count_veh_id(m62)) % 2) +
  ((build_year >= 1970) * 2) +
//  ((build_year >= 1990) * 4) +
  cargo_subtype * 2
)
{
  0: m62_spritegroup;
  1: m62_r_spritegroup;
  2: m62_v2_spritegroup;
  3: m62_r_v2_spritegroup;
  4: m62_v3_spritegroup;
  5: m62_r_v3_spritegroup;
  6: m62_v4_spritegroup;
  7: m62_r_v4_spritegroup;
  8: m62_v5_spritegroup;
  9: m62_r_v5_spritegroup;
 10: m62_v6_spritegroup;
     m62_r_v6_spritegroup;
}

switch (FEAT_TRAINS, PARENT, m62_get_spriteset1,
[ STORE_TEMP(count_veh_id(m62), 0),                         
  STORE_TEMP(current_speed, 1),                              
  STORE_TEMP(date_of_last_service, 2) ])                     
{
  m62_get_spriteset2;
}

// Если рисуем на карте и следующий в цепочке вагон скрыт, то
// отдаём пустышку
switch (FEAT_TRAINS, SELF, m62_get_spriteset,
  is_drawn_in_viewport() && is_hidden_at(1))
{
  1: dummy_spriteset;
     m62_get_spriteset1;
}

// покупка
switch (FEAT_TRAINS, SELF, m62_get_purchase_spriteset,
  (current_year >= 1970)
)
{
  0: m62_purchase_spriteset;
     m62_v2_purchase_spriteset;
}

switch (FEAT_TRAINS, SELF, m62_cargo_subtype_text4,
  cargo_subtype)
{
  0: string(STR_REFIT_PREPRODUCTION);
     return CB_RESULT_NO_TEXT;
}

switch (FEAT_TRAINS, SELF, m62_cargo_subtype_text3,
  cargo_subtype)
{
  0: string(STR_REFIT_TTD_5A);
  1: string(STR_REFIT_TTD_53);
     return CB_RESULT_NO_TEXT;
}

