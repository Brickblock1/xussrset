// покупка
switch (FEAT_TRAINS, SELF, m62_purchase_sprites,
  current_year >= 1970)
{
  0: m62_v1_purchase_sprites;
     m62_v2_purchase_sprites;
}

switch (FEAT_TRAINS, SELF, m62_cargo_subtype_text4,
  cargo_subtype)
{
  0: return string(STR_REFIT_PREPRODUCTION);
     return CB_RESULT_NO_TEXT;
}

switch (FEAT_TRAINS, SELF, m62_cargo_subtype_text3,
  cargo_subtype)
{
  0: return string(STR_REFIT_TTD_59);
  1: return string(STR_REFIT_TTD_53);
     return CB_RESULT_NO_TEXT;
}

switch (FEAT_TRAINS, SELF, m62_cargo_subtype_text2,
  cargo_subtype)
{
  0: return string(STR_REFIT_TTD_59);
  1: return string(STR_REFIT_TTD_53);
  2: return string(STR_REFIT_BELARUSSIAN_RAILWAY);
  3: return string(STR_REFIT_KALININGRAD_RAILWAY);
  4: return string(STR_REFIT_OCTOBER_RAILWAY);
     return CB_RESULT_NO_TEXT;
}

switch (FEAT_TRAINS, SELF, m62_cargo_subtype_text,
  (build_year >= 1970) +
  (build_year >= 1990) )
{
  0: m62_cargo_subtype_text4;
  1: m62_cargo_subtype_text3;
     m62_cargo_subtype_text2;
}

engine_speed(m62, 100)

engine_penalise_speed(m62, 2)

general_running_cost(m62, 50, 5)

item (FEAT_TRAINS, m62) 
{
  property
  {
    name: string(STR_M62_NAME);
    climates_available: get_climates_available();
    introduction_date: date(get_loc_year(1970), 1, 1);
    vehicle_life: 30;
    model_life: get_model_life(1970,1976);
    retire_early: get_retire_early(1970,1976);
    reliability_decay: 20;
    cargo_allow_refit: [MAIL];
    default_cargo_type: MAIL;
    cost_factor: 21;
    running_cost_factor: get_diesel_running_cost_factor();
    sprite_id: SPRITE_ID_NEW_TRAIN;
    misc_flags: bitmask(TRAIN_FLAG_TILT, TRAIN_FLAG_MU);
    refit_cost: 0;
    track_type: get_normal_track_type();
    ai_special_flag: AI_FLAG_PASSENGER;
    power: 1480 hpM;
    running_cost_base: RUNNING_COST_DIESEL;
    cargo_capacity: 1;
    weight: 116 ton;
    engine_class: ENGINE_CLASS_DIESEL;
    tractive_effort_coefficient: get_tec(196.0, 116);
    length: 8;
    visual_effect_and_powered: diesel_visual_effect_and_powered(0);
  }
  graphics {
    default: m62_sprites;
    purchase: m62_purchase_sprites;
    articulated_part: articulated_part_dummy2;
    can_attach_wagon: any_can_attach_wagon;
    start_stop: any_start_stop;
    additional_text: return string(STR_M62_PURCHASE_HINT);
    cargo_subtype_text: m62_cargo_subtype_text;
    cargo_capacity: return 0;
    speed: m62_speed;
    purchase_speed: m62_purchase_speed;
    bitmask_vehicle_info: m62_bitmask_vehicle_info;
    running_cost_factor: m62_running_cost_factor;
    purchase_running_cost_factor: m62_purchase_running_cost_factor;
  }
}

if (enable_long_names)
