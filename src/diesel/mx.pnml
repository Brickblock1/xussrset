 // _mx

#define IMAGEFILE  "src/diesel/mx.png"
purchase_sprites(_mx, 0, 0)

steam_sprites(5, _mx_v1, 32,  40)
#undef IMAGEFILE

switch (FEAT_TRAINS, SELF, _mx_sprites_start, 0)
{
  _mx_v1_sprites_left;
}

short_vehicle(_mx)

switch (FEAT_TRAINS, SELF, _mx_create_effect, 
  diesel_create_effect(-4, 11)) 
{ 
  return 1; 
}    

engine_speed(_mx, 45)

engine_penalise_speed0(_mx)

general_running_cost(_mx, 6)

item (FEAT_TRAINS, _mx)
{
  property {
    name: string(STR_MX_NAME);
    climates_available: get_climates_available();
    introduction_date: date(get_loc_year(1931), 1, 1);
    vehicle_life: 10;
    model_life: get_model_life(1931,1931);
    retire_early: get_retire_early(1931,1931);
    reliability_decay: 20;
    cargo_allow_refit: [GOOD];
    default_cargo_type: GOOD;
    cost_factor: 6;
    sprite_id: SPRITE_ID_NEW_TRAIN; 
    speed: 45 km/h;
    misc_flags: bitmask(TRAIN_FLAG_TILT, TRAIN_FLAG_MU);
    track_type: get_normal_track_type();
    power: 175 hpM;
    running_cost_base: RUNNING_COST_DIESEL;
    cargo_capacity: 1;
    weight: 38 ton;
    engine_class: ENGINE_CLASS_DIESEL;
    tractive_effort_coefficient: get_tec(88.0, 38);
    length: 4;
    effect_spawn_model_and_powered: EFFECT_SPAWN_MODEL_DIESEL;
  }
  graphics {
    default: _mx_sprites;
    purchase: _mx_purchase_sprites;
    can_attach_wagon: any_can_attach_wagon;
    start_stop: any_start_stop;
    articulated_part: articulated_part_dummy1;
    speed: _mx_speed;
    purchase_speed: _mx_purchase_speed;
    running_cost_factor: _mx_running_cost_factor;
    additional_text: return string(STR_MX_PURCHASE_HINT);
    cargo_capacity: return 0;
    bitmask_vehicle_info: _mx_bitmask_vehicle_info;
    create_effect: _mx_create_effect;
  }
}

if (enable_long_names) {
  item (FEAT_TRAINS, _mx)
  {
    property { name: string(STR_MX_NAME_LONG); }
  }
}
