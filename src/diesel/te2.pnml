switch (FEAT_TRAINS, SELF, te2_get_spriteset_l,
  (build_year >= 1950) +
  (build_year >= 1960) +
  ((build_year >= 1972) * 2) +
  cargo_subtype
)
{
  0: te2_spritegroup;
  1: te2_v2_spritegroup;
  2: te2_v3_spritegroup;
  3: te2_v4_spritegroup;
  4: te2_v5_spritegroup;
  5: te2_v6_spritegroup;
     align_7_spriteset;
}

switch (FEAT_TRAINS, SELF, te2_get_spriteset_r,
  (build_year >= 1950) +
  (build_year >= 1960) +
  ((build_year >= 1972) * 2) +
  cargo_subtype
)
{
  0: te2_r_spriteset;
  1: te2_r_v2_spriteset;
  2: te2_r_v3_spriteset;
  3: te2_r_v4_spriteset;
  4: te2_r_v5_spriteset;
  5: te2_r_v6_spriteset;
     align_7_spriteset;
}

engine_direction_template(te2) 

// Если рисуем на карте и следующий в цепочке вагон скрыт, то
// отдаём пустышку
switch (FEAT_TRAINS, SELF, te2_get_spriteset,
  is_drawn_in_viewport() && is_hidden_at(1))
{
  1: dummy_spriteset;
  te2_get_spriteset_t;
}

// покупка
switch (FEAT_TRAINS, SELF, te2_get_purchase_spriteset,
  (build_year >= 1950) +
  (build_year >= 1960) +
  (build_year >= 1972)
)
{
  0: te2_purchase_spriteset;
  1: te2_v2_purchase_spriteset;
  2: te2_v3_purchase_spriteset;
  te2_v5_purchase_spriteset;
}

switch (FEAT_TRAINS, SELF, te2_cargo_subtype_text2,
  build_year >= 1960)
{
  1: string(STR_REFIT_V2);
  return CB_RESULT_NO_TEXT;
}

switch (FEAT_TRAINS, SELF, te2_cargo_subtype_text,
  cargo_subtype)
{
  0: string(STR_REFIT_V1);
  1: te2_cargo_subtype_text2;
  return CB_RESULT_NO_TEXT;
}

// Макс. скорость: 93 км/ч до 1956, 95 км/ч после
#define MAX_SPEED current_year >= 1956 ? 95 : 93

switch (FEAT_TRAINS, SELF, te2_purchase_speed,
  MAX_SPEED)
{
  return;
}

switch (FEAT_TRAINS, SELF, te2_speed,
[
  STORE_TEMP(MAX_SPEED, 0),
  is_penalise_speed() ? get_penalised_speed(LOAD_TEMP(0)) : LOAD_TEMP(0)
])
{
  return;
}

#undef MAX_SPEED

engine_penalise_speed(te2, 2)

item (FEAT_TRAINS, te2) 
{
  property
  {
    name: string(STR_TE2_NAME);
    climates_available: get_climates_available();
    introduction_date: date(get_loc_year(1949), 1, 1);
    vehicle_life: 30; // срок службы
    model_life: get_model_life(1949,1955);
    retire_early: get_retire_early(1949,1955); // VEHICLE_NEVER_EXPIRES;
    reliability_decay: 20;
    cargo_allow_refit: [MAIL];
    default_cargo_type: MAIL;
    cost_factor: 14;
    running_cost_factor: get_diesel_running_cost_factor();
    sprite_id: SPRITE_ID_NEW_TRAIN;
    misc_flags: bitmask(TRAIN_FLAG_TILT);
    refit_cost: 0;
    track_type: get_normal_track_type();
    ai_special_flag: AI_FLAG_PASSENGER;
    power: 690 hpM;
    running_cost_base: RUNNING_COST_DIESEL;
    cargo_capacity: 1;
    weight: 85 ton;
    engine_class: ENGINE_CLASS_DIESEL;
    extra_power_per_wagon: 0 kW;
    tractive_effort_coefficient: get_tec(108.0, 85);
    length: 6;
    visual_effect_and_powered: diesel_visual_effect_and_powered(0);
  }
  graphics {
    default: te2_get_spriteset;
    purchase: te2_get_purchase_spriteset;
    can_attach_wagon: any_can_attach_wagon;
    start_stop: any_start_stop;
    articulated_part: articulated_part_dummy1;
    additional_text: return string(STR_TE2_PURCHASE_HINT);
    cargo_subtype_text: te2_cargo_subtype_text;
    cargo_capacity: return 0;
    speed: te2_speed;
    purchase_speed: te2_purchase_speed;
    bitmask_vehicle_info: te2_bitmask_vehicle_info;
    cost_factor: 14;
  }
}
