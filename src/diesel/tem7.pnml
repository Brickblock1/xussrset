 // tem7

// Спрайты

#define IMAGEFILE  "src/diesel/tem7.png"

// покупка
purchase_sprites(tem7, 0, 0)

// обычный: погрузка/перемещение
spriteset (tem7_loading_sprites, IMAGEFILE)
{
  s12_template(0, 90, 0)
} 

spriteset (tem7_traveling_sprites, IMAGEFILE)
{
  s12_template(0, 154, 0)
} 

spritegroup tem7_sprites_2
{
  loading: tem7_loading_sprites;
  loaded: tem7_traveling_sprites;
}

#undef IMAGEFILE

long_vehicle(tem7)

engine_speed(tem7, 100)

engine_penalise_speed(tem7, 2)

item (FEAT_TRAINS, tem7) 
{
  property
  {
    name: string(STR_TEM7_NAME);
    climates_available: get_climates_available();
    introduction_date: date(get_loc_year(1975), 1, 1);
    vehicle_life: 20;
    model_life: get_model_life(1975,1989);
    retire_early: get_retire_early(1975,1989);
    reliability_decay: 20;
    cost_factor: 1;
    running_cost_factor: get_diesel_running_cost_factor();
    sprite_id: SPRITE_ID_NEW_TRAIN;
    misc_flags: bitmask(TRAIN_FLAG_TILT, TRAIN_FLAG_MU);
    track_type: get_normal_track_type();
    ai_special_flag: AI_FLAG_PASSENGER;
    power: 1330 hpM;
    running_cost_base: RUNNING_COST_DIESEL;
    weight: 180 ton;
    engine_class: ENGINE_CLASS_DIESEL;
    tractive_effort_coefficient: get_tec(290.0, 180);
    length: 8;
    visual_effect_and_powered: diesel_visual_effect_and_powered(0);
    cargo_allow_refit: [GOOD];
    default_cargo_type: GOOD;
    cargo_capacity: 1;
  }
  graphics {
    default: tem7_sprites;
    purchase: tem7_purchase_sprites;
    articulated_part: articulated_part_dummy4;
    can_attach_wagon: any_can_attach_wagon;
    start_stop: any_start_stop;
    additional_text: return string(STR_TEM7_PURCHASE_HINT);
    speed: tem7_speed;
    purchase_speed: tem7_purchase_speed;
    bitmask_vehicle_info: tem7_bitmask_vehicle_info;
    cargo_capacity: return 0;
    cost_factor: return 372;
  }
}

if (enable_long_names)
{
  item (FEAT_TRAINS, tem7)
  {
    property
    { name: string(STR_TEM7_NAME_LONG); }
  }
}

