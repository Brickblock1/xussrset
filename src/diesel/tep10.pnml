 // tep10

#define IMAGEFILE  "src/diesel/tep10.png"
purchase_sprites(tep10_v1,   0, 0)
purchase_sprites(tep10_v2, 100, 0)

diesel2_sprites(11, tep10_v1, 32,  40)
diesel2_sprites(11, tep10_v2, 32, 241)
diesel2_sprites(11, tep10_v3, 32, 442)
diesel2_sprites(11, tep10_v4, 32, 643)
#undef IMAGEFILE

switch (FEAT_TRAINS, SELF, tep10_purchase_sprites,
  (current_year >= 1972) )
{
  0: tep10_v1_purchase_sprites;
     tep10_v2_purchase_sprites;
}

switch (FEAT_TRAINS, SELF, tep10_sprites_left,
  ((LOAD_TEMP(2) >= date(1972,1,1))) *
  (cargo_subtype +1))
{
  0: tep10_v1_sprites_left;
  2: tep10_v2_sprites_left;
  4: tep10_v3_sprites_left;
  6: tep10_v4_sprites_left;
     align_11_sprites;
}

switch (FEAT_TRAINS, SELF, tep10_sprites_right,
  ((LOAD_TEMP(2) >= date(1972,1,1))) *
  (cargo_subtype +1))
{
  0: tep10_v1_sprites_right;
  2: tep10_v2_sprites_right;
  4: tep10_v3_sprites_right;
  6: tep10_v4_sprites_right;
     align_11_sprites;
}

engine_RNDany_direction_template(tep10, 5, 3) 

long_vehicle_sp(tep10)

engine_diesel_1_effect(tep10, 3, 0, 11)

engine_RNDany_effect_direction_template(tep10, 5, 5) 

switch (FEAT_TRAINS, SELF, tep10_cargo_subtype_text2,
  cargo_subtype)
{
  0: return string(STR_REFIT_TTD_93);
  1: return string(STR_REFIT_TTD_54);
  2: return string(STR_REFIT_TTD_B5);
     return CB_RESULT_NO_TEXT;
}

switch (FEAT_TRAINS, SELF, tep10_cargo_subtype_text,
  build_year >= 1972)
{
  1: tep10_cargo_subtype_text2;
     return CB_RESULT_NO_TEXT;
}

engine_speed_with_reduce(tep10, 140, 120, 20)

engine_penalise_speed(tep10, 2)

general_running_cost(tep10, 460)

item (FEAT_TRAINS, tep10) {
  property {
    name: string(STR_TEP10_NAME);
    climates_available: get_climates_available();
    introduction_date: date(get_loc_year(1960), 1, 1);
    vehicle_life: 30;
    model_life: get_model_life(1960,1968);
    retire_early: get_retire_early(1960,1968);
    reliability_decay: 1;
    cargo_allow_refit: [PASS];
    default_cargo_type: PASS;
    cost_factor: 47;
    sprite_id: SPRITE_ID_NEW_TRAIN; 
    misc_flags: bitmask(TRAIN_FLAG_TILT, TRAIN_FLAG_MU);
    refit_cost: 0;
    track_type: get_normal_track_type();
    ai_special_flag: AI_FLAG_PASSENGER;
    power: 2290 hpM;
    running_cost_base: RUNNING_COST_DIESEL;
    cargo_capacity: 1;
    weight: 129 ton;
    engine_class: ENGINE_CLASS_DIESEL;
    tractive_effort_coefficient: get_tec(169.0, 129);
    length: 8;
    effect_spawn_model_and_powered: EFFECT_SPAWN_MODEL_DIESEL;
  }
  graphics {
    default: tep10_sprites;
    purchase: tep10_purchase_sprites;
    articulated_part: articulated_part_dummy3;
    can_attach_wagon: any_can_attach_wagon;
    start_stop: any_start_stop;
    additional_text: return string(STR_TEP10_PURCHASE_HINT);
    cargo_subtype_text: tep10_cargo_subtype_text;
    cargo_capacity: return 0;
    speed: tep10_speed;
    purchase_speed: tep10_purchase_speed;
    running_cost_factor: tep10_running_cost_factor;
    bitmask_vehicle_info: tep10_bitmask_vehicle_info;
    create_effect: tep10_create_effect;
  }
}

if (enable_long_names) {
  item (FEAT_TRAINS, tep10) {
    property { name: string(STR_TEP10_NAME_LONG); }
  }
}

