switch (FEAT_TRAINS, SELF, tep60_purchase_sprites,
  (current_year >= 1964) +
  (current_year >= 1966) +
  (current_year >= 1970) )
{
  0: tep60_v1_purchase_sprites;
  1: tep60_v2_purchase_sprites;
