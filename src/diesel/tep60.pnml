  ((build_year >= 1966) * 3) +
  ((build_year >= 1970) * 2) +
  cargo_subtype)
{
  0: tep60_spritegroup;
  1: tep60_v2_spritegroup;  
  2: tep60_v3_spritegroup;
  3: tep60_v4_spritegroup;
  4: tep60_v5_spritegroup;  
  5: tep60_v6_spritegroup;
  6: tep60_v7_spritegroup;  
  7: tep60_v8_spritegroup;
