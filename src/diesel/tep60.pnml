#undef IMAGEFILE

switch (FEAT_TRAINS, SELF, tep60_get_spriteset2,
  ((last_computed_result - count_veh_id(tep60)) % 2) +
  ((build_year >= 1964) * 2) +
  ((build_year >= 1966) * 6) +
  ((build_year >= 1970) * 4) +
  cargo_subtype * 2
)
{
  0: tep60_spritegroup;
  1: tep60_r_spritegroup;     
  2: tep60_v2_spritegroup;    //--
  3: tep60_r_v2_spritegroup;
  4: tep60_v3_spritegroup;
  5: tep60_r_v3_spritegroup;
  6: tep60_v4_spritegroup;
  7: tep60_r_v4_spritegroup;
  8: tep60_v5_spritegroup;    //--
  9: tep60_r_v5_spritegroup;
  10: tep60_v6_spritegroup;
  11: tep60_r_v6_spritegroup;
  12: tep60_v7_spritegroup;   //--
  13: tep60_r_v7_spritegroup;
  14: tep60_v8_spritegroup;
  15: tep60_r_v8_spritegroup;
  16: tep60_v9_spritegroup;
  tep60_r_v9_spritegroup;
}

switch (FEAT_TRAINS, PARENT, tep60_get_spriteset1,
  count_veh_id(tep60))
{
  tep60_get_spriteset2;
}

// Если рисуем на карте и следующий в цепочке вагон скрыт, то
// отдаём пустышку
switch (FEAT_TRAINS, SELF, tep60_get_spriteset,
  is_drawn_in_viewport() && is_hidden_at(1))
{
  1: dummy_spriteset;
  tep60_get_spriteset1;
}

// покупка
switch (FEAT_TRAINS, SELF, tep60_get_purchase_spriteset,
  (current_year >= 1964) +
  (current_year >= 1966) +
  (current_year >= 1970)
)
{
  0: tep60_purchase_spriteset;
  1: tep60_v2_purchase_spriteset;
  2: tep60_v5_purchase_spriteset;
  tep60_v7_purchase_spriteset;
}

// Что присоединяем?
switch (FEAT_TRAINS, SELF, tep60_can_attach_wagon,
  0)
{
  return CB_RESULT_ATTACH_ALLOW;
}

switch (FEAT_TRAINS, PARENT, tep60_start_stop,
  0)
{
  return CB_RESULT_NO_TEXT;
}

switch (FEAT_TRAINS, SELF, tep60_cargo_subtype_text3,
  (build_year < 1966) || (build_year >= 1991))
{
  1: string(STR_REFIT_V3);
  return CB_RESULT_NO_TEXT;
}

switch (FEAT_TRAINS, SELF, tep60_cargo_subtype_text2,
  build_year >= 1964)
{
  1: string(STR_REFIT_V2);
  return CB_RESULT_NO_TEXT;
}

switch (FEAT_TRAINS, SELF, tep60_cargo_subtype_text,
  cargo_subtype)
{
  0: string(STR_REFIT_V1);
  1: tep60_cargo_subtype_text2;
  2: tep60_cargo_subtype_text3;
  return CB_RESULT_NO_TEXT;
}

// Макс. скорость: 160 км/ч, после 20 лет - 130 км/ч
switch (FEAT_TRAINS, SELF, tep60_purchase_speed,
  160)
{
  return;
}

switch (FEAT_TRAINS, SELF, tep60_speed,
[
  STORE_TEMP((age_in_days >= (20*365+5)) ? 130 : 160, 0),
  is_penalise_speed() ? get_penalised_speed(LOAD_TEMP(0)) : LOAD_TEMP(0)
])
{
  return;
}

switch (FEAT_TRAINS, SELF, tep60_bitmask_vehicle_info3,
[
  STORE_TEMP(LOAD_TEMP(0) - count_veh_id(tep60), 0),
  (last_computed_result && (position_in_consist == 2 * LOAD_TEMP(0)) &&
    LOAD_TEMP(0) < 2)
])
{
  1: return 0;
  return FLAG_PENALISE_SPEED;
}

switch (FEAT_TRAINS, PARENT, tep60_bitmask_vehicle_info2,
[
  STORE_TEMP(count_veh_id(tep60), 0),
  vehicle_type_id == tep60
])
{
  tep60_bitmask_vehicle_info3;
}

switch (FEAT_TRAINS, SELF, tep60_bitmask_vehicle_info,
  position_in_consist == 0)
{
  1: return 0;
  tep60_bitmask_vehicle_info2;
}

item (FEAT_TRAINS, tep60) 
{
  property
  {
    name: string(STR_TEP60_NAME);
    climates_available: get_climates_available();
    introduction_date: date(1961, 1, 1);
    vehicle_life: 30; // срок службы
    model_life: 30; // VEHICLE_NEVER_EXPIRES;
    reliability_decay: 20;
    cargo_allow_refit: [PASS];
    cost_factor: get_diesel_cost_factor();
    running_cost_factor: get_diesel_running_cost_factor();
    sprite_id: SPRITE_ID_NEW_TRAIN;
    misc_flags: bitmask(TRAIN_FLAG_TILT, TRAIN_FLAG_MU);
    refit_cost: 0;
    track_type: RAIL;
    ai_special_flag: AI_FLAG_PASSENGER;
    power: 2310 hpM;
    running_cost_base: RUNNING_COST_DIESEL;
    cargo_capacity: 1;
    weight: 127 ton;
    engine_class: ENGINE_CLASS_DIESEL;
    tractive_effort_coefficient: 0.09882693;
    length: 8;
    visual_effect_and_powered: diesel_visual_effect_and_powered(0);
  }
  graphics {
    default: tep60_get_spriteset;
    purchase: tep60_get_purchase_spriteset;
    articulated_part: articulated_part_dummy3;
    can_attach_wagon: tep60_can_attach_wagon;
    start_stop: tep60_start_stop;
    additional_text: return string(STR_TEP60_PURCHASE_HINT);
    cargo_subtype_text: tep60_cargo_subtype_text;
    cargo_capacity: return 0;
    speed: tep60_speed;
    purchase_speed: tep60_purchase_speed;
    bitmask_vehicle_info: tep60_bitmask_vehicle_info;
  }
}
