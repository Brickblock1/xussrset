 14: tep70_v8_spritegroup;
 15: tep70_r_v8_spritegroup;
 16: tep70_v9_spritegroup;
 17: tep70_r_v9_spritegroup;
 18: tep70_v10_spritegroup;
 19: tep70_r_v10_spritegroup;
     align_13_spriteset;
}

long_vehicle(tep70, )

// покупка
switch (FEAT_TRAINS, SELF, tep70_get_purchase_spriteset,
  current_year >= 1978 )
{
  0: tep70_purchase_spriteset;
     tep70_v2_purchase_spriteset;
}

switch (FEAT_TRAINS, SELF, tep70_additional_text,
  current_year >= 1978 )
{
  1: return string(STR_TEP70_PURCHASE_HINT);
     return string(STR_TEP70_PURCHASE_HINT_PRE);
}

switch (FEAT_TRAINS, SELF, tep70_cargo_subtype_text2,
  cargo_subtype ) 
{
  0: string(STR_REFIT_OCTOBER_RAILWAY);
  1: string(STR_REFIT_MOSCOW_RAILWAY, "");
  2: string(STR_REFIT_BELARUSSIAN_RAILWAY);
  3: string(STR_REFIT_NORTHERN_RAILWAY);
  4: string(STR_REFIT_RZD_PID);
     return CB_RESULT_NO_TEXT;
}

switch (FEAT_TRAINS, SELF, tep70_cargo_subtype_text1,
  cargo_subtype ) 
{
  0: string(STR_REFIT_OCTOBER_RAILWAY);
  1: string(STR_REFIT_MOSCOW_RAILWAY, "");
  2: string(STR_REFIT_BELARUSSIAN_RAILWAY);
  3: string(STR_REFIT_NORTHERN_RAILWAY);
     return CB_RESULT_NO_TEXT;
}

switch (FEAT_TRAINS, SELF, tep70_cargo_subtype_text,
  (build_year >= 1978) + (build_year >= 1990))
{
  0: string(STR_REFIT_PREPRODUCTION);
  1: tep70_cargo_subtype_text1;
     tep70_cargo_subtype_text2;
}

switch (FEAT_TRAINS, SELF, tep70_power,
  build_year >= 1978)
{
  1: return 3145;
     return 3020;
}

switch (FEAT_TRAINS, SELF, tep70_weight,
  build_year >= 1978)
{
  1: return 135;
     return 129;
}

switch (FEAT_TRAINS, SELF, tep70_tractive_effort_coefficient,
  build_year >= 1978)
{
  1: return get_tec_int(167.0, 135);
     return get_tec_int(167.0, 129);
}

switch (FEAT_TRAINS, SELF, tep70_articulated_part,
  build_year >= 1978)
{
  1: articulated_part_dummy5;
     articulated_part_dummy4;
}

engine_speed_with_reduce_and_pre_model(tep70, 160, 140, 25, 7, 1978)

engine_penalise_speed(tep70, 2)

item (FEAT_TRAINS, tep70)
{
  property
  {
    name: string(STR_TEP70_NAME);
    climates_available: get_climates_available();
    introduction_date: date(get_loc_year(1973), 1, 1);
    vehicle_life: 30; // срок службы
    model_life: get_model_life(1973,2006);
    retire_early: get_retire_early(1973,2006); // VEHICLE_NEVER_EXPIRES;
    reliability_decay: 20;
    cargo_allow_refit: [PASS];
    default_cargo_type: PASS;
    cost_factor: get_diesel_cost_factor();
    running_cost_factor: get_diesel_running_cost_factor();
    sprite_id: SPRITE_ID_NEW_TRAIN;
    misc_flags: bitmask(TRAIN_FLAG_TILT, TRAIN_FLAG_MU);
    refit_cost: 0;
    track_type: get_normal_track_type();
    ai_special_flag: AI_FLAG_PASSENGER;
    power: 3145 hpM;
    running_cost_base: RUNNING_COST_DIESEL;
    cargo_capacity: 1;
    weight: 129 ton;
    engine_class: ENGINE_CLASS_DIESEL;
    tractive_effort_coefficient: get_tec(167.0, 129);
    length: 8;
    visual_effect_and_powered: diesel_visual_effect_and_powered(0);
  }
  graphics {
    default: tep70_get_spriteset;
    purchase: tep70_get_purchase_spriteset;
    can_attach_wagon: any_can_attach_wagon;
    start_stop: any_start_stop;
    additional_text: tep70_additional_text;
    cargo_subtype_text: tep70_cargo_subtype_text;
    cargo_capacity: return 0;
    power: tep70_power;
    weight: tep70_weight;
    tractive_effort_coefficient: tep70_tractive_effort_coefficient;
    articulated_part: tep70_articulated_part;
    speed: tep70_speed;
    purchase_speed: tep70_purchase_speed;
    bitmask_vehicle_info: tep70_bitmask_vehicle_info;
    cost_factor: return 165;
  }
}

