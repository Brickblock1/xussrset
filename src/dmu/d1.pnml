  9: d1_rm_v23_spriteset;

  10: d1_m_v30_spritegroup;
  11: d1_rm_v30_spriteset;
  12: d1_m_v31_spritegroup;
  13: d1_rm_v31_spriteset;
  14: d1_m_v32_spritegroup;
  15: d1_rm_v32_spriteset;
  16: d1_m_v33_spritegroup;
  17: d1_rm_v33_spriteset;
  18: d1_m_v34_spritegroup;
  19: d1_rm_v34_spriteset;
  20: d1_m_v35_spritegroup;
  21: d1_rm_v35_spriteset;
  22: d1_m_v36_spritegroup;
  23: d1_rm_v36_spriteset;
  24: d1_m_v37_spritegroup;
