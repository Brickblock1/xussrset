  ((LOAD_TEMP(0) - count_veh_id(d1_m)) % 2) +
  ((build_year >= 1967) * 2) +
  ((build_year >= 1969) * 8) +
  cargo_subtype * 2
)
{
  0: d1_m_spritegroup;
  1: d1_rm_spriteset;

  2: d1_m_v20_spritegroup;
  3: d1_rm_v20_spriteset;
  4: d1_m_v21_spritegroup;
  5: d1_rm_v21_spriteset;
  6: d1_m_v22_spritegroup;
