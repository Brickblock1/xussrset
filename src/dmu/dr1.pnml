  dr1_m_can_attach_wagon6;
}

switch (FEAT_TRAINS, PARENT, dr1_m_can_attach_wagon4,
[
  STORE_TEMP(num_vehs_in_consist-2, 0x10F),
  var[0x61, 0, 0xFFFF, 0xC6]
])
{
  dr1_m: return CB_RESULT_ATTACH_ALLOW;
  dr1_c: dr1_m_can_attach_wagon5;
  return CB_RESULT_ATTACH_DISALLOW;
}

switch (FEAT_TRAINS, PARENT, dr1_m_can_attach_wagon3,
  num_vehs_in_consist)
{
  2: return CB_RESULT_ATTACH_ALLOW;
  dr1_m_can_attach_wagon4;
}

switch (FEAT_TRAINS, PARENT, dr1_m_can_attach_wagon1,
  count_veh_id(dr1_m) % 2)
{
  1: dr1_m_can_attach_wagon3;
  return CB_RESULT_ATTACH_DISALLOW;
}

switch (FEAT_TRAINS, SELF, dr1_m_can_attach_wagon,
  vehicle_type_id)
{
  dr1_m: return CB_RESULT_ATTACH_ALLOW;
  dr1_c: dr1_m_can_attach_wagon1;
  return CB_RESULT_ATTACH_DISALLOW;
}

switch (FEAT_TRAINS, PARENT, dr1_m_start_stop,
  count_veh_id(dr1_m) % 2)
{
  0: return CB_RESULT_NO_TEXT;
  return string(STR_CANNOT_START);
}

switch (FEAT_TRAINS, SELF, dr1_m_visual_effect_and_powered1,
  (last_computed_result - count_veh_id(dr1_m)) % 2)
{
  0: return visual_effect_and_powered(VISUAL_EFFECT_DIESEL, -2,
    DISABLE_WAGON_POWER);
  return visual_effect_and_powered(VISUAL_EFFECT_DIESEL, 7,
    DISABLE_WAGON_POWER);
}

switch (FEAT_TRAINS, PARENT, dr1_m_visual_effect_and_powered,
  count_veh_id(dr1_m))
{
  dr1_m_visual_effect_and_powered1;
}

switch (FEAT_TRAINS, SELF, dr1_m_additional_text,
  (current_year >= 1966) +
  (current_year >= 1968)
)
{
  1: return string(STR_DR1_M_1966_PURCHASE_HINT);
  2: return string(STR_DR1_M_1968_PURCHASE_HINT);
  return string(STR_DR1_M_PURCHASE_HINT);
}

switch (FEAT_TRAINS, SELF, dr1_m_purchase,
  build_year >= 1966)
{
  1: dr1_m_2_purchase_spriteset;
  dr1_m_purchase_spriteset;
}

switch (FEAT_TRAINS, SELF, dr1_c_purchase,
  build_year >= 1966)
{
  1: dr1_c_2_purchase_spriteset;
  dr1_c_purchase_spriteset;
}

