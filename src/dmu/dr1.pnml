 // dr1

// Спрайты

#define IMAGEFILE  "src/dr1/dr1-1963-1969.png"

// Вариант 0 (1963-66, Балтика)
// покупка
spriteset (dr1_m_purchase_spriteset, IMAGEFILE)
{
  s15_purchase_template(38, 35, -14)
}

spriteset (dr1_c_purchase_spriteset, IMAGEFILE)
{
  s15_purchase_template(38, 173, -14)
}

// головной: погрузка/перемещение
spriteset (dr1_m_loading_spriteset, IMAGEFILE)
{
  s15_template(38, 35, 0)
} 

spriteset (dr1_m_traveling_spriteset, IMAGEFILE)
{
  s15_template(497, 35, 0)
} 

spritegroup dr1_m_spritegroup
{
  loading: dr1_m_loading_spriteset;
  loaded: dr1_m_traveling_spriteset;
}

// развёрнутая голова
spriteset (dr1_rm_spriteset, IMAGEFILE)
{
  s15_template(38, 104, 0)
} 

// прицепной
spriteset (dr1_c_spriteset, IMAGEFILE)
{
  s15_template(38, 173, 0)
} 

// Вариант 1 (1966-69), Дырка
// покупка
spriteset (dr1_m_2_purchase_spriteset, IMAGEFILE)
{
  s15_purchase_template(38, 262, -14)
}

spriteset (dr1_c_2_purchase_spriteset, IMAGEFILE)
{
  s15_purchase_template(38, 400, -14)
}

// головной: погрузка/перемещение
spriteset (dr1_m_2_loading_spriteset, IMAGEFILE)
{
  s15_template(38, 262, 0)
} 

spriteset (dr1_m_2_traveling_spriteset, IMAGEFILE)
{
  s15_template(497, 262, 0)
} 

spritegroup dr1_m_2_spritegroup
{
  loading: dr1_m_2_loading_spriteset;
  loaded: dr1_m_2_traveling_spriteset;
}

// развёрнутая голова
spriteset (dr1_rm_2_spriteset, IMAGEFILE)
{
  s15_template(38, 331, 0)
} 

// прицепной
spriteset (dr1_c_2_spriteset, IMAGEFILE)
{
  s15_template(38, 400, 0)
} 

#undef IMAGEFILE

// Если год постройки >= 1966, используем "дырку"
switch (FEAT_TRAINS, SELF, dr1_c_get_spriteset1,
  build_year >= 1966)
{
  1: dr1_c_2_spriteset;
  dr1_c_spriteset;
}

// Если рисуем на карте и следующий в цепочке вагон скрыт, то
// отдаём пустышку
switch (FEAT_TRAINS, SELF, dr1_c_get_spriteset,
  is_drawn_in_viewport() && is_hidden_at(1))
{
  1: dummy_spriteset;
  dr1_c_get_spriteset1;
}

// Определяем необходимость разворота моторного вагона по чётности его позиции
// от начала состава
// Если год постройки >= 1966, используем "дырку"
switch (FEAT_TRAINS, SELF, dr1_m_get_spriteset2,
  ((last_computed_result - count_veh_id(dr1_m)) % 2) +
  ((build_year >= 1966) * 2)
)
{
  0: dr1_m_spritegroup;
  1: dr1_rm_spriteset;

  2: dr1_m_2_spritegroup;
  dr1_rm_2_spriteset;
}

switch (FEAT_TRAINS, PARENT, dr1_m_get_spriteset1,
  count_veh_id(dr1_m))
{
  dr1_m_get_spriteset2;
}

// Если рисуем на карте и следующий в цепочке вагон скрыт, то
// отдаём пустышку
switch (FEAT_TRAINS, SELF, dr1_m_get_spriteset,
  is_drawn_in_viewport() && is_hidden_at(1))
{
  1: dummy_spriteset;
  dr1_m_get_spriteset1;
}

switch (FEAT_TRAINS, PARENT, dr1_m_can_attach_wagon11,
[
  STORE_TEMP(num_vehs_in_consist-8, 0x10F),
  var[0x61, 0, 0xFFFF, 0xC6]
])
{
  dr1_m: return CB_RESULT_ATTACH_ALLOW;
  dr1_c: return CB_RESULT_ATTACH_DISALLOW;
  return CB_RESULT_ATTACH_DISALLOW;
}

switch (FEAT_TRAINS, PARENT, dr1_m_can_attach_wagon10,
  num_vehs_in_consist)
{
  8: return CB_RESULT_ATTACH_ALLOW;
  dr1_m_can_attach_wagon11;
}

