[
  STORE_TEMP(num_vehs_in_consist-6, 0x10F),
  var[0x61, 0, 0xFFFF, 0xC6]
])
{
  dr1_m: return CB_RESULT_ATTACH_ALLOW;
  dr1_c: dr1_m_can_attach_wagon10;
  return CB_RESULT_ATTACH_DISALLOW;
}

switch (FEAT_TRAINS, PARENT, dr1_m_can_attach_wagon8,
  num_vehs_in_consist)
{
