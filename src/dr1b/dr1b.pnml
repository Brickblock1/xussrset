switch (FEAT_TRAINS, SELF, dr1b_c_get_spriteset,
  var[0x62, 7, 1, 1])
{
  0: dr1b_c_spriteset;
  dr1b_c_hidden_spriteset;
}

switch (FEAT_TRAINS, SELF, dr1b_h_get_spriteset1,
  ((last_computed_result - count_veh_id(dr1b_h) - count_veh_id(dr1b_hn)) % 2) +
  ((var[0x62, 7, 1, 1] != 0) ? 2 : 0)
)
{
  0: dr1b_h_spritegroup;
  1: dr1b_rh_spriteset;
  2: dr1b_h_hidden_spriteset;
  dr1b_rh_hidden_spriteset;
}

