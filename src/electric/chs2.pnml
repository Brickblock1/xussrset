switch (FEAT_TRAINS, SELF, chs2_get_spriteset2,
  // поправка на нет тока
  // 0-5
  // last_computed_result == 0 if less, 1 if greater
  ((vehicle_is_not_powered || vehicle_is_in_depot) ? 0 :
  LOAD_TEMP(0) == 1 ? last_computed_result ? 4 : 1 :
  position_in_consist == 0 ? 3 :
    last_computed_result ? 5 : 2) +

  ((build_year >= 1963) * 6) +
  ((build_year >= 1964) * 6) +
  ((current_year >= 1972) * 18)
)
{
  0: chs2_notpowered_spriteset;
  1: chs2_single_spritegroup;
  2: chs2_next_spritegroup;
  3: chs2_first_spritegroup;
  4: chs2_traveling_first_spriteset;
  5: chs2_speedover50_spriteset;

  6: chs2_v3_notpowered_spriteset;
  7: chs2_v3_single_spritegroup;
  8: chs2_v3_next_spritegroup;
  9: chs2_v3_first_spritegroup;
  10: chs2_v3_traveling_first_spriteset;
  11: chs2_v3_speedover50_spriteset;

  12: chs2_v5_notpowered_spriteset;
  13: chs2_v5_single_spritegroup;
  14: chs2_v5_next_spritegroup;
  15: chs2_v5_first_spritegroup;
  16: chs2_v5_traveling_first_spriteset;
  17: chs2_v5_speedover50_spriteset;

  18: chs2_v2_notpowered_spriteset;
  19: chs2_v2_single_spritegroup;
  20: chs2_v2_next_spritegroup;
  21: chs2_v2_first_spritegroup;
  22: chs2_v2_traveling_first_spriteset;
  23: chs2_v2_speedover50_spriteset;

  24: chs2_v4_notpowered_spriteset;
  25: chs2_v4_single_spritegroup;
  26: chs2_v4_next_spritegroup;
  27: chs2_v4_first_spritegroup;
  28: chs2_v4_traveling_first_spriteset;
  29: chs2_v4_speedover50_spriteset;

  30: chs2_v6_notpowered_spriteset;
  31: chs2_v6_single_spritegroup;
  32: chs2_v6_next_spritegroup;
  33: chs2_v6_first_spritegroup;
  34: chs2_v6_traveling_first_spriteset;
  35: chs2_v6_speedover50_spriteset;

  align_11_spriteset; // параллелепипед
}

switch (FEAT_TRAINS, PARENT, chs2_get_spriteset1,
[
  STORE_TEMP(count_veh_id(chs2), 0),
  current_speed > threshold_of_speed()
])
{
  chs2_get_spriteset2;
}

// Если рисуем на карте и следующий в цепочке вагон скрыт, то
// отдаём пустышку
switch (FEAT_TRAINS, SELF, chs2_get_spriteset,
  is_drawn_in_viewport() && is_hidden_at(1))
{
  1: dummy_spriteset;
  chs2_get_spriteset1;
}

// покупка
switch (FEAT_TRAINS, SELF, chs2_get_purchase_spriteset,
  (current_year >= 1963) +
  (current_year >= 1964) +
  (current_year >= 1972)
)
{
  0: chs2_purchase_spriteset;
  1: chs2_v3_purchase_spriteset;
  2: chs2_v5_purchase_spriteset;
  chs2_v6_purchase_spriteset;
}

// Что присоединяем?
switch (FEAT_TRAINS, SELF, chs2_can_attach_wagon,
  0)
{
  return CB_RESULT_ATTACH_ALLOW;
}

switch (FEAT_TRAINS, PARENT, chs2_start_stop,
  0)
{
  return CB_RESULT_NO_TEXT;
}

// Названия моделей

#define S34E0 "34E0" // 1962
#define S34E2 "34E2" // 1963
#define S53E "53E"   // 1964-1982

switch (FEAT_TRAINS, SELF, chs2_cargo_subtype_text2,
  (build_year >= 1963) +
  (build_year >= 1964))
{
  0: return string(STR_REFIT_FACTORY_OF, S34E0);
  1: return string(STR_REFIT_FACTORY_OF, S34E2);
  return string(STR_REFIT_FACTORY_OF, S53E);
}

switch (FEAT_TRAINS, SELF, chs2_cargo_subtype_text,
  cargo_subtype)
{
  0: chs2_cargo_subtype_text2;
  return CB_RESULT_NO_TEXT;
}

switch (FEAT_TRAINS, SELF, chs2_additional_text,
  (build_year >= 1963) +
  (build_year >= 1964))
{
  // 34E0
  0: return string(STR_CHS2_PURCHASE_HINT, S34E0,
    string(STR_ASSIGNMENT_PASSENGER_ELECTRIC_DC),
    string(STR_MUS_UP_TO_2_SECTIONS));
  // 34E2
  1: return string(STR_CHS2_PURCHASE_HINT, S34E2,
    string(STR_ASSIGNMENT_PASSENGER_ELECTRIC_DC),
    string(STR_MUS_UP_TO_2_SECTIONS));
  // 53E
  return string(STR_CHS2_PURCHASE_HINT, S53E,
    string(STR_ASSIGNMENT_PASSENGER_ELECTRIC_DC),
    string(STR_MUS_UP_TO_2_SECTIONS));
}

#undef S34E0
#undef S34E2
#undef S53E

// Макс. скорость: 160 км/ч, после 30 лет 130 км/ч
#define MAX_SPEED (age_in_days >= (30*365+8)) ? 130 : 160

switch (FEAT_TRAINS, SELF, chs2_purchase_speed,
  160)
{
  return;
}

switch (FEAT_TRAINS, SELF, chs2_speed,
[
  STORE_TEMP(MAX_SPEED, 0),
  is_penalise_speed() ? get_penalised_speed(LOAD_TEMP(0)) : LOAD_TEMP(0)
])
{
  return;
}

#undef MAX_SPEED

switch (FEAT_TRAINS, SELF, chs2_bitmask_vehicle_info3,
[
  STORE_TEMP(LOAD_TEMP(0) - count_veh_id(chs2), 0),
  (last_computed_result && (position_in_consist == 2 * LOAD_TEMP(0)) &&
    LOAD_TEMP(0) < 2)
])
{
  1: return 0;
  return FLAG_PENALISE_SPEED;
}

switch (FEAT_TRAINS, PARENT, chs2_bitmask_vehicle_info2,
[
  STORE_TEMP(count_veh_id(chs2), 0),
  vehicle_type_id == chs2
])
{
  chs2_bitmask_vehicle_info3;
}

switch (FEAT_TRAINS, SELF, chs2_bitmask_vehicle_info,
  position_in_consist == 0)
{
  1: return 0;
  chs2_bitmask_vehicle_info2;
}

switch (FEAT_TRAINS, SELF, chs2_weight,
  build_year >= 1964)
{
  1: return 126;
  return 125;
}

// меняем tec выпущенным после 1964 года из-за смены массы
// слишком мала разница, отключаем
/*
switch (FEAT_TRAINS, SELF, chs2_tractive_effort_coefficient,
  build_year >= 1964)
{
  1: return 28; // 0.10851959831
  return 28;    // 0.1093877551
}
*/

switch (FEAT_TRAINS, SELF, chs2_cost_factor,
  (current_year >= 1963) +
  (current_year >= 1964) +
  (current_year >= 1967) +
  (current_year >= 1970) +
  (current_year >= 1973) +
  (current_year >= 1978) +
  (current_year >= 1982))
{
  0: return 181;
  1: return 185;
  2: return 189;
  3: return 200;
  4: return 212;
  5: return 224;
  6: return 244;
  return 259;
}

item (FEAT_TRAINS, chs2) 
{
  property
  {
    name: string(STR_CHS2_NAME);
    climates_available: get_climates_available();
    introduction_date: date(get_loc_year(1962), 1, 1);
    vehicle_life: 30; // срок службы
    model_life: get_model_life(1962,1982);
    retire_early: get_retire_early(1962,1982); // VEHICLE_NEVER_EXPIRES;
    reliability_decay: 20;
    cargo_allow_refit: [PASS];
    default_cargo_type: PASS;
    cost_factor: 181;
    running_cost_factor: get_electric_running_cost_factor();
    sprite_id: SPRITE_ID_NEW_TRAIN;
    speed: 160 km/h;
    misc_flags: bitmask(TRAIN_FLAG_TILT, TRAIN_FLAG_MU);
    refit_cost: 0;
    track_type: get_dc_track_type();
    ai_special_flag: AI_FLAG_PASSENGER;
    power: 4915 hpM;
    running_cost_base: RUNNING_COST_ELECTRIC;
    cargo_capacity: 1;
    weight: 125 ton;
    engine_class: ENGINE_CLASS_ELECTRIC;
    tractive_effort_coefficient: get_tec(134.0, 125);
    length: 8;
    visual_effect_and_powered: electric_visual_effect_and_powered(0);
  }
  graphics {
    default: chs2_get_spriteset;
    purchase: chs2_get_purchase_spriteset;
    articulated_part: articulated_part_dummy3;
    can_attach_wagon: chs2_can_attach_wagon;
    start_stop: chs2_start_stop;
    additional_text: chs2_additional_text;
    cargo_subtype_text: chs2_cargo_subtype_text;
    cargo_capacity: return 0;
    speed: chs2_speed;
    purchase_speed: chs2_purchase_speed;
    bitmask_vehicle_info: chs2_bitmask_vehicle_info;
    weight: chs2_weight;
//    tractive_effort_coefficient: chs2_tractive_effort_coefficient;
    cost_factor: chs2_cost_factor;
  }
}
