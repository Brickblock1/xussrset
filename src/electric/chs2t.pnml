  is_drawn_in_viewport() && is_hidden_at(1))
{
  1: dummy_spriteset;
  chs2t_get_spriteset1;
}

// покупка
switch (FEAT_TRAINS, SELF, chs2t_get_purchase_spriteset,
  (current_year >= 1974) +
  (current_year >= 1976)
)
{
  0: chs2t_purchase_spriteset;
  1: chs2t_v2_purchase_spriteset;
  chs2t_v9_purchase_spriteset;
}

// Что присоединяем?
switch (FEAT_TRAINS, SELF, chs2t_can_attach_wagon,
  0)
{
  return CB_RESULT_ATTACH_ALLOW;
}

switch (FEAT_TRAINS, PARENT, chs2t_start_stop,
  0)
{
  return CB_RESULT_NO_TEXT;
}

// Названия моделей

#define S63E0 "63E0" // 1972-73
#define S63E1 "63E1" // 1974-75
#define S63E2 "63E2" // 1976-82

switch (FEAT_TRAINS, SELF, chs2t_cargo_subtype_text,
  (build_year >= 1974) + (build_year >= 1976) +
  (cargo_subtype * 3))
{
  0: return string(STR_REFIT_FACTORY_OF, S63E0);
  1: return string(STR_REFIT_FACTORY_OF_NUM, S63E1, 1);
  2: return string(STR_REFIT_FACTORY_OF_NUM, S63E2, 1);
  4: return string(STR_REFIT_FACTORY_OF_NUM, S63E1, 2);
  5: return string(STR_REFIT_FACTORY_OF_NUM, S63E2, 2);
  7: return string(STR_REFIT_DEPOT_OF_NUM, S63E1, 1);
  8: return string(STR_REFIT_DEPOT_OF_NUM, S63E2, 1);
  10: return string(STR_REFIT_DEPOT_OF_NUM, S63E1, 2);
  11: return string(STR_REFIT_DEPOT_OF_NUM, S63E2, 2);
  13: return string(STR_REFIT_DEPOT_OF_NUM, S63E1, 3);
  14: return string(STR_REFIT_DEPOT_OF_NUM, S63E2, 3);
  16: return string(STR_REFIT_DEPOT_OF_NUM, S63E1, 4);
  17: return string(STR_REFIT_DEPOT_OF_NUM, S63E2, 4);
  19: return string(STR_REFIT_DEPOT_OF_NUM, S63E1, 5);
  return CB_RESULT_NO_TEXT;
}

switch (FEAT_TRAINS, SELF, chs2t_additional_text,
  (build_year >= 1963) + (build_year >= 1964))
{
  0: return string(STR_CHS2T_PURCHASE_HINT, S63E0, // 63E0
    string(STR_ASSIGNMENT_PASSENGER_ELECTRIC_DC),
    string(STR_MUS_ONLY_OF_1_SECTION));
  1: return string(STR_CHS2T_PURCHASE_HINT, S63E1, // 63E1
    string(STR_ASSIGNMENT_PASSENGER_ELECTRIC_DC),
    string(STR_MUS_ONLY_OF_1_SECTION));
  return string(STR_CHS2T_PURCHASE_HINT, S63E2,    // 63E2
    string(STR_ASSIGNMENT_PASSENGER_ELECTRIC_DC),
    string(STR_MUS_ONLY_OF_1_SECTION));
}

#undef S63E0
#undef S63E1
#undef S63E2

// Макс. скорость: 160 км/ч, после 30 лет 130 км/ч
#define MAX_SPEED (age_in_days >= (20*365+5)) ? 130 : 160

switch (FEAT_TRAINS, SELF, chs2t_purchase_speed,
  160)
{
  return;
}

switch (FEAT_TRAINS, SELF, chs2t_speed,
[
  STORE_TEMP(MAX_SPEED, 0),
  is_penalise_speed() ? get_penalised_speed(LOAD_TEMP(0)) : LOAD_TEMP(0)
])
{
  return;
}

#undef MAX_SPEED

switch (FEAT_TRAINS, SELF, chs2t_bitmask_vehicle_info,
  position_in_consist == 0)
{
  1: return 0;
  return FLAG_PENALISE_SPEED;
}

switch (FEAT_TRAINS, SELF, chs2t_cost_factor,
  (current_year >= 1974) +
  (current_year >= 1976) +
  (current_year >= 1982))
{
  0: return 249;
  1: return 255;
  2: return 263;
  return 290;
}

item (FEAT_TRAINS, chs2t) 
{
  property
  {
    name: string(STR_CHS2T_NAME);
    climates_available: get_climates_available();
    introduction_date: date(get_loc_year(1972), 1, 1);
    vehicle_life: 40; // срок службы
    model_life: get_model_life(1972,1982);
    retire_early: get_retire_early(1972,1982); // VEHICLE_NEVER_EXPIRES;
    reliability_decay: 20;
    cargo_allow_refit: [PASS];
    default_cargo_type: PASS;
    cost_factor: 249;
    running_cost_factor: get_electric_running_cost_factor();
    sprite_id: SPRITE_ID_NEW_TRAIN;
    speed: 160 km/h;
    misc_flags: bitmask(TRAIN_FLAG_TILT, TRAIN_FLAG_MU);
    refit_cost: 0;
    track_type: get_dc_track_type();
    ai_special_flag: AI_FLAG_PASSENGER;
    power: 5490 hpM;
    running_cost_base: RUNNING_COST_ELECTRIC;
    cargo_capacity: 1;
    weight: 126 ton;
    engine_class: ENGINE_CLASS_ELECTRIC;
    tractive_effort_coefficient: get_tec(159.0, 126);
    length: 8;
    visual_effect_and_powered: electric_visual_effect_and_powered(0);
  }
  graphics {
    default: chs2t_get_spriteset;
    purchase: chs2t_get_purchase_spriteset;
    articulated_part: articulated_part_dummy3;
    can_attach_wagon: chs2t_can_attach_wagon;
    start_stop: chs2t_start_stop;
    additional_text: chs2t_additional_text;
    cargo_subtype_text: chs2t_cargo_subtype_text;
    cargo_capacity: return 0;
    speed: chs2t_speed;
    purchase_speed: chs2t_purchase_speed;
    bitmask_vehicle_info: chs2t_bitmask_vehicle_info;
    cost_factor: chs2t_cost_factor;
  }
}
