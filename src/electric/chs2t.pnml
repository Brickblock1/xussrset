switch (FEAT_TRAINS, PARENT, chs2t_get_spriteset1,
  current_speed)
{
  chs2t_get_spriteset2;
}

// Если рисуем на карте и следующий в цепочке вагон скрыт, то
// отдаём пустышку
switch (FEAT_TRAINS, SELF, chs2t_get_spriteset,
  is_drawn_in_viewport() && is_hidden_at(1))
{
  1: dummy_spriteset;
  chs2t_get_spriteset1;
}

// покупка
switch (FEAT_TRAINS, SELF, chs2t_get_purchase_spriteset,
  (current_year >= 1974) +
  (current_year >= 1976)
)
{
  0: chs2t_purchase_spriteset;
  1: chs2t_v2_purchase_spriteset;
  chs2t_v9_purchase_spriteset;
}

// Что присоединяем?
switch (FEAT_TRAINS, SELF, chs2t_can_attach_wagon,
  0)
{
  return CB_RESULT_ATTACH_ALLOW;
}

switch (FEAT_TRAINS, PARENT, chs2t_start_stop,
  0)
{
  return CB_RESULT_NO_TEXT;
}

switch (FEAT_TRAINS, SELF, chs2t_cargo_subtype_text3,
  build_year >= 1976)
{
  0: string(STR_CHS2T_REFIT_V7);
  return CB_RESULT_NO_TEXT;
}

switch (FEAT_TRAINS, SELF, chs2t_cargo_subtype_text2,
  build_year >= 1974)
{
  1: string(STR_CHS2T_REFIT_V2);
  return CB_RESULT_NO_TEXT;
}

switch (FEAT_TRAINS, SELF, chs2t_cargo_subtype_text,
  cargo_subtype)
{
  0: string(STR_CHS2T_REFIT_V1);
  1: chs2t_cargo_subtype_text2;
  2: string(STR_CHS2T_REFIT_V3);
  3: string(STR_CHS2T_REFIT_V4);
  4: string(STR_CHS2T_REFIT_V5);
  5: string(STR_CHS2T_REFIT_V6);
  6: chs2t_cargo_subtype_text3;
  return CB_RESULT_NO_TEXT;
}

item (FEAT_TRAINS, chs2t) 
{
  property
  {
    name: string(STR_CHS2T_NAME);
    climates_available: get_climates_available();
    introduction_date: date(1972, 1, 1);
    vehicle_life: 40; // срок службы
    model_life: 40; // VEHICLE_NEVER_EXPIRES;
    reliability_decay: 20;
    refittable_cargo_classes: bitmask(CC_PASSENGERS);
//    loading_speed: 12; // скорость погрузки/выгрузки, пассажиров
    cost_factor: 2;
    running_cost_factor: 10;
    sprite_id: SPRITE_ID_NEW_TRAIN;
    speed: 160 km/h;
    misc_flags: bitmask(TRAIN_FLAG_MU);
    refit_cost: 0;
    track_type: ELRL;
    ai_special_flag: AI_FLAG_PASSENGER;
    power: 5490 hpM;
    running_cost_base: RUNNING_COST_ELECTRIC;
    dual_headed: 0;
    cargo_capacity: 1;
    weight: 126 ton;
    ai_engine_rank: 0;
    engine_class: ENGINE_CLASS_ELECTRIC;
    extra_power_per_wagon: 0 kW;
    tractive_effort_coefficient: 0.128765792;
    air_drag_coefficient: 0.06;
    shorten_vehicle: SHORTEN_TO_8_8;
    extra_weight_per_wagon: 0;
    bitmask_vehicle_info: 0;
    visual_effect_and_powered:
      visual_effect_and_powered(VISUAL_EFFECT_ELECTRIC, 1, DISABLE_WAGON_POWER);
  }
  graphics {
    default: chs2t_get_spriteset;
    purchase: chs2t_get_purchase_spriteset;
    articulated_part: articulated_part_dummy3;
    can_attach_wagon: chs2t_can_attach_wagon;
    start_stop: chs2t_start_stop;
    additional_text: return string(STR_CHS2T_PURCHASE_HINT);
    cargo_subtype_text: chs2t_cargo_subtype_text;
    cargo_capacity: return 0;
    speed: speed_after30_160to130;
  }
}
