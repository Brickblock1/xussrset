switch (FEAT_TRAINS, SELF, chs6_get_spriteset2,
  (((LOAD_TEMP(0) - count_veh_id(chs6)) % 2) * 3) +
  // поправка на нет тока
  ((LOAD_TEMP(1) > threshold_of_speed()) + 1) *
    (!(vehicle_is_not_powered || vehicle_is_in_depot)) +
  cargo_subtype * 6
)
{
  0: chs6_notpowered_spriteset;
  1: chs6_spritegroup;
  2: chs6_speedover50_spriteset;
  3: chs6_b_notpowered_spriteset;
  4: chs6_b_spritegroup;
  5: chs6_b_speedover50_spriteset;

