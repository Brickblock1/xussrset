switch (FEAT_TRAINS, PARENT, chs6_get_spriteset1,
[
  STORE_TEMP(count_veh_id(chs6), 0),
  STORE_TEMP(current_speed, 1)
])
{
  chs6_get_spriteset2;
}

// Если рисуем на карте и следующий в цепочке вагон скрыт, то
// отдаём пустышку
switch (FEAT_TRAINS, SELF, chs6_get_spriteset,
  is_drawn_in_viewport() && is_hidden_at(1))
{
  1: dummy_spriteset;
  chs6_get_spriteset1;
}

// Что присоединяем?
switch (FEAT_TRAINS, SELF, chs6_can_attach_wagon,
  0)
{
  return CB_RESULT_ATTACH_ALLOW;
}

// Если хотя бы 2 не следуют др. за др., то не выпускать
switch (FEAT_TRAINS, PARENT, chs6_start_stop2,
[
  set_offset_to(2),
  prev_vehicle_type_id() == chs6
])
{
  1: return CB_RESULT_NO_TEXT;
  return string(STR_START_STOP_NEED_AT_LEAST_2_CONSECUTIVE_ENGINE);
}

// Если локомотивов меньше двух, то не выпускать
switch (FEAT_TRAINS, PARENT, chs6_start_stop,
  count_veh_id(chs6) >= 2)
{
  1: chs6_start_stop2;
  return string(STR_START_STOP_NEED_2_OR_MORE_ENGINE);
}

switch (FEAT_TRAINS, SELF, chs6_cargo_subtype_text3,
  current_year >= 2000)
{
  1: string(STR_REFIT_OCTOBER_RAILWAY_BLUE_WITH_WHITE_STRIPE);
  return CB_RESULT_NO_TEXT;
}

switch (FEAT_TRAINS, SELF, chs6_cargo_subtype_text2,
  current_year >= 1998)
{
  1: string(STR_REFIT_OCTOBER_RAILWAY_SKODA);
  return CB_RESULT_NO_TEXT;
}

switch (FEAT_TRAINS, SELF, chs6_cargo_subtype_text,
  cargo_subtype)
{
  0: string(STR_REFIT_FACTORY_SKODA1);
  1: string(STR_REFIT_FACTORY_SKODA2);
  2: chs6_cargo_subtype_text2;
  3: chs6_cargo_subtype_text3;
  4: string(STR_REFIT_OCTOBER_RAILWAY_BLUE_WITH_GRAY_STRIPE);
  5: string(STR_REFIT_OCTOBER_RAILWAY_BLUE_WITH_SILVER_BELT);
  return CB_RESULT_NO_TEXT;
}

item (FEAT_TRAINS, chs6) 
{
  property
  {
    name: string(STR_CHS6_NAME);
    climates_available: get_climates_available();
    introduction_date: date(1979, 1, 1);
    vehicle_life: 40; // срок службы
    model_life: 40; // VEHICLE_NEVER_EXPIRES;
    reliability_decay: 20;
    cargo_allow_refit: [PASS];
    cost_factor: get_electric_cost_factor();
    running_cost_factor: get_electric_running_cost_factor();
    sprite_id: SPRITE_ID_NEW_TRAIN;
    speed: 160 km/h;
    misc_flags: bitmask(TRAIN_FLAG_TILT, TRAIN_FLAG_MU);
    refit_cost: 0;
    track_type: ELRL;
    ai_special_flag: AI_FLAG_PASSENGER;
    power: 5300 hpM;
    running_cost_base: RUNNING_COST_ELECTRIC;
    cargo_capacity: 1;
    weight: 82 ton;
    engine_class: ENGINE_CLASS_ELECTRIC;
    tractive_effort_coefficient: 0.1487;
    shorten_vehicle: SHORTEN_TO_8_8;
    visual_effect_and_powered: electric_visual_effect_and_powered(0);
  }
  graphics {
    default: chs6_get_spriteset;
    purchase: chs6_purchase_spriteset;
    articulated_part: articulated_part_dummy1;
    can_attach_wagon: chs6_can_attach_wagon;
    start_stop: chs6_start_stop;
    additional_text: return string(STR_CHS6_PURCHASE_HINT);
    cargo_subtype_text: chs6_cargo_subtype_text;
    cargo_capacity: return 0;
  }
}
