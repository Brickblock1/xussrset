 // ds3

// Спрайты

#define IMAGEFILE  "src/electric/ds3.png"

// покупка
purchase_sprites(ds3, 0, 0)

// обычный: погрузка/перемещение
spriteset (ds3_loading_spriteset, IMAGEFILE)
{
  s10_template(0, 19, 0)
} 

spriteset (ds3_traveling_spriteset, IMAGEFILE)
{
  s10_template(0, 86, 0)
} 

spritegroup ds3_spritegroup
{
  loading: ds3_loading_spriteset;
  loaded: ds3_traveling_spriteset;
}

spriteset (ds3_speedoverTH_spriteset, IMAGEFILE)
{
  s10_template(0, 153, 0)
} 

// развёрнутый: погрузка/перемещение
spriteset (ds3_r_loading_spriteset, IMAGEFILE)
{
  s10_template(443, 19, 0)
} 

spriteset (ds3_r_traveling_spriteset, IMAGEFILE)
{
  s10_template(443, 86, 0)
} 

spritegroup ds3_r_spritegroup
{
  loading: ds3_r_loading_spriteset;
  loaded: ds3_r_traveling_spriteset;
}

spriteset (ds3_r_speedoverTH_spriteset, IMAGEFILE)
{
  s10_template(443, 153, 0)
} 

#undef IMAGEFILE

switch (FEAT_TRAINS, SELF, ds3_sprites_l,
  LOAD_TEMP(1) > threshold_of_speed() )
{
  0: ds3_spritegroup;
     ds3_speedoverTH_spriteset;
}

switch (FEAT_TRAINS, SELF, ds3_sprites_r,
  LOAD_TEMP(1) > threshold_of_speed() )
{
  0: ds3_r_spritegroup;
     ds3_r_speedoverTH_spriteset;
}

engine_direction_template(ds3, ) 

long_vehicle(ds3)

engine_speed(ds3, 160)

engine_penalise_speed(ds3, 2)

item (FEAT_TRAINS, ds3)
{
  property
  {
    name: string(STR_DS3_NAME);
    climates_available: get_climates_available();
    introduction_date: date(get_loc_year(2002), 1, 1);
    vehicle_life: 20;
    model_life: get_model_life(2002,2008);
    retire_early: get_retire_early(2002,2008);
    reliability_decay: 20;
    cost_factor: 198;
    running_cost_factor: get_electric_running_cost_factor();
    sprite_id: SPRITE_ID_NEW_TRAIN;
    misc_flags: bitmask(TRAIN_FLAG_TILT, TRAIN_FLAG_MU);
    track_type: get_ac_track_type();
    ai_special_flag: AI_FLAG_PASSENGER;
    power: 5800 hpM;
    running_cost_base: RUNNING_COST_ELECTRIC;
    weight: 90 ton;
    engine_class: ENGINE_CLASS_ELECTRIC;
    tractive_effort_coefficient: get_tec(140.0, 90);
    length: 8;
    visual_effect_and_powered: electric_visual_effect_and_powered(0);
    cargo_allow_refit: [MAIL];
    default_cargo_type: MAIL;
    cargo_capacity: 1;
  }
  graphics {
    default: ds3_sprites;
    purchase: ds3_purchase_sprites;
    articulated_part: articulated_part_dummy2;
    can_attach_wagon: any_can_attach_wagon;
    start_stop: any_start_stop;
    additional_text: return string(STR_DS3_PURCHASE_HINT);
    speed: ds3_speed;
    purchase_speed: ds3_purchase_speed;
    bitmask_vehicle_info: ds3_bitmask_vehicle_info;
    cargo_capacity: return 0;
  }
}

if (enable_long_names)
{
  item (FEAT_TRAINS, ds3)
  {
    property
    { name: string(STR_DS3_NAME_LONG); }
  }
}

