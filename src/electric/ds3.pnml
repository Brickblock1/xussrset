item (FEAT_TRAINS, ds3) {
  property {
    name: string(STR_DS3_NAME);
    climates_available: get_climates_available();
    introduction_date: date(get_loc_year(2002), 1, 1);
    vehicle_life: 20;
    model_life: get_model_life(2002,2008);
    retire_early: get_retire_early(2002,2008);
    reliability_decay: 10;
    cost_factor: 198;
    sprite_id: SPRITE_ID_NEW_TRAIN; 
    misc_flags: bitmask(TRAIN_FLAG_TILT, TRAIN_FLAG_MU);
    track_type: get_ac_track_type();
    ai_special_flag: AI_FLAG_PASSENGER;
    power: 5800 hpM;
    running_cost_base: RUNNING_COST_ELECTRIC;
    weight: 90 ton;
    engine_class: ENGINE_CLASS_ELECTRIC;
    tractive_effort_coefficient: get_tec(140.0, 90);
    length: 8;
    cargo_allow_refit: [MAIL];
    default_cargo_type: MAIL;
    cargo_capacity: 1;
    effect_spawn_model_and_powered: EFFECT_SPAWN_MODEL_ELECTRIC;
  }
  graphics {
    default: ds3_sprites;
    purchase: ds3_purchase_sprites;
    articulated_part: articulated_part_dummy2;
    can_attach_wagon: any_can_attach_wagon;
    start_stop: any_start_stop;
    additional_text: return string(STR_PURCHASE_HINT_ENGINE, 
                                   string(STR_PURCHASE_HINT_ENGINE_TYPE_PASSENGER_FREIGHT_ELECTRIC_AC), 
                                   string(STR_PURCHASE_HINT_SECTIONS_1_2), 
                                   string(STR_PURCHASE_HINT_FROMTO, 2002, 2008), 
                                   string(STR_PURCHASE_HINT_FACTORY_DNEPROPETROVSK_A1992));
    speed: ds3_speed;
    purchase_speed: ds3_purchase_speed;
    bitmask_vehicle_info: ds3_bitmask_vehicle_info;
    cargo_capacity: return 0;
    create_effect: ds3_create_effect;
    running_cost_factor: ds3_running_cost_factor;
  }
}

if (enable_long_names) {
  item (FEAT_TRAINS, ds3) {
    property { name: string(STR_DS3_NAME_LONG); }
  }
}

