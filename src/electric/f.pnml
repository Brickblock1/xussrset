#undef IMAGEFILE

switch (FEAT_TRAINS, SELF, f_sprites_l,
  ((LOAD_TEMP(1) > threshold_of_speed()) + 1) *
    (!(vehicle_is_not_powered || vehicle_is_in_depot)) +
  cargo_subtype * 3 )
{
  0: f_notpowered_spriteset;
  1: f_spritegroup;
  2: f_speedoverTH_spriteset;
  3: f_v2_notpowered_spriteset;
  4: f_v2_spritegroup;
  5: f_v2_speedoverTH_spriteset;
     align_14_sprites;
}

switch (FEAT_TRAINS, SELF, f_sprites_l,
  ((LOAD_TEMP(1) > threshold_of_speed()) + 1) *
    (!(vehicle_is_not_powered || vehicle_is_in_depot)) +
  cargo_subtype * 3 )
{
  0: f_r_notpowered_spriteset;
  1: f_r_spritegroup;
  2: f_r_speedoverTH_spriteset;
  3: f_r_v2_notpowered_spriteset;
  4: f_r_v2_spritegroup;
  5: f_r_v2_speedoverTH_spriteset;
     align_14_sprites;
}

engine_direction_template(f) 

long_vehicle(f)

switch (FEAT_TRAINS, SELF, f_cargo_subtype_text,
  cargo_subtype)
{
  0: string(STR_REFIT_TTD_84);
  1: string(STR_REFIT_TTD_5B);
     return CB_RESULT_NO_TEXT;
}

engine_speed(f, 100)

engine_penalise_speed(f, 2)

item (FEAT_TRAINS, f) 
{
  property
  {
    name: string(STR_F_NAME);
    climates_available: get_climates_available();
    introduction_date: date(get_loc_year(1959), 1, 1);
    vehicle_life: 15;
    model_life: get_model_life(1959,1960);
    retire_early: get_retire_early(1959,1960);
    reliability_decay: 20;
    cargo_allow_refit: [MAIL];
    default_cargo_type: MAIL;
    cost_factor: 100;
    running_cost_factor: get_electric_running_cost_factor();
    sprite_id: SPRITE_ID_NEW_TRAIN;
    speed: 100 km/h;
    misc_flags: bitmask(TRAIN_FLAG_TILT, TRAIN_FLAG_MU);
    refit_cost: 0;
    track_type: get_ac_track_type();
    ai_special_flag: AI_FLAG_PASSENGER;
    power: 6080 hpM;
    running_cost_base: RUNNING_COST_ELECTRIC;
    cargo_capacity: 1;
    weight: 138 ton;
    engine_class: ENGINE_CLASS_ELECTRIC;
    tractive_effort_coefficient: get_tec(333.0, 138);
    length: 8;
    visual_effect_and_powered: electric_visual_effect_and_powered(0);
  }
  graphics {
    default: f_sprites;
    purchase: f_purchase_sprites;
    articulated_part: articulated_part_dummy6;
    can_attach_wagon: any_can_attach_wagon;
    start_stop: any_start_stop;
    additional_text: return string(STR_F_PURCHASE_HINT);
    cargo_subtype_text: f_cargo_subtype_text;
    cargo_capacity: return 0;
    speed: f_speed;
    purchase_speed: f_purchase_speed;
    bitmask_vehicle_info: f_bitmask_vehicle_info;
  }
}

if (enable_long_names)
{
  item (FEAT_TRAINS, f)
  {
    property
    { name: string(STR_F_NAME_LONG); }
  }
}

