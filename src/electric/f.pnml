 // f

#define IMAGEFILE  "src/electric/f.png"
purchase_sprites(f,    0, 0)
purchase_sprites(fp, 100, 0)

electric1r_2_sprites(14, f_v1,  32,   40)
electric1r_2_sprites(14, f_v2,  32,  375)
electric1r_2_sprites(14, fp_v1, 32,  710)
electric1r_2_sprites(14, fp_v2, 32, 1045)
#undef IMAGEFILE

switch (FEAT_TRAINS, SELF, f_sprites_left, cargo_subtype)
{
  0: f_v1_sprites_left;
  1: f_v2_sprites_left;
     align_14_sprites;
}

switch (FEAT_TRAINS, SELF, f_sprites_right,
  ((LOAD_TEMP(1) > threshold_of_speed()) + 1) *
    (!(vehicle_is_not_powered || vehicle_is_in_depot)) +
  cargo_subtype * 3 )
{
  0: f_v1_sprites_right;
  1: f_v2_sprites_right;
     align_14_sprites;
}

engine_RNDany_direction_template(f, 5, 3) 
long_vehicle_sp(f)

switch (FEAT_TRAINS, SELF, f_cargo_subtype_text,
  cargo_subtype)
{
  0: return string(STR_REFIT_TTD_84);
  1: return string(STR_REFIT_TTD_5B);
     return CB_RESULT_NO_TEXT;
}

engine_electric1_2_effect(f, -1, 7)
engine_speed(f, 100)
engine_penalise_speed(f, 2)
general_running_cost(f, 707)

item (FEAT_TRAINS, f) {
  property {
    name: string(STR_F_NAME);
    climates_available: get_climates_available();
    introduction_date: date(get_loc_year(1959), 1, 1);
    vehicle_life: 15;
    model_life: get_model_life(1959,1960);
    retire_early: get_retire_early(1959,1960);
    reliability_decay: 10;
    cargo_allow_refit: [MAIL];
    default_cargo_type: MAIL;
    cost_factor: 110;
    sprite_id: SPRITE_ID_NEW_TRAIN; 
    speed: 100 km/h;
    misc_flags: bitmask(TRAIN_FLAG_TILT, TRAIN_FLAG_MU);
    refit_cost: 0;
    track_type: get_ac_track_type();
    ai_special_flag: AI_FLAG_PASSENGER;
    power: 6080 hpM;
    running_cost_base: RUNNING_COST_ELECTRIC;
    cargo_capacity: 1;
    weight: 138 ton;
    engine_class: ENGINE_CLASS_ELECTRIC;
    tractive_effort_coefficient: get_tec(333.0, 138);
    length: 8;
    effect_spawn_model_and_powered: EFFECT_SPAWN_MODEL_ELECTRIC;
  }
  graphics {
    default: f_sprites;
    purchase: f_purchase_sprites;
    articulated_part: articulated_part_dummy6;
    can_attach_wagon: any_can_attach_wagon;
    start_stop: any_start_stop;
    additional_text: return string(STR_PURCHASE_HINT_ENGINE, 
                                   string(STR_PURCHASE_HINT_ENGINE_TYPE_PASSENGER_FREIGHT_ELECTRIC_AC), 
                                   string(STR_PURCHASE_HINT_SECTIONS_1_2), 
                                   string(STR_PURCHASE_HINT_FROMTO, 1959, 1960), 
                                   string(STR_PURCHASE_HINT_FACTORY_ALSTOM), 
                                   2);
    cargo_subtype_text: f_cargo_subtype_text;
    cargo_capacity: return 0;
    speed: f_speed;
    purchase_speed: f_purchase_speed;
    bitmask_vehicle_info: f_bitmask_vehicle_info;
    create_effect: f_create_effect;
    running_cost_factor: f_running_cost_factor;
  }
}

if (enable_long_names) {
  item (FEAT_TRAINS, f) {
    property { name: string(STR_F_NAME_LONG); }
  }
}

