engine_direction_template(n8) 

// Если рисуем на карте и следующий в цепочке вагон скрыт, то
// отдаём пустышку
switch (FEAT_TRAINS, SELF, n8_get_spriteset,
  is_drawn_in_viewport() && is_hidden_at(1))
{
  1: dummy_spriteset;
  n8_get_spriteset_t;
}

// покупка
switch (FEAT_TRAINS, SELF, n8_get_purchase_spriteset,
  (current_year >= 1956) +
  (current_year >= 1957)
)
{
  0: n8_purchase_spriteset;
  1: n8_v3_purchase_spriteset;
  n8_v5_purchase_spriteset;
}

switch (FEAT_TRAINS, SELF, n8_cargo_subtype_text4,
  cargo_subtype)
{
  0: string(STR_REFIT_TTD_54);
  1: string(STR_REFIT_TTD_53);
     return CB_RESULT_NO_TEXT;
}
