switch (FEAT_TRAINS, SELF, vl10_get_spriteset_l,
  // поправка на нет тока
  (((LOAD_TEMP(1) > threshold_of_speed()) + 1) *
    (!(vehicle_is_not_powered || vehicle_is_in_depot))) +
  (((LOAD_TEMP(2) >= date(1972, 1, 1)) && build_year < 1972) * 3) +
  ((build_year >= 1973) * 6) +
  ((build_year >= 1974) * 3))
{
  0: vl10_notpowered_spriteset;
  1: vl10_spritegroup;
  2: vl10_speedoverTH_spriteset;
  3: vl10_v2_notpowered_spriteset;
  4: vl10_v2_spritegroup;
  5: vl10_v2_speedoverTH_spriteset;
  6: vl10_v3_notpowered_spriteset;
  7: vl10_v3_spritegroup;
  8: vl10_v3_speedoverTH_spriteset;
  9: vl10_v4_notpowered_spriteset;
 10: vl10_v4_spritegroup;
 11: vl10_v4_speedoverTH_spriteset;
  align_9_spriteset; // параллелепипед
}

switch (FEAT_TRAINS, SELF, vl10_get_spriteset_r,
    (!(vehicle_is_not_powered || vehicle_is_in_depot)) +
  (((LOAD_TEMP(2) >= date(1972, 1, 1)) && build_year < 1972) * 2) +
  ((build_year >= 1973) * 4) +
  ((build_year >= 1974) * 2))
{
  0: vl10_r_notpowered_spriteset;
  1: vl10_r_spriteset;
  2: vl10_r_v2_notpowered_spriteset;
  3: vl10_r_v2_spriteset;
  4: vl10_r_v3_notpowered_spriteset;
  5: vl10_r_v3_spriteset;
  6: vl10_r_v4_notpowered_spriteset;
  7: vl10_r_v4_spriteset;
  align_9_spriteset; // параллелепипед
}

engine_direction_template(vl10) 

// Если рисуем на карте и следующий в цепочке вагон скрыт, то
// отдаём пустышку
switch (FEAT_TRAINS, SELF, vl10_get_spriteset,
  is_drawn_in_viewport() && is_hidden_at(1))
{
  1: dummy_spriteset;
  vl10_get_spriteset_t;
}

switch (FEAT_TRAINS, SELF, vl10_get_purchase_spriteset,
  (current_year >= 1972) +
  (current_year >= 1973) +
  (current_year >= 1974))
{
  0: vl10_purchase_spriteset;
  1: vl10_v2_purchase_spriteset;
  2: vl10_v3_purchase_spriteset;
  vl10_v4_purchase_spriteset;
}

// Макс. скорость: 100 км/ч
#define MAX_SPEED 100

switch (FEAT_TRAINS, SELF, vl10_purchase_speed,
  MAX_SPEED)
{
  return;
}

switch (FEAT_TRAINS, SELF, vl10_speed,
[
  STORE_TEMP(MAX_SPEED, 0),
  is_penalise_speed() ? get_penalised_speed(LOAD_TEMP(0)) : LOAD_TEMP(0)
])
{
  return;
}

#undef MAX_SPEED

switch (FEAT_TRAINS, SELF, vl10_bitmask_vehicle_info3,
[
  STORE_TEMP(LOAD_TEMP(0) - count_veh_id(vl10), 0),
  (last_computed_result && (position_in_consist == 2 * LOAD_TEMP(0)) &&
    LOAD_TEMP(0) < 2)
])
{
  1: return 0;
  return FLAG_PENALISE_SPEED;
}

switch (FEAT_TRAINS, PARENT, vl10_bitmask_vehicle_info2,
[
  STORE_TEMP(count_veh_id(vl10), 0),
  vehicle_type_id == vl10
])
{
  vl10_bitmask_vehicle_info3;
}

switch (FEAT_TRAINS, SELF, vl10_bitmask_vehicle_info,
  position_in_consist == 0)
{
  1: return 0;
  vl10_bitmask_vehicle_info2;
}

item (FEAT_TRAINS, vl10) 
{
  property
  {
    name: string(STR_VL10_NAME);
    climates_available: get_climates_available();
    introduction_date: date(get_loc_year(1964), 1, 1);
    vehicle_life: 30; // срок службы
    model_life: get_model_life(1964,1976);
    retire_early: get_retire_early(1964,1976); // VEHICLE_NEVER_EXPIRES;
    reliability_decay: 20;
    cargo_allow_refit: [GOOD];
    default_cargo_type: GOOD;
    cost_factor: 73;
    running_cost_factor: get_electric_running_cost_factor();
    sprite_id: SPRITE_ID_NEW_TRAIN;
    misc_flags: bitmask(TRAIN_FLAG_TILT);
    refit_cost: 0;
    track_type: get_dc_track_type();
    ai_special_flag: AI_FLAG_PASSENGER;
    power: 3030 hpM;
    running_cost_base: RUNNING_COST_ELECTRIC;
    cargo_capacity: 1;
    weight: (184/2) ton;
    engine_class: ENGINE_CLASS_ELECTRIC;
    tractive_effort_coefficient: get_tec(157.0, 184/2);
    length: 8;
    visual_effect_and_powered: electric_visual_effect_and_powered(0);
  }
  graphics {
    default: vl10_get_spriteset;
    purchase: vl10_get_purchase_spriteset;
    articulated_part: articulated_part_dummy1;
    can_attach_wagon: any_can_attach_wagon;
    start_stop: any_start_stop;
    additional_text: return string(STR_VL10_PURCHASE_HINT);
    cargo_subtype_text: cargo_subtype_text_default;
    cargo_capacity: return 0;
    speed: vl10_speed;
    purchase_speed: vl10_purchase_speed;
    bitmask_vehicle_info: vl10_bitmask_vehicle_info;
    cost_factor: return 73;
  }
}
