 // vl10u

// ВЛ10у "Утюг" (1974-1986) - усиленная модификация ВЛ10 с повышенной
// нагрузкой на ось для большего сцепного веса

#define IMAGEFILE  "src/electric/vl10u.png"

purchase_sprites(vl10u_v1, 0, 0)
purchase_sprites(vl10u_v2, 110, 0)

electric2_1_sprites(9, vl10u_v1, 32,  40)
electric2_1_sprites(9, vl10u_v2, 32, 241)

#undef IMAGEFILE

switch (FEAT_TRAINS, SELF, vl10u_purchase_sprites,
  current_year >= 1976)
{
  0: vl10u_v1_purchase_sprites;
     vl10u_v2_purchase_sprites;
}

switch (FEAT_TRAINS, SELF, vl10u_sprites_left,
  build_year >= 1976)
{   0: vl10u_v1_sprites_left;
    1: vl10u_v2_sprites_left;
       align_9_sprites; 
}

switch (FEAT_TRAINS, SELF, vl10u_sprites_right,
  build_year >= 1976)
{ 
    0: vl10u_v1_sprites_right;
    1: vl10u_v2_sprites_right;
       align_9_sprites; 
}

engine_direction_template(vl10u, ) 

long_vehicle(vl10u)

engine_electric2_1_effect(vl10u, -2, 3)

engine_direction_template(vl10u, _create_effect) 

engine_speed(vl10u, 100)

engine_penalise_speed(vl10u, 2)

item (FEAT_TRAINS, vl10u) 
{
  property
  {
    name: string(STR_VL10U_NAME);
    climates_available: get_climates_available();
    introduction_date: date(get_loc_year(1974), 1, 1);
    vehicle_life: 30;
    model_life: get_model_life(1974,1986);
    retire_early: get_retire_early(1974,1986);
    reliability_decay: 20;
    cargo_allow_refit: [GOOD];
    default_cargo_type: GOOD;
    cost_factor: 88;
    running_cost_factor: get_electric_running_cost_factor();
    sprite_id: SPRITE_ID_NEW_TRAIN;
    misc_flags: bitmask(TRAIN_FLAG_TILT);
    refit_cost: 0;
    track_type: get_dc_track_type();
    ai_special_flag: AI_FLAG_PASSENGER;
    power: 3030 hpM;
    running_cost_base: RUNNING_COST_ELECTRIC;
    cargo_capacity: 1;
    weight: (200/2) ton;
    engine_class: ENGINE_CLASS_ELECTRIC;
    tractive_effort_coefficient: get_tec(180.0, 200/2);
    length: 8;
    effect_spawn_model_and_powered: EFFECT_SPAWN_MODEL_ELECTRIC;
  }
  graphics {
    default: vl10u_sprites;
    purchase: vl10u_purchase_sprites;
    articulated_part: articulated_part_dummy1;
    can_attach_wagon: any_can_attach_wagon;
    start_stop: any_start_stop;
    additional_text: return string(STR_VL10U_PURCHASE_HINT);
    cargo_capacity: return 0;
    speed: vl10u_speed;
    purchase_speed: vl10u_purchase_speed;
    bitmask_vehicle_info: vl10u_bitmask_vehicle_info;
    create_effect: vl10u_create_effect_sprites_start;
  }
}

if (enable_long_names)
{
  item (FEAT_TRAINS, vl10u)
  {
    property
    { name: string(STR_VL10U_NAME_LONG); }
  }
}

