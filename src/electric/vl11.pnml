     vl11_v2_purchase_sprites;
}

switch (FEAT_TRAINS, SELF, vl11_sprites_left,
  cargo_subtype + 
  (build_year >= 1978) * 10)
{   0..4: vl11_v1_sprites_left;
    5..6: vl11_v3_sprites_left;
       7: vl11_v5_sprites_left;
  10..14: vl11_v2_sprites_left;
  15..16: vl11_v4_sprites_left;
      17: vl11_v6_sprites_left;
          align_9_sprites; 
}

switch (FEAT_TRAINS, SELF, vl11_sprites_right,
  cargo_subtype + 
  (build_year >= 1978) * 10)
{ 
    0..4: vl11_v1_sprites_right;
    5..6: vl11_v3_sprites_right;
       7: vl11_v5_sprites_right;
  10..14: vl11_v2_sprites_right;
  15..16: vl11_v4_sprites_right;
      17: vl11_v6_sprites_right;
          align_9_sprites; 
}

