 // vl11

// ВЛ11 (1975-1986)

#define IMAGEFILE  "src/electric/vl11.png"

// покупка
purchase_spriteset(vl11, 0, 0)

// нет тока
spriteset (vl11_notpowered_spriteset, IMAGEFILE)
{
  s9_template(5, 44, 0)
} 

// обычный: погрузка/перемещение
spriteset (vl11_loading_spriteset, IMAGEFILE)
{
  s9_template(5, 111, 0)
} 

spriteset (vl11_traveling_spriteset, IMAGEFILE)
{
  s9_template(5, 178, 0)
} 

spritegroup vl11_spritegroup
{
  loading: vl11_loading_spriteset;
  loaded: vl11_traveling_spriteset;
}

spriteset (vl11_speedoverTH_spriteset, IMAGEFILE)
{
  s9_template(5, 245, 0)
} 

// нет тока
spriteset (vl11_r_notpowered_spriteset, IMAGEFILE)
{
  s9_template(436, 44, 0)
} 

// развёрнутый
spriteset (vl11_r_spriteset, IMAGEFILE)
{
  s9_template(436, 111, 0)
} 

// покупка
purchase_spriteset(vl11_v2, 0, 20)

// нет тока
spriteset (vl11_v2_notpowered_spriteset, IMAGEFILE)
{
  s9_template(5, 356, 0)
} 

// обычный: погрузка/перемещение
spriteset (vl11_v2_loading_spriteset, IMAGEFILE)
{
  s9_template(5, 423, 0)
} 

spriteset (vl11_v2_traveling_spriteset, IMAGEFILE)
{
  s9_template(5, 490, 0)
} 

spritegroup vl11_v2_spritegroup
{
  loading: vl11_v2_loading_spriteset;
  loaded: vl11_v2_traveling_spriteset;
}

spriteset (vl11_v2_speedoverTH_spriteset, IMAGEFILE)
{
  s9_template(5, 557, 0)
} 

// нет тока
spriteset (vl11_r_v2_notpowered_spriteset, IMAGEFILE)
{
  s9_template(436, 356, 0)
} 

// развёрнутый
spriteset (vl11_r_v2_spriteset, IMAGEFILE)
{
  s9_template(436, 423, 0)
} 

#undef IMAGEFILE

// расчёт ориентации секций локомотива. Первые 6 ориентируются парами, далее по номеру в составе. 
switch (FEAT_TRAINS, SELF, vl11_get_spriteset_l,
  (((LOAD_TEMP(1) > threshold_of_speed()) + 1) *
    (!(vehicle_is_not_powered || vehicle_is_in_depot))) + 
  ((build_year >= 1978) * 3))
{ 0: vl11_notpowered_spriteset;
  1: vl11_spritegroup;
  2: vl11_speedoverTH_spriteset;
  3: vl11_v2_notpowered_spriteset;
  4: vl11_v2_spritegroup;
     vl11_v2_speedoverTH_spriteset;	 }

switch (FEAT_TRAINS, SELF, vl11_get_spriteset_r,
  (!(vehicle_is_not_powered || vehicle_is_in_depot)) + 
  ((build_year >= 1978) * 2))
{ 0: vl11_r_notpowered_spriteset;
  1: vl11_r_spriteset;
  2: vl11_r_v2_notpowered_spriteset;
     vl11_r_v2_spriteset; }

engine_direction_template(vl11) 

// Если рисуем на карте и следующий в цепочке вагон скрыт, то
// отдаём пустышку
switch (FEAT_TRAINS, SELF, vl11_get_spriteset,
  is_drawn_in_viewport() && is_hidden_at(1))
{
  1: dummy_spriteset;
     vl11_get_spriteset_t;
}

switch (FEAT_TRAINS, SELF, vl11_get_purchase_spriteset,
  current_year >= 1978)
{
  0: vl11_purchase_spriteset;
     vl11_v2_purchase_spriteset;
}

engine_speed(vl11, 100)

engine_penalise_speed(vl11, 4)

item (FEAT_TRAINS, vl11) 
{
  property
  {
    name: string(STR_VL11_NAME);
    climates_available: get_climates_available();
    introduction_date: date(get_loc_year(1975), 1, 1);
    vehicle_life: 30; // срок службы
    model_life: get_model_life (1975,1986);
    retire_early: get_retire_early(1975,1986);
    reliability_decay: 20;
    cargo_allow_refit: [GOOD];
    default_cargo_type: GOOD;
    cost_factor: 89;
    running_cost_factor: get_electric_running_cost_factor();
    sprite_id: SPRITE_ID_NEW_TRAIN;
    misc_flags: bitmask(TRAIN_FLAG_TILT);
    refit_cost: 0;
    track_type: get_dc_track_type();
    ai_special_flag: AI_FLAG_PASSENGER;
    power: 3030 hpM;
    running_cost_base: RUNNING_COST_ELECTRIC;
    cargo_capacity: 1;
    weight: 92 ton;
    engine_class: ENGINE_CLASS_ELECTRIC;
    tractive_effort_coefficient: get_tec(157.0, 92);
    length: 8;
    visual_effect_and_powered: electric_visual_effect_and_powered(0);
  }
  graphics {
    default: vl11_get_spriteset;
    purchase: vl11_get_purchase_spriteset;
    articulated_part: articulated_part_dummy1;
    can_attach_wagon: any_can_attach_wagon;
    start_stop: any_start_stop;
    additional_text: return string(STR_VL11_PURCHASE_HINT);
    cargo_subtype_text: cargo_subtype_text_default;
    cargo_capacity: return 0;
    speed: vl11_speed;
    purchase_speed: vl11_purchase_speed;
    bitmask_vehicle_info: vl11_bitmask_vehicle_info;
    cost_factor: return 89;
  }
}
