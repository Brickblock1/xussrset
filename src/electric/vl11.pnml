  1: return string(STR_REFIT_FACTORY_VL118, string(STR_REFIT_TTD_53)); 
  2: return string(STR_REFIT_FACTORY_VL118, string(STR_REFIT_TTD_59));
  3: return string(STR_REFIT_FACTORY_VL118, string(STR_REFIT_TTD_9D));
  4: return string(STR_REFIT_FACTORY_VL118, string(STR_REFIT_TTD_62));
  5: return string(STR_REFIT_FACTORY_VL118, string(STR_REFIT_MOSCOW_RAILWAY, string(STR_REFIT_TTD_53)));
  6: return string(STR_REFIT_FACTORY_VL118, string(STR_REFIT_MOSCOW_RAILWAY, string(STR_REFIT_TTD_63)));
  7: return string(STR_REFIT_FACTORY_VL118, string(STR_REFIT_SVERDLOVSK_RAILWAY));
     return CB_RESULT_NO_TEXT;
}

switch (FEAT_TRAINS, SELF, vl11_cargo_subtype_text1,
  cargo_subtype)
{
  0: return string(STR_REFIT_FACTORY);
  1: return string(STR_REFIT_TTD_53); 
  2: return string(STR_REFIT_TTD_59);
  3: return string(STR_REFIT_TTD_9D);
