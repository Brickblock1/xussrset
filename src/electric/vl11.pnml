  cargo_subtype)
{
  0: return vl11_cc + 0;
  1: return vl11_cc + 1;
  2: return vl11_cc + 2;
  3: vl11_colour_mapping_1; 
  4: vl11_colour_mapping_2;
  5: return vl11_cc + 1;
  6: return vl11_cc + 5;
     return CB_FAILED;
}

switch (FEAT_TRAINS, SELF, vl11_cargo_subtype_text2,
  cargo_subtype)
{
