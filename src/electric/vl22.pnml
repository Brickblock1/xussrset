 // vl22

// ВЛ22 (1938-1946) - массовый грузопассажирский электровоз

#define IMAGEFILE  "src/electric/vl22.png"
purchase_sprites(vl22, 0, 0)

electric1_2_sprites(12, vl22_v1, 32,   40)
electric1_2_sprites(12, vl22_v2, 32,  241)
#undef IMAGEFILE

switch (FEAT_TRAINS, SELF, vl22_sprites_start, cargo_subtype)
{
  0: vl22_v1_sprites_left;
  1: vl22_v2_sprites_left;
     align_10_sprites; 
}

long_vehicle(vl22)

engine_electric1_2_effect(vl22, -2, 4)

switch (FEAT_TRAINS, SELF, vl22_cargo_subtype_text,
  cargo_subtype)
{
  0: return string(STR_REFIT_TTD_53);
  1: return string(STR_REFIT_TTD_96);
     return CB_RESULT_NO_TEXT;
}

engine_speed(vl22, 70)

engine_penalise_speed(vl22, 2)

item (FEAT_TRAINS, vl22) 
{
  property
  {
    name: string(STR_VL22_NAME);
    climates_available: get_climates_available();
    introduction_date: date(get_loc_year(1938), 1, 1);
    vehicle_life: 40;
    model_life: get_model_life(1938,1946);
    retire_early: get_retire_early(1938,1946);
    reliability_decay: 20;
    cargo_allow_refit: [MAIL];
    default_cargo_type: MAIL;
    cost_factor: 19;
    running_cost_factor: get_electric_running_cost_factor();
    sprite_id: SPRITE_ID_NEW_TRAIN;
    misc_flags: bitmask(TRAIN_FLAG_TILT, TRAIN_FLAG_MU);
    refit_cost: 0;
    track_type: get_dc_track_type();
    ai_special_flag: AI_FLAG_PASSENGER;
    power: 2447 hpM;
    running_cost_base: RUNNING_COST_ELECTRIC;
    cargo_capacity: 1;
    weight: 132 ton;
    engine_class: ENGINE_CLASS_ELECTRIC;
    tractive_effort_coefficient: get_tec(167.0, 132);
    length: 8;
    effect_spawn_model_and_powered: EFFECT_SPAWN_MODEL_ELECTRIC;
  }
  graphics {
    default: vl22_sprites;
    purchase: vl22_purchase_sprites;
    articulated_part: articulated_part_dummy2;
    can_attach_wagon: any_can_attach_wagon;
    start_stop: any_start_stop;
    additional_text: return string(STR_VL22_PURCHASE_HINT);
    cargo_subtype_text: vl22_cargo_subtype_text;
    cargo_capacity: return 0;
    speed: vl22_speed;
    purchase_speed: vl22_purchase_speed;
    bitmask_vehicle_info: vl22_bitmask_vehicle_info;
    create_effect: vl22_create_effect_sprites_start;
  }
}

if (enable_long_names)
{
  item (FEAT_TRAINS, vl22)
  {
    property
    { name: string(STR_VL22_NAME_LONG); }
  }
}

