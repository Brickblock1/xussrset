switch (FEAT_TRAINS, PARENT, vl23_get_spriteset1,
[
  STORE_TEMP(count_veh_id(vl23), 0),
  STORE_TEMP(current_speed, 1)
])
{
  vl23_get_spriteset2;
}

// Если рисуем на карте и следующий в цепочке вагон скрыт, то
// отдаём пустышку
switch (FEAT_TRAINS, SELF, vl23_get_spriteset,
  is_drawn_in_viewport() && is_hidden_at(1))
{
  1: dummy_spriteset;
  vl23_get_spriteset1;
}

// покупка
switch (FEAT_TRAINS, SELF, vl23_get_purchase_spriteset,
  (current_year >= 1958) +
  (current_year >= 1972)
)
{
  0: vl23_purchase_spriteset;
  1: vl23_v3_purchase_spriteset;
  vl23_v5_purchase_spriteset;
}

// Что присоединяем?
switch (FEAT_TRAINS, SELF, vl23_can_attach_wagon,
  0)
{
  return CB_RESULT_ATTACH_ALLOW;
}

switch (FEAT_TRAINS, PARENT, vl23_start_stop,
  0)
{
  return CB_RESULT_NO_TEXT;
}

switch (FEAT_TRAINS, SELF, vl23_cargo_subtype_text2,
  current_year >= 1972)
{
  1: string(STR_REFIT_GREEN_WITH_BLUE_STRIPE);
  return CB_RESULT_NO_TEXT;
}

switch (FEAT_TRAINS, SELF, vl23_cargo_subtype_text,
  cargo_subtype)
{
  0: string(STR_REFIT_V1);
  1: string(STR_REFIT_V2);
  2: vl23_cargo_subtype_text2;
  3: string(STR_REFIT_GREEN_WITH_YELLOW_STRIPE);
  4: string(STR_REFIT_RED);
  return CB_RESULT_NO_TEXT;
}

// Макс. скорость: 100 км/ч до 1985, 90 км/ч после
#define MAX_SPEED current_year >= 1985 ? 90 : 100

switch (FEAT_TRAINS, SELF, vl23_purchase_speed,
  MAX_SPEED)
{
  return;
}

switch (FEAT_TRAINS, SELF, vl23_speed,
[
  STORE_TEMP(MAX_SPEED, 0),
  is_penalise_speed() ? get_penalised_speed(LOAD_TEMP(0)) : LOAD_TEMP(0)
])
{
  return;
}

#undef MAX_SPEED

switch (FEAT_TRAINS, SELF, vl23_bitmask_vehicle_info3,
[
  STORE_TEMP(LOAD_TEMP(0) - count_veh_id(vl23), 0),
  (last_computed_result && (position_in_consist == 2 * LOAD_TEMP(0)) &&
    LOAD_TEMP(0) < 2)
])
{
  1: return 0;
  return FLAG_PENALISE_SPEED;
}

switch (FEAT_TRAINS, PARENT, vl23_bitmask_vehicle_info2,
[
  STORE_TEMP(count_veh_id(vl23), 0),
  vehicle_type_id == vl23
])
{
  vl23_bitmask_vehicle_info3;
}

switch (FEAT_TRAINS, SELF, vl23_bitmask_vehicle_info,
  position_in_consist == 0)
{
  1: return 0;
  vl23_bitmask_vehicle_info2;
}

switch (FEAT_TRAINS, SELF, vl23_cost_factor,
  (current_year >= 1961)
)
{
  0: return 74;
  return 83;
}

item (FEAT_TRAINS, vl23) 
{
  property
  {
    name: string(STR_VL23_NAME);
    climates_available: get_climates_available();
    introduction_date: date(1956, 1, 1);
    vehicle_life: 30; // срок службы
    model_life: 30; // VEHICLE_NEVER_EXPIRES;
    reliability_decay: 20;
    cargo_allow_refit: [MAIL];
    default_cargo_type: MAIL;
    cost_factor: 74;
    running_cost_factor: get_electric_running_cost_factor();
    sprite_id: SPRITE_ID_NEW_TRAIN;
    misc_flags: bitmask(TRAIN_FLAG_TILT, TRAIN_FLAG_MU);
    refit_cost: 0;
    track_type: get_dc_track_type();
    ai_special_flag: AI_FLAG_PASSENGER;
    power: 3700 hpM;
    running_cost_base: RUNNING_COST_ELECTRIC;
    cargo_capacity: 1;
    weight: 137 ton;
    engine_class: ENGINE_CLASS_ELECTRIC;
    tractive_effort_coefficient: 0.16535;
    length: 8;
    visual_effect_and_powered: electric_visual_effect_and_powered(0);
  }
  graphics {
    default: vl23_get_spriteset;
    purchase: vl23_get_purchase_spriteset;
    articulated_part: articulated_part_dummy2;
    can_attach_wagon: vl23_can_attach_wagon;
    start_stop: vl23_start_stop;
    additional_text: return string(STR_VL23_PURCHASE_HINT);
    cargo_subtype_text: vl23_cargo_subtype_text;
    cargo_capacity: return 0;
    speed: vl23_speed;
    purchase_speed: vl23_purchase_speed;
    bitmask_vehicle_info: vl23_bitmask_vehicle_info;
    cost_factor: vl23_cost_factor;
  }
}
