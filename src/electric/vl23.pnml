switch (FEAT_TRAINS, SELF, vl23_get_spriteset2,
  (((LOAD_TEMP(0) - count_veh_id(vl23)) % 2) * 3) +
  // поправка на нет тока
  (((LOAD_TEMP(1) > threshold_of_speed()) + 1) *
    (!(vehicle_is_not_powered || vehicle_is_in_depot))) +

  ((build_year >= 1958) * 12) +
//  ((current_year >= 1972) * 12) +
//  (((current_year >= 1972) && (build_year < 1958)) * 12) +
  (cargo_subtype * 6)
)
{
  0: vl23_notpowered_spriteset;
  1: vl23_spritegroup;
  2: vl23_speedover50_spriteset;
  3: vl23_r_notpowered_spriteset;
