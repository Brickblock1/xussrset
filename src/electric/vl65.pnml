item (FEAT_TRAINS, vl65) {
  property {
    name: string(STR_NAME_VL65);
    climates_available: get_climates_available();
    introduction_date: date(get_loc_year(1992), 1, 1);
    vehicle_life: 30;
    model_life: get_model_life(1992,1998);
    retire_early: get_retire_early(1992,1998);
    reliability_decay: 10;
    cost_factor: 85;
    sprite_id: SPRITE_ID_NEW_TRAIN; 
    speed: 120 km/h;
    misc_flags: bitmask(TRAIN_FLAG_TILT, TRAIN_FLAG_MU);
    track_type: get_ac_track_type();
    ai_special_flag: AI_FLAG_PASSENGER;
    power: 6225 hpM;
    running_cost_base: RUNNING_COST_ELECTRIC;
    weight: 140 ton;
    engine_class: ENGINE_CLASS_ELECTRIC;
    tractive_effort_coefficient: get_tec(380.0, 140);
    length: 8;
    effect_spawn_model_and_powered: EFFECT_SPAWN_MODEL_ELECTRIC;
    cargo_allow_refit: [MAIL];
    default_cargo_type: MAIL;
    cargo_capacity: 1;
  }
  graphics {
    default: vl65_sprites;
    purchase: vl65_purchase_sprites;
    articulated_part: articulated_part_dummy5;
    can_attach_wagon: any_can_attach_wagon;
    start_stop: any_start_stop;
    additional_text: return string(STR_PURCHASE_HINT_ENGINE, 
                                   string(STR_PURCHASE_HINT_ENGINE_TYPE_PASSENGER_FREIGHT_ELECTRIC_AC), 
                                   string(STR_PURCHASE_HINT_SECTIONS_1_2), 
                                   string(STR_PURCHASE_HINT_FROMTO, 1992, 1998), 
                                   string(STR_PURCHASE_HINT_FACTORY_NOVOCHERKASSK));
    speed: vl65_speed;
    purchase_speed: vl65_purchase_speed;
    bitmask_vehicle_info: vl65_bitmask_vehicle_info;
    cargo_capacity: return 0;
    cargo_subtype_text: return CB_RESULT_NO_TEXT;
    create_effect: vl65_create_effect;
    running_cost_factor: vl65_running_cost_factor;
  }
}

if (enable_long_names) {
  item (FEAT_TRAINS, vl65) {
