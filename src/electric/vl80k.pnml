switch (FEAT_TRAINS, SELF, vl80k_get_spriteset_l,
  // поправка на нет тока
  (((LOAD_TEMP(1) > threshold_of_speed()) + 1) *
    (!(vehicle_is_not_powered || vehicle_is_in_depot))) +
  ((LOAD_TEMP(2) >= date(1972, 1, 1)) * 3) +
  ((build_year >= 1965) * 6) +
  ((build_year >= 1969) * 6))
{
  0: vl80k_notpowered_spriteset;
  1: vl80k_spritegroup;
  2: vl80k_speedoverTH_spriteset;
  3: vl80k_v2_notpowered_spriteset;
  4: vl80k_v2_spritegroup;
  5: vl80k_v2_speedoverTH_spriteset;
  6: vl80k_v3_notpowered_spriteset;
  7: vl80k_v3_spritegroup;
  8: vl80k_v3_speedoverTH_spriteset;
  9: vl80k_v4_notpowered_spriteset;
 10: vl80k_v4_spritegroup;
 11: vl80k_v4_speedoverTH_spriteset;
 12: vl80k_v5_notpowered_spriteset;
 13: vl80k_v5_spritegroup;
 14: vl80k_v5_speedoverTH_spriteset;
 15: vl80k_v6_notpowered_spriteset;
 16: vl80k_v6_spritegroup;
 17: vl80k_v6_speedoverTH_spriteset;
  align_9_spriteset; // параллелепипед
}

