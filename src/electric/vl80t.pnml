// развёрнутый
spriteset (vl80t_r_v3_spriteset, IMAGEFILE)
{
  s9_template(434, 758, 0)
} 

#undef IMAGEFILE

switch (FEAT_TRAINS, SELF, vl80t_get_spriteset_l,
  // поправка на нет тока
  (((LOAD_TEMP(1) > threshold_of_speed()) + 1) *
    (!(vehicle_is_not_powered || vehicle_is_in_depot))) +
  (((LOAD_TEMP(2) >= date(1972, 1, 1)) && build_year < 1978) * 3) +
  ((build_year >= 1978) * 6))
{
  0: vl80t_notpowered_spriteset;
  1: vl80t_spritegroup;
  2: vl80t_speedoverTH_spriteset;
  3: vl80t_v2_notpowered_spriteset;
  4: vl80t_v2_spritegroup;
  5: vl80t_v2_speedoverTH_spriteset;
  6: vl80t_v3_notpowered_spriteset;
  7: vl80t_v3_spritegroup;
  8: vl80t_v3_speedoverTH_spriteset;
  align_9_spriteset; // параллелепипед
}
switch (FEAT_TRAINS, SELF, vl80t_get_spriteset_r,
    (!(vehicle_is_not_powered || vehicle_is_in_depot)) +
  (((LOAD_TEMP(2) >= date(1972, 1, 1)) && build_year < 1978) * 2) +
  ((build_year >= 1978) * 4))
{
  0: vl80t_r_notpowered_spriteset;
  1: vl80t_r_spriteset;
  2: vl80t_r_v2_notpowered_spriteset;
  3: vl80t_r_v2_spriteset;
  4: vl80t_r_v3_notpowered_spriteset;
  5: vl80t_r_v3_spriteset;
  align_9_spriteset; // параллелепипед
}
   
engine_direction_template(vl80t) 

// Если рисуем на карте и следующий в цепочке вагон скрыт, то
// отдаём пустышку
switch (FEAT_TRAINS, SELF, vl80t_get_spriteset,
  is_drawn_in_viewport() && is_hidden_at(1))
{
  1: dummy_spriteset;
  vl80t_get_spriteset_t;
}

switch (FEAT_TRAINS, SELF, vl80t_get_purchase_spriteset,
  (current_year >= 1972) +
  (current_year >= 1978))
{
  0: vl80t_purchase_spriteset;
  1: vl80t_v2_purchase_spriteset;
  2: vl80t_v3_purchase_spriteset;
}

// Макс. скорость: 110 км/ч
#define MAX_SPEED 110

switch (FEAT_TRAINS, SELF, vl80t_purchase_speed,
  MAX_SPEED)
{
  return;
}

switch (FEAT_TRAINS, SELF, vl80t_speed,
[
  STORE_TEMP(get_max_speed(30, 100, MAX_SPEED), 0),
  is_penalise_speed() ? get_penalised_speed(LOAD_TEMP(0)) : LOAD_TEMP(0)
])
{
  return;
}

#undef MAX_SPEED

engine_penalise_speed(vl80t, 2)

item (FEAT_TRAINS, vl80t) 
{
  property
  {
    name: string(STR_VL80T_NAME);
    climates_available: get_climates_available();
    introduction_date: date(get_loc_year(1969), 1, 1);
    vehicle_life: 30; // срок службы
    model_life: get_model_life(1969,1980);
    retire_early: get_retire_early(1969,1980); // VEHICLE_NEVER_EXPIRES;
    reliability_decay: 20;
    cargo_allow_refit: [GOOD];
    default_cargo_type: GOOD;
    cost_factor: 70;
    running_cost_factor: get_electric_running_cost_factor();
    sprite_id: SPRITE_ID_NEW_TRAIN;
    speed: 110 km/h;
    misc_flags: bitmask(TRAIN_FLAG_TILT);
    refit_cost: 0;
    track_type: get_ac_track_type();
    ai_special_flag: AI_FLAG_PASSENGER;
    power: (8110/2) hpM;
    running_cost_base: RUNNING_COST_ELECTRIC;
    cargo_capacity: 1;
    weight: (184/2) ton;
    engine_class: ENGINE_CLASS_ELECTRIC;
    tractive_effort_coefficient: get_tec(402.0, 184);
    length: 8;
    visual_effect_and_powered: electric_visual_effect_and_powered(0);
  }
  graphics {
    default: vl80t_get_spriteset;
    purchase: vl80t_get_purchase_spriteset;
    articulated_part: articulated_part_dummy1;
    can_attach_wagon: any_can_attach_wagon;
    start_stop: any_start_stop;
    additional_text: return string(STR_VL80T_PURCHASE_HINT);
    cargo_subtype_text: cargo_subtype_text_default;
    cargo_capacity: return 0;
    speed: vl80t_speed;
    purchase_speed: vl80t_purchase_speed;
    bitmask_vehicle_info: vl80t_bitmask_vehicle_info;
  }
}
