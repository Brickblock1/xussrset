spriteset (vl80t_v3_purchase_spriteset, IMAGEFILE)
{
  s9_purchase_template(3, 691, 0)
}

// нет тока
spriteset (vl80t_v3_notpowered_spriteset, IMAGEFILE)
{
  s9_template(3, 691, 0)
} 

// обычный: погрузка/перемещение
spriteset (vl80t_v3_loading_spriteset, IMAGEFILE)
