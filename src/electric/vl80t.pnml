// нагрузкой на ось для большего сцепного веса

#define IMAGEFILE  "src/electric/vl80t.png"

// покупка
purchase_spriteset(vl80t, 0, 0)

// нет тока
spriteset (vl80t_notpowered_spriteset, IMAGEFILE)
{
  s9_template(3, 53, 0)
} 

// обычный: погрузка/перемещение
spriteset (vl80t_loading_spriteset, IMAGEFILE)
{
  s9_template(3, 120, 0)
} 

spriteset (vl80t_traveling_spriteset, IMAGEFILE)
{
  s9_template(3, 187, 0)
} 

spritegroup vl80t_spritegroup
{
  loading: vl80t_loading_spriteset;
  loaded: vl80t_traveling_spriteset;
}

spriteset (vl80t_speedoverTH_spriteset, IMAGEFILE)
{
  s9_template(3, 254, 0)
} 

// нет тока
