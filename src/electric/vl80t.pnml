// покупка
purchase_spriteset(vl80t_v3, 200, 0)

// нет тока
spriteset (vl80t_v3_notpowered_spriteset, IMAGEFILE)
{
  s9_template(3, 691, 0)
} 

// обычный: погрузка/перемещение
spriteset (vl80t_v3_loading_spriteset, IMAGEFILE)
{
  s9_template(3, 758, 0)
} 

spriteset (vl80t_v3_traveling_spriteset, IMAGEFILE)
{
  s9_template(3, 825, 0)
} 

spritegroup vl80t_v3_spritegroup
{
  loading: vl80t_v3_loading_spriteset;
  loaded: vl80t_v3_traveling_spriteset;
}

spriteset (vl80t_v3_speedoverTH_spriteset, IMAGEFILE)
{
  s9_template(3, 892, 0)
} 

