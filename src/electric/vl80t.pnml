} 

// покупка
purchase_spriteset(vl80t_v2, 100, 0)

// нет тока
spriteset (vl80t_v2_notpowered_spriteset, IMAGEFILE)
{
  s9_template(3, 373, 0)
} 

// обычный: погрузка/перемещение
