{
  loading: vl80t_v2_loading_spriteset;
  loaded: vl80t_v2_traveling_spriteset;
}

spriteset (vl80t_v2_speedoverTH_spriteset, IMAGEFILE)
{
  s9_template(3, 574, 0)
} 

// нет тока
spriteset (vl80t_r_v2_notpowered_spriteset, IMAGEFILE)
{
  s9_template(434, 373, 0)
