{
  er1_m: return CB_RESULT_ATTACH_ALLOW;
          return string(STR_CAN_ATTACH_OTHERCAR_ONLY);
}

switch (FEAT_TRAINS, PARENT, er1_c_can_attach_wagon2, 
[  set_offset_to(num_vehs_in_consist-4),
   prev_vehicle_type_id()])
{
  er1_m: return CB_RESULT_ATTACH_ALLOW;
          return string(STR_CAN_ATTACH_OTHERCAR_ONLY);
}

switch (FEAT_TRAINS, PARENT, er1_c_can_attach_wagon1, 
[  set_offset_to(num_vehs_in_consist-4),
   prev_vehicle_type_id()])
{
  er1_c: return CB_RESULT_ATTACH_ALLOW;
          return string(STR_CAN_ATTACH_HEAD_ONLY);
}

switch (FEAT_TRAINS, PARENT, er1_c_can_attach_wagon0, 
  ((count_veh_id(er1_m) - count_veh_id(er1_c) - count_veh_id(er1_h)) >= 0 ) * (count_veh_id(er1_m)))
{
  0: return string(STR_CAN_ATTACH_OTHERCAR_ONLY);
  1: return CB_RESULT_ATTACH_ALLOW;
  2: er1_c_can_attach_wagon1;
  3: er1_c_can_attach_wagon2;
  4: er1_c_can_attach_wagon3;
  5: er1_c_can_attach_wagon4;
     return string(STR_CAN_ATTACH_HEAD_ONLY);
}

switch (FEAT_TRAINS, PARENT, er1_c_can_attach_wagon, 
[  set_offset_to(num_vehs_in_consist-2),
   prev_vehicle_type_id()])
{
  er1_m: er1_c_can_attach_wagon0;
          return string(STR_CAN_ATTACH_OTHERCAR_ONLY);
}


switch (FEAT_TRAINS, SELF, er1_can_attach_wagon2,
  vehicle_type_id)
{
  er1_h: er1_h_can_attach_wagon;
  er1_m: er1_m_can_attach_wagon;
  er1_c: er1_c_can_attach_wagon;
          return string(STR_CAN_ATTACH_SAME_MU_ONLY);
}

switch (FEAT_TRAINS, PARENT, er1_can_attach_wagon1,
  (count_veh_id(er1_h) > 1) ? 0 : 
  (((count_veh_id(er1_h) + count_veh_id(er1_m) + count_veh_id(er1_c)) >= 9) && (LOAD_TEMP(0) != er1_h)) ? 1 : 2)
{
  0: return string(STR_CAN_ATTACH_NO_AFTER_REAR_HEAD);
  1: return string(STR_CAN_ATTACH_HEAD_ONLY);
     er1_can_attach_wagon2;
}

switch (FEAT_TRAINS, SELF, er1_can_attach_wagon,
  STORE_TEMP(vehicle_type_id, 0))
{
  er1_can_attach_wagon1;
}

switch (FEAT_TRAINS, PARENT, er1_h_start_stop,
  count_veh_id(er1_h))
{
  2: return CB_RESULT_NO_TEXT;
     return string(STR_START_STOP_NUMBER_OF_HEAD_CAR_MUST_BE_EVEN);
}

// Моторный самостоятельно выпускать из депо нельзя
switch (FEAT_TRAINS, SELF, er1_m_start_stop,
  0)
{
     return string(STR_START_STOP_MOTORIZED_CAR_CANNOT_LEAVE_DEPOT);
}

// Визуализируем эффекты тяги у er1_m, только если локомотив - er1_h
switch (FEAT_TRAINS, SELF, er1_m_visual_effect_and_powered2,
  (count_veh_id(er1_m) * 2) <= LOAD_TEMP(0) )
{
  0: return electric_visual_effect_and_powered(-3);
     return electric_visual_effect_and_powered(5);
}

switch (FEAT_TRAINS, PARENT, er1_m_visual_effect_and_powered1,
[ STORE_TEMP(count_veh_id(er1_m), 0) ])                                                          
{
  er1_m_visual_effect_and_powered2;
}

switch (FEAT_TRAINS, PARENT, er1_m_visual_effect_and_powered,
  vehicle_type_id == er1_h)
{
  1: er1_m_visual_effect_and_powered1;
     return disable_visual_effect_and_powered();
}

// Даём тягу, только если локомотив - er1_h
switch (FEAT_TRAINS, PARENT, er1_m_power,
  vehicle_type_id == er1_h)
{
  1: return get_power_in_cb(853);
     return 0;
}

// Допускается эксплуатация с пассажирами только если голова - er1_h
