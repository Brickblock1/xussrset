// Спрайты
// 2 окраски, только головной с 1972 имеет замену на
// др. 2 окраски

#define IMAGEFILE  "src/emu/er1.png"
purchase_sprites(er1_h, 0, 0)
purchase_sprites(er1_m, 120, 0)
purchase_sprites(er1_c, 240, 0)

emu_3r_0_0_sprites(13, er1_v1, 32, 40)
emu_0_3_0_sprites(13, er1_v1, 32, 40)
emu_0_0_2_sprites(13, er1_v1, 32, 40)
emu_3r_0_0_sprites(13, er1_v1u, 32, 442)
#undef IMAGEFILE

#define IMAGEFILE  "src/emu/er1-gr.png"
