switch (FEAT_TRAINS, SELF, er1_h_sprites_l,
  cargo_subtype +
  ((LOAD_TEMP(3) >= date(1972,1,1)) * 200) +
  ((LOAD_TEMP(4) != er1_h) * 100) )
{
    0: er1_v1_h_sprites_left;
    1: er1_v2_h_sprites_left;
  100: er1_v1_h_notpowered_sprites_left;
  101: er1_v2_h_notpowered_sprites_left;
  200: er1_v1u_h_sprites_left;
  201: er1_v2u_h_sprites_left;
  300: er1_v1u_h_notpowered_sprites_left;
  301: er1_v2u_h_notpowered_sprites_left;
       align_12_sprites;
}

switch (FEAT_TRAINS, SELF, er1_h_sprites_r,
  cargo_subtype +
  ((LOAD_TEMP(3) >= date(1972,1,1)) * 200) +
  ((LOAD_TEMP(4) != er1_h) * 100) )
{
    0: er1_v1_h_sprites_right;
    1: er1_v2_h_sprites_right;
  100: er1_v1_h_notpowered_sprites_right;
  101: er1_v2_h_notpowered_sprites_right;
  200: er1_v1u_h_sprites_right;
  201: er1_v2u_h_sprites_right;
  300: er1_v1u_h_notpowered_sprites_right;
  301: er1_v2u_h_notpowered_sprites_right;
       align_12_sprites;
}

engine_direction_template3m2(er1_h, er1_m, er1_c)

long_vehicle(er1_h)

switch (FEAT_TRAINS, SELF, er1_m_sprites_start,
  ((count_veh_id(er1_m) * 2) <= LOAD_TEMP(0)) +
  (cargo_subtype * 2) +
  ((LOAD_TEMP(4) != er1_h) * 100) )
{
    0: er1_v1_m_sprites_left;
    1: er1_v1_m_sprites_right;
    2: er1_v2_m_sprites_left;
    3: er1_v2_m_sprites_right;
  100: er1_v1_m_notpowered_sprites_left;
  101: er1_v1_m_notpowered_sprites_right;
  102: er1_v2_m_notpowered_sprites_left;
  103: er1_v2_m_notpowered_sprites_right;
       align_12_sprites;
}

long_vehicle(er1_m)

switch (FEAT_TRAINS, SELF, er1_c_sprites_start,
  ((count_veh_id(er1_c) * 2) <= LOAD_TEMP(0)) +
  (cargo_subtype * 2)  +
  ((LOAD_TEMP(4) != er1_h) * 100) )
{
    0: er1_v1_c_sprites_left;
    1: er1_v1_c_sprites_right;
    2: er1_v2_c_sprites_left;
    3: er1_v2_c_sprites_right;
  100: er1_v1_c_notpowered_sprites_left;
  101: er1_v1_c_notpowered_sprites_right;
  102: er1_v2_c_notpowered_sprites_left;
  103: er1_v2_c_notpowered_sprites_right;
       align_12_sprites;
}

long_vehicle(er1_c)

switch (FEAT_TRAINS, PARENT, er1_h_can_attach_wagon3, 
[  set_offset_to(num_vehs_in_consist-4),
   prev_vehicle_type_id()])
{
  er1_c: return CB_RESULT_ATTACH_ALLOW;
          return string(STR_CAN_ATTACH_CAR_ONLY);
}

switch (FEAT_TRAINS, PARENT, er1_h_can_attach_wagon2, 
[  set_offset_to(num_vehs_in_consist-2),
   prev_vehicle_type_id()])
{
  er1_h: return string(STR_CAN_ATTACH_CAR_ONLY);
          return CB_RESULT_ATTACH_ALLOW;
}

switch (FEAT_TRAINS, PARENT, er1_h_can_attach_wagon, 
  (count_veh_id(er1_h) > 1) ? 0 : 
  (((count_veh_id(er1_h) + count_veh_id(er1_m) + count_veh_id(er1_c)) < 3) ||
  ((count_veh_id(er1_h) + count_veh_id(er1_m) + count_veh_id(er1_c)) % 2 == 0 ) ) ? 1 : (2 + count_veh_id(er1_m)) )
{
     0: return string(STR_CAN_ATTACH_NO_MORE_THAN_2_HEAD);
     1: return string(STR_CAN_ATTACH_CAR_ONLY);
     2: er1_h_can_attach_wagon2;
  6..8: er1_h_can_attach_wagon3;
        return CB_RESULT_ATTACH_ALLOW; 
}

switch (FEAT_TRAINS, PARENT, er1_m_can_attach_wagon, 
  ((count_veh_id(er1_m) - count_veh_id(er1_c) - count_veh_id(er1_h)) < 1 ) * (1 + count_veh_id(er1_m)))
{
  0: return string(STR_CAN_ATTACH_OTHERCAR_ONLY);
     return CB_RESULT_ATTACH_ALLOW;
}

switch (FEAT_TRAINS, PARENT, er1_c_can_attach_wagon4, 
[  set_offset_to(num_vehs_in_consist-8),
   prev_vehicle_type_id()])
{
  er1_m: return CB_RESULT_ATTACH_ALLOW;
          return string(STR_CAN_ATTACH_OTHERCAR_ONLY);
}

switch (FEAT_TRAINS, PARENT, er1_c_can_attach_wagon3, 
[  set_offset_to(num_vehs_in_consist-4),
