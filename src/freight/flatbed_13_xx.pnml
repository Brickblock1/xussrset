 // flatbed_13_xx/// Платформа
// Платформа 13-XX (грузоп. 50 т, БМЗ)
// flatbed

#define IMAGEFILE  "src/freight/flatbed-13-xx-50t-bmz.png"

// покупка
purchase_spriteset(flatbed_13_xx, 0, 0)

// пусто
spriteset (flatbed_13_xx_empty_spriteset, IMAGEFILE)
{
  s8_template(7, 36, 0)
}

// шаблон груза, 3 вида загруженности
#define flatbed_13_xx_sprite_layout3_template(x, y, cargo) \
spriteset (flatbed_13_xx_##cargo##_1_spriteset, IMAGEFILE) \
{ \
  s8_template(x, y, 0) \
} \
 \
spriteset (flatbed_13_xx_##cargo##_2_spriteset, IMAGEFILE) \
{ \
  s8_template(x, y+35, 0) \
} \
 \
spriteset (flatbed_13_xx_##cargo##_full_spriteset, IMAGEFILE) \
{ \
  s8_template(x, y+70, 0) \
} \
 \
spritegroup flatbed_13_xx_##cargo##_spritegroup \
{ \
  loading: [flatbed_13_xx_empty_spriteset, \
    flatbed_13_xx_##cargo##_1_spriteset, \
    flatbed_13_xx_##cargo##_2_spriteset, \
    flatbed_13_xx_##cargo##_full_spriteset]; \
  loaded: [flatbed_13_xx_empty_spriteset, \
    flatbed_13_xx_##cargo##_1_spriteset, \
    flatbed_13_xx_##cargo##_2_spriteset, \
    flatbed_13_xx_##cargo##_full_spriteset]; \
} \

