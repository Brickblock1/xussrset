 // flatbed_23_4000_wood

/// Вагон
// 23-4000 платформа для лесоматериалов (1979-)
// flatbed

#define IMAGEFILE  "src/freight/flatbed-23-4000-wood-1979.png"

// покупка
purchase_sprites(flatbed_23_4000_wood, 0, 0)

// вид 1
spriteset (flatbed_23_4000_wood_empty_spriteset, IMAGEFILE)
{
  s14_template(0, 52, 0)
}

spriteset (flatbed_23_4000_wood_full_spriteset, IMAGEFILE)
{
  s14_template(440, 52, 0)
}

spritegroup flatbed_23_4000_wood_spritegroup
{
  loading: [flatbed_23_4000_wood_empty_spriteset,
    flatbed_23_4000_wood_full_spriteset];
  loaded: [flatbed_23_4000_wood_empty_spriteset,
    flatbed_23_4000_wood_full_spriteset];
}

// вид 2
spriteset (flatbed_23_4000_wood_empty_v2_spriteset, IMAGEFILE)
{
  s14_template(0, 119, 0)
}

spriteset (flatbed_23_4000_wood_full_v2_spriteset, IMAGEFILE)
{
  s14_template(440, 119, 0)
}

spritegroup flatbed_23_4000_wood_v2_spritegroup
{
  loading: [flatbed_23_4000_wood_empty_v2_spriteset,
    flatbed_23_4000_wood_full_v2_spriteset];
  loaded: [flatbed_23_4000_wood_empty_v2_spriteset,
    flatbed_23_4000_wood_full_v2_spriteset];
}

// вид 3
spriteset (flatbed_23_4000_wood_empty_v3_spriteset, IMAGEFILE)
{
  s14_template(0, 186, 0)
}

spriteset (flatbed_23_4000_wood_full_v3_spriteset, IMAGEFILE)
{
  s14_template(440, 186, 0)
}

spritegroup flatbed_23_4000_wood_v3_spritegroup
{
  loading: [flatbed_23_4000_wood_empty_v3_spriteset,
    flatbed_23_4000_wood_full_v3_spriteset];
  loaded: [flatbed_23_4000_wood_empty_v3_spriteset,
    flatbed_23_4000_wood_full_v3_spriteset];
}

#undef IMAGEFILE

random_switch (FEAT_TRAINS, SELF, flatbed_23_4000_wood_random, 0 )
{
  1: flatbed_23_4000_wood_spritegroup;
  1: flatbed_23_4000_wood_v2_spritegroup;
  1: flatbed_23_4000_wood_v3_spritegroup;
}                      

switch (FEAT_TRAINS, SELF, flatbed_23_4000_wood_sprites_2,
  cargo_subtype)
{
  0: flatbed_23_4000_wood_random;
  1: flatbed_23_4000_wood_spritegroup;
  2: flatbed_23_4000_wood_v2_spritegroup;
  3: flatbed_23_4000_wood_v3_spritegroup;
     align_14_spriteset;
}

long_vehicle(flatbed_23_4000_wood, )

switch (FEAT_TRAINS, SELF, flatbed_23_4000_wood_cargo_subtype_text,
  cargo_subtype)
{
  0: string(STR_REFIT_FACTORY);
  1: string(STR_REFIT_TTD_5A);
  2: string(STR_REFIT_TTD_62);
  3: string(STR_REFIT_TTD_53);
     return CB_RESULT_NO_TEXT;
}  

item (FEAT_TRAINS, flatbed_23_4000_wood) 
{
  property
  {
    name: string(STR_FLATBED_23_4000_WOOD_NAME);
    climates_available: get_climates_available();
    introduction_date: date(get_car_year(1979), 1, 1);
    model_life: get_model_life(1979,2050);
    retire_early: get_retire_early(1979,2050);
    vehicle_life: 32;
    reliability_decay: 20;
    cargo_allow_refit: [WOOD];
    default_cargo_type: WOOD;
    refit_cost: 0;
    cost_factor: get_car_cost_factor();
    running_cost_factor: get_car_running_cost_factor();
    sprite_id: SPRITE_ID_NEW_TRAIN;
    misc_flags: bitmask(TRAIN_FLAG_TILT, TRAIN_FLAG_MU);
    speed: 120 km/h;
    track_type: get_normal_track_type();
    power: 0 hpM;
    running_cost_base: RUNNING_COST_DIESEL;
    loading_speed: 14;
    cargo_capacity: 56;
    weight: 34 ton;
    length: 8;
    visual_effect_and_powered: disable_visual_effect_and_powered();
    bitmask_vehicle_info: 0;
  }
  graphics
  {
    default: flatbed_23_4000_wood_sprites;
    purchase: flatbed_23_4000_wood_purchase_sprites;
    articulated_part: articulated_part_dummy6;
    additional_text: return string(STR_FLATBED_23_4000_WOOD_PURCHASE_HINT);
    cargo_subtype_text: flatbed_23_4000_wood_cargo_subtype_text;
  }
}

if (enable_long_names)
{
  item (FEAT_TRAINS, flatbed_23_4000_wood)
  {
    property
    { name: string(STR_FLATBED_23_4000_WOOD_NAME_LONG); }
  }
}

