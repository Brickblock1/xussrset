  1: flatbed_13_xx_stel1_sprites;
  1: flatbed_13_xx_stel2_sprites;
  1: flatbed_13_xx_stel3_sprites;
}

random_switch (FEAT_TRAINS, SELF, flatbed_13_xx_good_sprites,
  bitmask(TRIGGER_VEHICLE_NEW_LOAD))
{
  dependent: flatbed_13_xx_stel_sprites;
  1: flatbed_13_xx_good1_sprites;
  1: flatbed_13_xx_good2_sprites;
}

switch (FEAT_TRAINS, SELF, flatbed_13_xx_sprites_start,
  cargo_type_in_veh)
{
  GOOD: flatbed_13_xx_good_sprites;
  WDPR: flatbed_13_xx_wdpr_sprites;
  WOOD: flatbed_13_xx_wood_sprites;
  STEL: flatbed_13_xx_stel_sprites;
        align_8_sprites;
}

