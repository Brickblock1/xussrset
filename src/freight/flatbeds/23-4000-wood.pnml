 // flatbed_23_4000_wood

/// Вагон
// 23-4000 платформа для лесоматериалов (1979-)
// конструкция bitmask(TRIGGER_VEHICLE_SERVICE) внесена в шаблон

#define IMAGEFILE  "src/freight/flatbeds/23-4000-wood.png"
purchase_sprites(flatbed_23_4000, 0, 0)
flatbed_empty_layout_template(flatbed_23_4000_v1, 14, 0, 52)
flatbed_layout1_template(flatbed_23_4000_v1, 14, 440, 52, wood)
#undef IMAGEFILE

switch (FEAT_TRAINS, SELF, flatbed_23_4000_sprites_start,
  cargo_subtype)
{
  0..3: flatbed_23_4000_v1_wood_sprites;
        align_14_sprites;
}

long_vehicle_RND(flatbed_23_4000, flatbed_23_4000_v1_wood_sprites)

wagon_running_cost(flatbed_23_4000, 17)

random_switch (FEAT_TRAINS, SELF, flatbed_23_4000_random, 0 )
{
  independent: flatbed_23_4000_v1_wood_sprites;
  5: return ttdall_cc + 0x5C;
  4: return ttdall_cc + 0x63;
  4: return ttdall_cc + 0x53;
}                      

switch (FEAT_TRAINS, SELF, flatbed_23_4000_colour_mapping,
  cargo_subtype)
{
  0: flatbed_23_4000_random;
  1: return ttdall_cc + 0x5C;
  2: return ttdall_cc + 0x63;
  3: return ttdall_cc + 0x53;
     return CB_FAILED;
}

switch (FEAT_TRAINS, SELF, flatbed_23_4000_cargo_subtype_text,
  cargo_subtype)
{
  0: return string(STR_REFIT_FACTORY);
  1: return string(STR_REFIT_TTD_5C);
  2: return string(STR_REFIT_TTD_63);
  3: return string(STR_REFIT_TTD_53);
     return CB_RESULT_NO_TEXT;
}  

switch (FEAT_TRAINS, SELF, flatbed_23_4000_additional_text,
  current_year >= USSREND)
{
  0: return string(STR_PURCHASE_HINT_WAGON_FLATBED,
                   56, 60, 
                   string(STR_PURCHASE_HINT_WAGON_TYPE_FLATBED_4AXLE),
                   string(STR_PURCHASE_HINT_FROM, 1979), 
                   string(STR_PURCHASE_HINT_LIST2, string(STR_PURCHASE_HINT_FACTORY_RAUTARUUKKI), string(STR_PURCHASE_HINT_FACTORY_DNEPRODZERZHINSKY_CW)));
     return string(STR_PURCHASE_HINT_WAGON_FLATBED,
                   56, 60, 
                   string(STR_PURCHASE_HINT_WAGON_TYPE_FLATBED_4AXLE),
                   string(STR_PURCHASE_HINT_FROM, 1979), 
                   string(STR_PURCHASE_HINT_FACTORY_DNEPRODZERZHINSKY_CW_AUSSR));
}

item (FEAT_TRAINS, flatbed_23_4000) {
  property {
    name: string(STR_NAME_FLATBED_23_4000_WOOD);
    climates_available: get_climates_available();
    introduction_date: date(get_car_year(1979), 1, 1);
    model_life: get_model_life(1979,2050);
    retire_early: get_retire_early(1979,2050);
    vehicle_life: 32;
    reliability_decay: 10;
    cargo_allow_refit: [WOOD];
    default_cargo_type: WOOD;
    refit_cost: 0;
    cost_factor: 3;
    sprite_id: SPRITE_ID_NEW_TRAIN;
    misc_flags: bitmask(TRAIN_FLAG_TILT, TRAIN_FLAG_MU);
    speed: 120 km/h;
    track_type: get_normal_track_type();
    power: 0 hpM;
    running_cost_base: RUNNING_COST_ROADVEH;
    loading_speed: 14;
    cargo_capacity: 56;
    weight: 34 ton;
    length: 8;
    visual_effect_and_powered: disable_visual_effect_and_powered();
    bitmask_vehicle_info: 0;
  }
  graphics {
    default: flatbed_23_4000_sprites;
    purchase: flatbed_23_4000_purchase_sprites;
    running_cost_factor: flatbed_23_4000_running_cost_factor;
    articulated_part: articulated_part_dummy6;
    additional_text: flatbed_23_4000_additional_text;
    cargo_subtype_text: flatbed_23_4000_cargo_subtype_text;
    colour_mapping: flatbed_23_4000_colour_mapping;
  }
}

if (enable_long_names) {
  item (FEAT_TRAINS, flatbed_23_4000) {
    property { name: string(STR_LONGNAME_FLATBED_23_4000_WOOD); }
  }
}

