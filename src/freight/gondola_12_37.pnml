#define IMAGEFILE  "src/freight/gondola-12-xx_12-37.png"

// покупка
purchase_spriteset(gondola_12_37, 0, 20)

// пусто
spriteset (gondola_12_37_empty_sprites, IMAGEFILE)
{
  s8_template(125, 56+36, 0)
}

// шаблон груза, 2 ливреи, 3 вида загруженности
// 25-49%, 50-74%, полный
#define gondola_12_37_sprite_layout_template(x, y, cargo)   \
spriteset (gondola_12_37_##cargo##_1_sprites, IMAGEFILE)    \
{ s8_template(x, y+36, 0) }                                 \
spriteset (gondola_12_37_##cargo##_2_sprites, IMAGEFILE)    \
{ s8_template(x+298, y+36, 0) }                             \
spriteset (gondola_12_37_##cargo##_full_sprites, IMAGEFILE) \
{ s8_template(x+596, y+36, 0) }                             \
spritegroup gondola_12_37_##cargo##_sprites                 \
{ loading: [gondola_12_37_empty_sprites,                    \
    gondola_12_37_##cargo##_1_sprites,                      \
    gondola_12_37_##cargo##_2_sprites,                      \
    gondola_12_37_##cargo##_full_sprites];                  \
  loaded: [gondola_12_37_empty_sprites,                     \
    gondola_12_37_##cargo##_1_sprites,                      \
    gondola_12_37_##cargo##_2_sprites,                      \
    gondola_12_37_##cargo##_full_sprites]; }                \

gondola_12_37_sprite_layout_template(423, 56, coal)    // уголь
