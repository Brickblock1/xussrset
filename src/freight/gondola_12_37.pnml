gondola_12_37_sprite_layout_template(423, 1099, lime)  // известняк
gondola_12_37_sprite_layout_template(423, 1248, pota)  // поташ
gondola_12_37_sprite_layout_template(423, 1397, sand)  // песок
gondola_12_37_sprite_layout_template(423, 1546, sulp)  // сера
gondola_12_37_sprite_layout_template(423, 1695, brck)  // кирпичи
gondola_12_37_sprite_layout_template(423, 1844, wdpr)  // лесоматериалы
gondola_12_37_sprite_layout_template(423, 1993, stel1) // сталь
