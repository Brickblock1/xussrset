#define IMAGEFILE  "src/freight/luggages/61-505.png"

purchase_sprites(mail_61_505, 0, 0)

pass_wagon_sprites(14, mail_61_505_v1, 32, 40)
pass_wagon_sprites(14, mail_61_505_v2, 32, 308)

#undef IMAGEFILE

switch (FEAT_TRAINS, SELF, mail_61_505_sprites_left,
  cargo_subtype )
{
  0: mail_61_505_v1_sprites_left;
  1: mail_61_505_v2_sprites_left;
     align_14_sprites;
}

switch (FEAT_TRAINS, SELF, mail_61_505_sprites_right,
  cargo_subtype )
{
  0: mail_61_505_v1_sprites_right;
  1: mail_61_505_v2_sprites_right;
     align_14_sprites;
}

random_switch (FEAT_TRAINS, SELF, mail_61_505_sprites_start, 
  bitmask(TRIGGER_VEHICLE_SERVICE))
{
  1: mail_61_505_sprites_left;
  1: mail_61_505_sprites_right;
}

long_vehicle_RND(mail_61_505, mail_61_505_sprites_start)

wagon_running_cost(mail_61_505, 123)

switch (FEAT_TRAINS, SELF, mail_61_505_cargo_subtype_text,
  cargo_subtype)
{
  0: return string(STR_REFIT_TTD_53);
  1: return string(STR_REFIT_TTD_59);
     return CB_RESULT_NO_TEXT;
}

