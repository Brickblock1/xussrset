/// Вагон
// нормальный товарный вагон (НТВ) 1875-1931.
// конструкция bitmask(TRIGGER_VEHICLE_SERVICE) внесена в шаблон

#define IMAGEFILE  "src/freight/ntv.png"
purchase_sprites(ntv_v1, 0, 0)
flatbed_empty_layout_template(ntv_v1, 4, 0, 31)
purchase_sprites(ntv_v2, 100, 0)
flatbed_empty_layout_template(ntv_v2, 4, 235, 31)
#undef IMAGEFILE

switch (FEAT_TRAINS, SELF, ntv_purchase_sprites,
  current_year >= 1918)
{
  0: ntv_v1_purchase_sprites;
     ntv_v2_purchase_sprites;
}

switch (FEAT_TRAINS, SELF, ntv_sprites_2,
  LOAD_TEMP(2) >= date(1918,1,1) )
{
  0: ntv_v1_empty_spriteset;
  1: ntv_v2_empty_spriteset;
     align_4_sprites;
}

short_vehicle(ntv)

switch (FEAT_TRAINS, SELF, ntv_additional_text,
  (current_year >= 1905) +
  (current_year >= 1911) )
{
  0: return string(STR_NTV_1891_PURCHASE_HINT);
  1: return string(STR_NTV_1905_PURCHASE_HINT);
     return string(STR_NTV_1911_PURCHASE_HINT);
}

