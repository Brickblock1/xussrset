  (current_year >= 1905) +
  (current_year >= 1911) +
  (current_year >= 1933))
{
  0: ntv_cargo_capacity_1891;
  1: ntv_cargo_capacity_1905;
  2: ntv_cargo_capacity_1911;
     ntv_cargo_capacity_1933;
}

item (FEAT_TRAINS, ntv) 
{
  property
  {
    name: string(STR_NTV_NAME);
    climates_available: get_climates_available();
    introduction_date: date(get_car_year(1892), 1, 1);
    model_life: get_model_life(1892,1925);
    retire_early: get_retire_early(1892,1925);
    vehicle_life: 30;
    reliability_decay: 20;
    cargo_allow_refit: [GOOD, WOOL, GLAS, LVST, ENSP, FMSP, MNSP, SGCN, PAPR, GRAI, WHEA, MAIZ, CERE, OLSD, FICR, CMNT, BDMT, CERA, SGBT, RCYC, WDPR, ];
    default_cargo_type: GOOD;
    refit_cost: 0;
    cost_factor: get_car_cost_factor();
    running_cost_factor: get_car_running_cost_factor();
    sprite_id: SPRITE_ID_NEW_TRAIN;
    speed: 120 km/h;
    misc_flags: bitmask(TRAIN_FLAG_TILT, TRAIN_FLAG_AUTOREFIT);
    track_type: get_normal_track_type();
    power: 0 hpM;
    running_cost_base: RUNNING_COST_DIESEL;
    loading_speed: 5;
    cargo_capacity: 12.3;
    weight: 7 ton;
    length: 4;
    visual_effect_and_powered: disable_visual_effect_and_powered();
    bitmask_vehicle_info: 0;
  }
  graphics
  {
    default: ntv_sprites;
    purchase: ntv_purchase_sprites;
    additional_text: ntv_additional_text;
    refit_cost: return 0 | CB_RESULT_AUTOREFIT;
    cargo_capacity: ntv_cargo_capacity;
  }
}

if (enable_long_names)
{
  item (FEAT_TRAINS, ntv)
  {
    property
    { name: string(STR_NTV_NAME_LONG); }
  }
