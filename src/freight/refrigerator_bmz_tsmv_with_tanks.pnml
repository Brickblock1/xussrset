 // refrigerator_bmz_with_tanks_with_tanks

/// Вагон-ледник
// refrigerator van
// Вагон-ледник для фруктов (БМЗ) 1937-1954

#define IMAGEFILE  "src/freight/refrigerator-bmz-with-tanks.png"

// покупка
purchase_sprites(refrigerator_bmz_tsmv_with_tanks, 0, 42)

spriteset (refrigerator_bmz_tsmv_with_tanks_milk_spriteset, IMAGEFILE)  
{ s9_template(860, 1840, 0) }                                           
spriteset (refrigerator_bmz_tsmv_with_tanks_1_milk_spriteset, IMAGEFILE)
{ s9_template(860, 1912, 0) }                                           
spriteset (refrigerator_bmz_tsmv_with_tanks_2_milk_spriteset, IMAGEFILE)
{ s9_template(860, 1984, 0) }                                               
spriteset (refrigerator_bmz_tsmv_with_tanks_3_milk_spriteset, IMAGEFILE)
{ s9_template(860, 2056, 0) }                                            
spritegroup refrigerator_bmz_tsmv_with_tanks_milk_spritegroup           
{ loading: [refrigerator_bmz_tsmv_with_tanks_1_milk_spriteset,          
    refrigerator_bmz_tsmv_with_tanks_1_milk_spriteset,                  
    refrigerator_bmz_tsmv_with_tanks_1_milk_spriteset,                  
    refrigerator_bmz_tsmv_with_tanks_2_milk_spriteset,                  
    refrigerator_bmz_tsmv_with_tanks_2_milk_spriteset,                  
    refrigerator_bmz_tsmv_with_tanks_2_milk_spriteset,                  
    refrigerator_bmz_tsmv_with_tanks_3_milk_spriteset,                  
    refrigerator_bmz_tsmv_with_tanks_3_milk_spriteset,                  
    refrigerator_bmz_tsmv_with_tanks_3_milk_spriteset,                  
    refrigerator_bmz_tsmv_with_tanks_milk_spriteset];                   
  loaded: [refrigerator_bmz_tsmv_with_tanks_milk_spriteset]; }          

#undef IMAGEFILE

switch (FEAT_TRAINS, SELF, refrigerator_bmz_tsmv_with_tanks_sprites_2,
  cargo_type_in_veh)
{
  FOOD: refrigerator_bmz_tsmv_with_tanks_milk_spritegroup;
  MILK: refrigerator_bmz_tsmv_with_tanks_milk_spritegroup;
        align_9_sprites;
}

long_vehicle(refrigerator_bmz_tsmv_with_tanks)

item (FEAT_TRAINS, refrigerator_bmz_tsmv_with_tanks) 
{
  property
  {
    name: string(STR_REFRIGERATOR_BMZ_TSMV_WITH_TANKS_NAME);
    climates_available: get_climates_available();
    introduction_date: date(get_car_year(1955), 1, 1);
    model_life: get_model_life(1955,1957);
    retire_early: get_retire_early(1955,1957);
    vehicle_life: 25;
    reliability_decay: 20;
    cargo_allow_refit: [MILK, FOOD];
    default_cargo_type: MILK;
    refit_cost: 0;
    cost_factor: get_car_cost_factor();
    running_cost_factor: get_car_running_cost_factor();
    sprite_id: SPRITE_ID_NEW_TRAIN;
    speed: 120 km/h;
    misc_flags: bitmask(TRAIN_FLAG_TILT, TRAIN_FLAG_MU, TRAIN_FLAG_AUTOREFIT);
    track_type: get_normal_track_type();
    power: 0 hpM;
    running_cost_base: RUNNING_COST_DIESEL;
    loading_speed: 15;
    cargo_capacity: 24;
    weight: 38 ton;
    length: 8;
    visual_effect_and_powered: disable_visual_effect_and_powered();
    bitmask_vehicle_info: 0;
  }
  graphics
  {
    default: refrigerator_bmz_tsmv_with_tanks_sprites;
    purchase: refrigerator_bmz_tsmv_with_tanks_purchase_sprites;
    articulated_part: articulated_part_dummy1;
    additional_text: return string(STR_REFRIGERATOR_BMZ_TSMV_WITH_TANKS_PURCHASE_HINT);
    refit_cost: return 0 | CB_RESULT_AUTOREFIT;
  }
}

if (enable_long_names)
{
  item (FEAT_TRAINS, refrigerator_bmz_tsmv_with_tanks)
