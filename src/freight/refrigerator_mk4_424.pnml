{ loading: [refrigerator_mk4_424_1##v##_r_sprites,                        \
    refrigerator_mk4_424_1##v##_r_sprites,                                \
    refrigerator_mk4_424_1##v##_r_sprites,                                \
    refrigerator_mk4_424_2##v##_##cargo##_r_sprites,                      \
    refrigerator_mk4_424_2##v##_##cargo##_r_sprites,                      \
    refrigerator_mk4_424_2##v##_##cargo##_r_sprites,                      \
    refrigerator_mk4_424_3##v##_##cargo##_r_sprites,                      \
    refrigerator_mk4_424_3##v##_##cargo##_r_sprites,                      \
    refrigerator_mk4_424_3##v##_##cargo##_r_sprites,                      \
    refrigerator_mk4_424_0##v##_r_sprites];                               \
  loaded: [refrigerator_mk4_424_0##v##_r_sprites]; }                      \

