    refrigerator_mk4_424_0##v##_sprites];                                 \
  loaded: [refrigerator_mk4_424_0##v##_sprites]; }                        \
                                                                           \
spriteset (refrigerator_mk4_424_2##v##_##cargo##_r_sprites, IMAGEFILE)    \
{ s13_r_template(x, y, 0) }                                                \
spriteset (refrigerator_mk4_424_3##v##_##cargo##_r_sprites, IMAGEFILE)    \
{ s13_r_template(x, y+67, 0) }                                             \
