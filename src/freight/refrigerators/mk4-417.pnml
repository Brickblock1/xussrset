 // refrigerator_mk4_417

/// Вагон-ледник
// refrigerator van
// конструкция bitmask(TRIGGER_VEHICLE_SERVICE) внесена в шаблон

#define IMAGEFILE  "src/freight/refrigerators/mk4-417.png"
purchase_sprites(refrigerator_mk4_417, 0, 0)
box_empty_layout_template(refrigerator_mk4_417, 12, 14, 113) 
box_layout_template(refrigerator_mk4_417, 12, 14,  297, fruit1)
box_layout_template(refrigerator_mk4_417, 12, 14,  482, fruit2)
box_layout_template(refrigerator_mk4_417, 12, 14,  666, fruit3)
box_layout_template(refrigerator_mk4_417, 12, 14,  850, fish)
box_layout_template(refrigerator_mk4_417, 12, 14, 1035, food1)
box_layout_template(refrigerator_mk4_417, 12, 14, 1219, food2)
#undef IMAGEFILE                   	

random_switch (FEAT_TRAINS, SELF, refrigerator_mk4_417_fruit_sprites,
  bitmask(TRIGGER_VEHICLE_NEW_LOAD) )
{
  independent: refrigerator_mk4_417_fruit1_sprites;
  2: refrigerator_mk4_417_fruit1_sprites;
  1: refrigerator_mk4_417_fruit2_sprites;
  2: refrigerator_mk4_417_fruit3_sprites;
}

random_switch (FEAT_TRAINS, SELF, refrigerator_mk4_417_food_sprites,
  bitmask(TRIGGER_VEHICLE_NEW_LOAD) )
{
  dependent: refrigerator_mk4_417_fruit_sprites;
  1: refrigerator_mk4_417_food1_sprites;
  1: refrigerator_mk4_417_food2_sprites;
}

switch (FEAT_TRAINS, SELF, refrigerator_mk4_417_sprites_start,
  cargo_type_in_veh)
{
  FRVG: refrigerator_mk4_417_fruit_sprites;
  FRUT: refrigerator_mk4_417_fruit_sprites;
  FISH: refrigerator_mk4_417_fish_sprites;
  FOOD: refrigerator_mk4_417_food_sprites;
        align_12_sprites;
}

long_vehicle(refrigerator_mk4_417)

wagon_running_cost(refrigerator_mk4_417, 1)

item (FEAT_TRAINS, refrigerator_mk4_417) 
{
  property
  {
    name: string(STR_REFRIGERATOR_MK4_417_NAME);
    climates_available: get_climates_available();
    introduction_date: date(get_car_year(1965), 1, 1);
    model_life: get_model_life(1965,1970);
    retire_early: get_retire_early(1965,1970);
    vehicle_life: 25;
    reliability_decay: 1;
    cargo_allow_refit: [FOOD, FRUT, FRVG, FISH];
    default_cargo_type: FOOD;
    refit_cost: 0;
    cost_factor: 255;
    sprite_id: SPRITE_ID_NEW_TRAIN;
    speed: 120 km/h;
    misc_flags: bitmask(TRAIN_FLAG_TILT, TRAIN_FLAG_MU, TRAIN_FLAG_AUTOREFIT);
    track_type: get_normal_track_type();
    power: 0 hpM;
    running_cost_base: RUNNING_COST_ROADVEH;
    loading_speed: 15;
    cargo_capacity: 40;
    weight: 44 ton;
    length: 8;
    visual_effect_and_powered: disable_visual_effect_and_powered();
    bitmask_vehicle_info: 0;
  }
  graphics
  {
    default: refrigerator_mk4_417_sprites;
    purchase: refrigerator_mk4_417_purchase_sprites;
    running_cost_factor: refrigerator_mk4_417_running_cost_factor;
    articulated_part: articulated_part_dummy4;
    additional_text: return string(STR_REFRIGERATOR_MK4_417_PURCHASE_HINT);
    refit_cost: return 0 | CB_RESULT_AUTOREFIT;
  }
}

if (enable_long_names)
{
  item (FEAT_TRAINS, refrigerator_mk4_417)
  {
    property
    { name: string(STR_REFRIGERATOR_MK4_417_NAME_LONG); }
  }
}

