 // rs4

/// Вагон
// конструкция bitmask(TRIGGER_VEHICLE_SERVICE) закодирована особым образом

#define IMAGEFILE  "src/freight/refrigerators/rs4.png"
purchase_sprites(rs4, 0, 0)
refsection_layout_template(rs4, 13, 113, 65, food) 
flatbed_empty_layout_template(rs4_diesel, 10, 113, 333)
#undef IMAGEFILE

switch (FEAT_TRAINS, SELF, rs4_food_sprites_left, 
  cargo_count)
{
     0..59: rs4_food_sprites_left1;
   60..119: rs4_food_sprites_left2;
  120..179: rs4_food_sprites_left3;
            rs4_food_sprites_left0;
} 

switch (FEAT_TRAINS, SELF, rs4_food_sprites_right, 
  cargo_count)
{
     0..59: rs4_food_sprites_right1;
   60..119: rs4_food_sprites_right2;
  120..179: rs4_food_sprites_right3;
            rs4_food_sprites_right0;
} 

random_switch (FEAT_TRAINS, SELF, rs4_sprites_start, 
  bitmask(TRIGGER_VEHICLE_SERVICE))
{
  1: rs4_food_sprites_left;
  1: rs4_food_sprites_right;
}

long_vehicle_RND(rs4, rs4_sprites_start)

switch (FEAT_TRAINS, SELF, rs4_diesel_sprites, 
[  set_offset_to(-position_in_vehid_chain-1),
   (prev_vehicle_randombits() % 2)])
{
  0: rs4_diesel_empty_sprites_left;
     rs4_diesel_empty_sprites_right;
}

switch (FEAT_TRAINS, SELF, rs4_food_sprites_left_prev, 
[  set_offset_to(-position_in_vehid_chain-1),
   (prev_vehicle_cargo_load() )])
{
     0..59: rs4_food_sprites_left1;
   60..119: rs4_food_sprites_left2;
  120..179: rs4_food_sprites_left3;
            rs4_food_sprites_left0;
} 

switch (FEAT_TRAINS, SELF, rs4_food_sprites_right_prev, 
[  set_offset_to(-position_in_vehid_chain-1),
   (prev_vehicle_cargo_load() )])
{
     0..59: rs4_food_sprites_right1;
   60..119: rs4_food_sprites_right2;
  120..179: rs4_food_sprites_right3;
            rs4_food_sprites_right0;
} 

switch (FEAT_TRAINS, SELF, rs4int_prev_sprites, 
[  set_offset_to(-position_in_vehid_chain-1),
   (prev_vehicle_randombits() % 2)])
{
  0: rs4_food_sprites_left_prev;
     rs4_food_sprites_right_prev;
}

switch (FEAT_TRAINS, SELF, rs4int_sprites_start,
  position_in_vehid_chain)
{
  1: rs4int_prev_sprites;
  3: rs4_diesel_sprites;
  5: rs4int_prev_sprites;
  7: rs4int_prev_sprites;
     dummy_sprites;
}

long_vehicle(rs4int)

engine_diesel_1_effect(rs4int, -2, 4, 11)

switch (FEAT_TRAINS, SELF, rs4int_create_effect2, 
[  set_offset_to(-position_in_vehid_chain-1),
   (prev_vehicle_randombits() % 2)])
{
  0: rs4int_create_effect_sprites_left;
     rs4int_create_effect_sprites_right;
}

switch (FEAT_TRAINS, SELF, rs4int_create_effect,
  position_in_vehid_chain)
{
  3: rs4int_create_effect2;
     return 0;
}

// секция из 5-ти вагонов
switch (FEAT_TRAINS, SELF, rs4_articulated_part,
  extra_callback_info1)
{
  1..9: return rs4int;
        return CB_RESULT_NO_MORE_ARTICULATED_PARTS;
}

switch (FEAT_TRAINS, SELF, rs4int_length,
  position_in_vehid_chain)
{
  0: return 5;
//  1: return 8;
  2: return 5;
//  3: return 8;
  4: return 2;
//  5: return 8;
  6: return 5;
//  7: return 8;
  8: return 5;
     return 8;
}

// Для задания нужных размеров частей и их рисования
item (FEAT_TRAINS, rs4int)
{
  property
  {
    climates_available: NO_CLIMATE;
    sprite_id: SPRITE_ID_NEW_TRAIN;
    model_life: VEHICLE_NEVER_EXPIRES;
    misc_flags: bitmask(TRAIN_FLAG_TILT);
    visual_effect_and_powered: disable_visual_effect_and_powered();
    track_type: get_normal_track_type();
    effect_spawn_model_and_powered: EFFECT_SPAWN_MODEL_ELECTRIC;
  }
  graphics
  {
    default: rs4int_sprites;
    length: rs4int_length;
    create_effect: rs4int_create_effect;
  }
}

// Сама секция
item (FEAT_TRAINS, rs4) 
{
  property
  {
    name: string(STR_RS4_NAME);
    climates_available: get_climates_available();
    introduction_date: date(get_car_year(1979), 1, 1);
    model_life: get_model_life(1979,1985);
    retire_early: get_retire_early(1979,1985);
    vehicle_life: 25;
    reliability_decay: 20;
    cargo_allow_refit: [FOOD, FISH, FRUT, FRVG];
    default_cargo_type: FOOD;
    refit_cost: 0;
    cost_factor: get_car_cost_factor();
    running_cost_factor: get_car_running_cost_factor();
    sprite_id: SPRITE_ID_NEW_TRAIN;
    speed: 140 km/h;
    misc_flags: bitmask(TRAIN_FLAG_TILT, TRAIN_FLAG_MU, TRAIN_FLAG_AUTOREFIT);
    track_type: get_normal_track_type();
    power: 0 hpM;
    running_cost_base: RUNNING_COST_DIESEL;
    loading_speed: 60;
    cargo_capacity: 184;
    weight: 209 ton;
    length: 8;
    visual_effect_and_powered: disable_visual_effect_and_powered();
    bitmask_vehicle_info: 0;
  }
  graphics
  {
    default: rs4_sprites;
    purchase: rs4_purchase_sprites;
    articulated_part: rs4_articulated_part;
    additional_text: return string(STR_RS4_PURCHASE_HINT);
    refit_cost: return 0 | CB_RESULT_AUTOREFIT;
  }
}

if (enable_long_names)
{
  item (FEAT_TRAINS, rs4int)
  {
    property
    { name: string(STR_RS4_NAME_LONG); }
  }
}

