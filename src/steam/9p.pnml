 // 9p

// Спрайты

#define IMAGEFILE  "src/steam/9p.png"

// покупка
spriteset (_9p_purchase_spriteset, IMAGEFILE)
{
  s6_purchase_template(0, 0, 4)
}

// паровоз, анимация из 4-х фреймов
spriteset (_9p_1_spriteset, IMAGEFILE)
{
  s6_template(0, 0, 0)
} 

spriteset (_9p_2_spriteset, IMAGEFILE)
{
  s6_template(0, 42, 0)
} 

spriteset (_9p_3_spriteset, IMAGEFILE)
{
  s6_template(0, 84, 0)
} 

spriteset (_9p_4_spriteset, IMAGEFILE)
{
  s6_template(0, 126, 0)
} 

// для флага FLIP
spriteset (_9p_flipped_1_spriteset, IMAGEFILE)
{
  s6_template(0, 0, -2)
} 

spriteset (_9p_flipped_2_spriteset, IMAGEFILE)
{
  s6_template(0, 42, -2)
} 

spriteset (_9p_flipped_3_spriteset, IMAGEFILE)
{
  s6_template(0, 84, -2)
} 

spriteset (_9p_flipped_4_spriteset, IMAGEFILE)
{
  s6_template(0, 126, -2)
} 

#undef IMAGEFILE

switch (FEAT_TRAINS, SELF, _9p_get_spriteset,
  (motion_counter & 3) +
  (is_flipped() * 4)
)
{
  0: _9p_1_spriteset;
  1: _9p_2_spriteset;
  2: _9p_3_spriteset;
  3: _9p_4_spriteset;
  4: _9p_flipped_1_spriteset;
  5: _9p_flipped_2_spriteset;
  6: _9p_flipped_3_spriteset;
  7: _9p_flipped_4_spriteset;
  align_6_spriteset;
}

// Присоединяем
switch (FEAT_TRAINS, SELF, _9p_can_attach_wagon,
  vehicle_type_id)
{
  return CB_RESULT_ATTACH_ALLOW;
//  return CB_RESULT_ATTACH_DISALLOW;
}

item (FEAT_TRAINS, _9p) 
{
  property
  {
    name: string(STR_9P_NAME);
    climates_available: bitmask(CLIMATE_TEMPERATE, CLIMATE_ARCTIC, CLIMATE_TROPICAL);
    introduction_date: date(1935, 1, 1);
    model_life: 30;
    vehicle_life: 30; // срок службы
    reliability_decay: 20;
    cost_factor: 2;
    running_cost_factor: 10;
    sprite_id: SPRITE_ID_NEW_TRAIN;
    speed: 35 km/h;
    misc_flags: bitmask(TRAIN_FLAG_FLIP); // TRAIN_FLAG_MU
    refit_cost: 0;
    track_type: RAIL;
    power: 320 hpM;
    running_cost_base: RUNNING_COST_STEAM;
    dual_headed: 0;
    cargo_capacity: 0; // пассажиров
    weight: 55 ton;
    ai_engine_rank: 0;
    engine_class: ENGINE_CLASS_STEAM;
    extra_power_per_wagon: 0 kW;
    tractive_effort_coefficient: 0.15398886;
    air_drag_coefficient: 0.06;
    shorten_vehicle: SHORTEN_TO_6_8;
    extra_weight_per_wagon: 0;
    bitmask_vehicle_info: 0;
    visual_effect_and_powered:
      visual_effect_and_powered(VISUAL_EFFECT_STEAM, -2, DISABLE_WAGON_POWER);
  }

  graphics {
    default: _9p_get_spriteset;
    purchase: _9p_purchase_spriteset;
    can_attach_wagon: _9p_can_attach_wagon;
    additional_text: return string(STR_9P_PURCHASE_HINT);
  }

}

