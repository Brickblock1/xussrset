 // e

// Спрайты

#define IMAGEFILE  "src/steam/e.png"

// покупка
purchase_spriteset(e_e, 315, 0)

// паровоз, анимация из 4-х фреймов
spriteset (e_e_1_spriteset, IMAGEFILE)
{
  s7_template(3, 3, 0)
} 

spriteset (e_e_2_spriteset, IMAGEFILE)
{
  s7_template(3, 48, 0)
} 

spriteset (e_e_3_spriteset, IMAGEFILE)
{
  s7_template(3, 94, 0)
} 

spriteset (e_e_4_spriteset, IMAGEFILE)
{
  s7_template(3, 141, 0)
} 

// тендер

spriteset (e_t_spriteset, IMAGEFILE)
{
  s5_template(3, 741, 0)
} 

#undef IMAGEFILE

switch (FEAT_TRAINS, PARENT, e_e_get_spriteset,
  motion_counter & 3)
{
  0: e_e_1_spriteset;
  1: e_e_2_spriteset;
  2: e_e_3_spriteset;
  e_e_4_spriteset;
}

switch (FEAT_TRAINS, SELF, e_e_weight,
  (build_year >= 1920))
{
  0: return (78+64);
  return (82+64);
}

switch (FEAT_TRAINS, SELF, e_e_tractive_effort_coefficient,
  (build_year >= 1913) +
  (build_year >= 1916) +
  (build_year >= 1920))
{
  0: return get_tec_int(127.0, 78+64);
  1: return get_tec_int(140.0, 78+64);
  2: return get_tec_int(149.0, 78+64);
  return get_tec_int(149.0, 82+64);
}

switch (FEAT_TRAINS, SELF, e_e_power,
  (build_year >= 1916) +
  (build_year >= 1920) +
  (build_year >= 1936))
{
  0: return 780;
  1: return 790;
  2: return 1000;
  return 1100;
}

engine_speed_change_after(e_e, 55, 65, 1936)

engine_penalise_speed0(e_e)

switch (FEAT_TRAINS, SELF, e_e_articulated_part,
  extra_callback_info1)
{
  1: return dummy1;
  2: return unitb;
  3: return dummy1;
  return CB_RESULT_NO_MORE_ARTICULATED_PARTS;
}

item (FEAT_TRAINS, e_e) 
{
  property
  {
    name: string(STR_E_NAME);
    climates_available: get_climates_available();
    introduction_date: date(get_loc_year(1912), 1, 1);
    model_life: get_model_life(1912,1926);
    retire_early: get_retire_early(1912,1926);
    vehicle_life: 40; // срок службы
    reliability_decay: 20;
    cost_factor: 15;
    running_cost_factor: get_steam_running_cost_factor();
    sprite_id: SPRITE_ID_NEW_TRAIN;
    misc_flags: bitmask(TRAIN_FLAG_TILT, TRAIN_FLAG_MU);
    track_type: get_normal_track_type();
    ai_special_flag: AI_FLAG_PASSENGER;
    power: 780 hpM;
    running_cost_base: RUNNING_COST_STEAM;
    weight: (78+64) ton;
    engine_class: ENGINE_CLASS_STEAM;
    tractive_effort_coefficient: get_tec(127.0, 78+64);
    length: 6;
    visual_effect_and_powered: steam_visual_effect_and_powered(-4);
    cargo_allow_refit: [GOOD];
    default_cargo_type: GOOD;
    cargo_capacity: 1;
  }

  graphics {
    default: e_e_get_spriteset;
    purchase: e_e_purchase_spriteset;
    articulated_part: e_e_articulated_part;
    can_attach_wagon: any_can_attach_wagon;
    start_stop: any_start_stop;
    additional_text: return string(STR_E_PURCHASE_HINT);
    speed: e_e_speed;
    purchase_speed: e_e_purchase_speed;
    bitmask_vehicle_info: e_e_bitmask_vehicle_info;
    cargo_subtype_text: cargo_subtype_text_default;
    cargo_capacity: return 0;
    power: e_e_power;
    tractive_effort_coefficient: e_e_tractive_effort_coefficient;
    weight: e_e_weight;
  }

  livery_override(unitb)
  {
    length: return 4;
    e_t_spriteset;
  }

}

if (enable_long_names)
{
  item (FEAT_TRAINS, e_e)
  {
    property
    { name: string(STR_E_NAME_LONG); }
  }
}

