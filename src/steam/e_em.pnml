 // em

switch (FEAT_TRAINS, PARENT, e_em_sprites_start, 0)
{
  e_all_v3_sprites_left;
}

short_vehicle(e_em)

switch (FEAT_TRAINS, SELF, e_em_weight,
  (build_year >= 1933) +
  (build_year >= 1934))
{
  0: return (85+68);
  1: return (78+68);
     return (83+68);
}

switch (FEAT_TRAINS, SELF, e_em_tractive_effort_coefficient,
  (build_year >= 1933) +
  (build_year >= 1934))
{
  0: return get_tec_int(158.0, 85+68);
  1: return get_tec_int(145.0, 78+68);
     return get_tec_int(154.0, 83+68);
}

switch (FEAT_TRAINS, SELF, e_em_power,
  (build_year >= 1936))
{
  0: return 1200;
     return 1250;
}

engine_speed_change_after(e_em, 55, 65, 1936)

engine_penalise_speed0(e_em)

item (FEAT_TRAINS, e_em) 
{
  property
  {
    name: string(STR_EM_NAME);
    climates_available: NO_CLIMATE;
    introduction_date: date(get_loc_year(1931), 1, 1);
    model_life: get_model_life(1931,1935);
    retire_early: get_retire_early(1931,1935);
    vehicle_life: 30;
    reliability_decay: 20;
    cost_factor: 15;
    running_cost_factor: get_steam_running_cost_factor();
    sprite_id: SPRITE_ID_NEW_TRAIN;
    misc_flags: bitmask(TRAIN_FLAG_TILT, TRAIN_FLAG_MU);
    track_type: get_normal_track_type();
    ai_special_flag: AI_FLAG_PASSENGER;
    power: 1200 hpM;
    running_cost_base: RUNNING_COST_STEAM;
    weight: (85+68) ton;
    engine_class: ENGINE_CLASS_STEAM;
    tractive_effort_coefficient: get_tec(158.0, 85+68);
    length: 6;
    cargo_allow_refit: [GOOD];
    default_cargo_type: GOOD;
    cargo_capacity: 1;
    effect_spawn_model_and_powered: EFFECT_SPAWN_MODEL_STEAM;
  }

  graphics {
    default: e_em_sprites;
    purchase: e_all_v3_purchase_sprites;
    articulated_part: articulated_part_tender1;
    can_attach_wagon: any_can_attach_wagon;
    start_stop: any_start_stop;
    additional_text: return string(STR_EM_PURCHASE_HINT);
    speed: e_em_speed;
    purchase_speed: e_em_purchase_speed;
    bitmask_vehicle_info: e_em_bitmask_vehicle_info;
    cargo_capacity: return 0;
    power: e_em_power;
    tractive_effort_coefficient: e_em_tractive_effort_coefficient;
    weight: e_em_weight;
    create_effect: e_all_create_effect;
  }

  livery_override(unitb)
  {
    length: return 4;
            e_all_t_v1_sprites_left;
  }

}

if (enable_long_names)
{
  item (FEAT_TRAINS, e_em)
  {
    property
    { name: string(STR_EM_NAME_LONG); }
  }
}

if (models_details_level == 1)
{
  item (FEAT_TRAINS, e_em)
  {
    property
    { climates_available: get_climates_available(); }
  }
}
