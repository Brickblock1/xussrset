#undef IMAGEFILE

switch (FEAT_TRAINS, SELF, fd20_get_spriteset2,
  last_computed_result +
  ((build_year >= 1932) * 4) +
  ((build_year >= 1934) * 4))
{
  0: fd20_1_spriteset;
  1: fd20_2_spriteset;
  2: fd20_3_spriteset;
  3: fd20_4_spriteset;
  4: fd20_1_v2_spriteset;
  5: fd20_2_v2_spriteset;
  6: fd20_3_v2_spriteset;
  7: fd20_4_v2_spriteset;
  8: fd20_1_v3_spriteset;
  9: fd20_2_v3_spriteset;
  10: fd20_3_v3_spriteset;
  11: fd20_4_v3_spriteset;
  align_10_spriteset;
}

switch (FEAT_TRAINS, PARENT, fd20_get_spriteset1,
  motion_counter & 3)
{
  fd20_get_spriteset2;
}

// Если рисуем на карте и следующий в цепочке вагон скрыт, то
// отдаём пустышку
switch (FEAT_TRAINS, SELF, fd20_get_spriteset,
  is_drawn_in_viewport() && is_hidden_at(1))
{
  1: dummy_spriteset;
  fd20_get_spriteset1;
}

switch (FEAT_TRAINS, SELF, fd20_get_purchase_spriteset,
  (build_year >= 1932) +
  (build_year >= 1934) +
  (build_year >= 1936)
)
{
  1: fd20_v2_purchase_spriteset;
  2: fd20_v3_purchase_spriteset;
  3: fd20_v4_purchase_spriteset;
  fd20_purchase_spriteset;
}

// Макс. скорость: 65 км/ч, с 1936 85 км/ч, с 1956 90 км/ч
#define MAX_SPEED current_year >= 1956 ? 90 : current_year >= 1936 ? 85 : 65

switch (FEAT_TRAINS, SELF, fd20_purchase_speed,
  MAX_SPEED)
{
  return;
}

switch (FEAT_TRAINS, SELF, fd20_speed,
[
  STORE_TEMP(MAX_SPEED, 0),
  is_penalise_speed() ? get_penalised_speed(LOAD_TEMP(0)) : LOAD_TEMP(0)
])
{
  return;
}

#undef MAX_SPEED

engine_penalise_speed0(fd20)

switch (FEAT_TRAINS, SELF, fd20_articulated_part,
  extra_callback_info1)
{
  1: return dummy2;
  2: return unitb;
  3: return dummy1;
  return CB_RESULT_NO_MORE_ARTICULATED_PARTS;
}

switch (FEAT_TRAINS, SELF, fd20_get_tender_spriteset,
  (build_year >= 1932) +
  (build_year >= 1936))
{
  1: fd20_t17_spriteset;
  2: fd20_t6p_spriteset;
  fd20_4o_spriteset;
}

switch (FEAT_TRAINS, SELF, fd20_get_tender_length,
  (build_year >= 1932) +
  (build_year >= 1936))
{
  1: return 7;
  2: return 6;
  return 5;
}

switch (FEAT_TRAINS, SELF, fd20_weight,
  (build_year >= 1932) +
  (build_year >= 1936))
{
  1: return (137+123);
  2: return (137+127);
  return (137+85);
}

// ТУ=ту/вес/9.8
switch (FEAT_TRAINS, SELF, fd20_tractive_effort_coefficient,
  (build_year >= 1932) +
  (build_year >= 1936))
{
  0: return get_tec_int(208.0, 137+85);
  1: return get_tec_int(208.0, 137+123);
  return get_tec_int(208.0, 137+127);
}


switch (FEAT_TRAINS, SELF, fd20_power,
  build_year >= 1936)
{
  1: return 3000;
  return 2600;
}

item (FEAT_TRAINS, fd20) 
{
  property
  {
    name: string(STR_FD20_NAME);
    climates_available: get_climates_available();
    introduction_date: date(get_loc_year(1931), 1, 1);
    model_life: get_model_life(1931,1940);
    retire_early: get_retire_early(1931,1940);
    vehicle_life: 25; // срок службы
    reliability_decay: 20;
    cost_factor: 23;
    running_cost_factor: get_steam_running_cost_factor();
    sprite_id: SPRITE_ID_NEW_TRAIN;
    misc_flags: bitmask(TRAIN_FLAG_TILT, TRAIN_FLAG_MU);
    track_type: get_normal_track_type();
    ai_special_flag: AI_FLAG_PASSENGER;
    power: 2600 hpM;
    running_cost_base: RUNNING_COST_STEAM;
    weight: (137+185) ton;
    engine_class: ENGINE_CLASS_STEAM;
    tractive_effort_coefficient: get_tec(208.0, 137+85);
    length: 8;
    visual_effect_and_powered: steam_visual_effect_and_powered(-2);
    cargo_allow_refit: [GOOD];
    default_cargo_type: GOOD;
    cargo_capacity: 1;
  }

  graphics {
    default: fd20_get_spriteset;
    purchase: fd20_get_purchase_spriteset;
    articulated_part: fd20_articulated_part;
    can_attach_wagon: any_can_attach_wagon;
    start_stop: any_start_stop;
    additional_text: return string(STR_FD20_PURCHASE_HINT);
    speed: fd20_speed;
    purchase_speed: fd20_purchase_speed;
    bitmask_vehicle_info: fd20_bitmask_vehicle_info;
    cargo_subtype_text: cargo_subtype_text_default;
    cargo_capacity: return 0;
    weight: fd20_weight;
    cost_factor: return 20;
    tractive_effort_coefficient: fd20_tractive_effort_coefficient;
    power: fd20_power;
  }

  livery_override(unitb)
  {
    length: fd20_get_tender_length;
    fd20_get_tender_spriteset;
  }

}
