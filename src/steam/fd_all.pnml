switch (FEAT_TRAINS, SELF, fd_tender_sprites,
  (build_year >= 1932) +
  (build_year >= 1936))
{
  0: fd_t_4o_sprites_start;
  1: fd_t_t17_sprites_start;
     fd_t_t6p_sprites_start;
}

// fd20

switch (FEAT_TRAINS, SELF, fd_fd20_purchase_sprites,
  (current_year >= 1932) +
  (current_year >= 1934) +
  (current_year >= 1936))
{
  0: fd_fd20_v1_purchase_sprites;
  1: fd_fd20_v2_purchase_sprites;
  2: fd_fd20_v3_purchase_sprites;
     fd_fd20_v4_purchase_sprites;
}

switch (FEAT_TRAINS, SELF, fd_fd20_all_sprites_start,
  (build_year >= 1932) +
  (build_year >= 1934))
{
  0: fd_fd20_v1_sprites_start;
  1: fd_fd20_v2_sprites_start;
     fd_fd20_v3_sprites_start;
}
  
switch (FEAT_TRAINS, SELF, fd_all_sprites_start,
  build_year >= 1940)
{
  0: fd_fd20_all_sprites_start;
     fd_fd21_sprites_start;
}

switch (FEAT_TRAINS, PARENT, fd_fd20_sprites_start, 
  models_details_level == 0)        
{
  0: fd_fd20_all_sprites_start;
     fd_all_sprites_start;
}

long_vehicle(fd_fd20)

switch (FEAT_TRAINS, SELF, fd_fd20_additional_text,
  current_year >= 1935)
{
  0: return string(STR_PURCHASE_HINT_ENGINE, 
                   string(STR_PURCHASE_HINT_ENGINE_TYPE_FREIGHT_STEAM), 
                   string(STR_PURCHASE_HINT_SECTIONS_1), 
                   string(STR_PURCHASE_HINT_FROMTO, 1931, 1940), 
                   string(STR_PURCHASE_HINT_FACTORY_LUGANSK));
     return string(STR_PURCHASE_HINT_ENGINE, 
                   string(STR_PURCHASE_HINT_ENGINE_TYPE_FREIGHT_STEAM), 
                   string(STR_PURCHASE_HINT_SECTIONS_1), 
                   string(STR_PURCHASE_HINT_FROMTO, 1931, 1940), 
                   string(STR_PURCHASE_HINT_FACTORY_LUGANSK_VOROSHILOVGRAD));
}

engine_steam_1_effect(fd, -2, 13)
engine_length_change_build_after2(fd_tender, 5, 7, 1932, 6, 1936)       
engine_weight_change_build_after2(fd_fd20, 137+85, 137+123, 1932, 137+127, 1936)       
engine_TE_change_build_after2(fd_fd20, get_tec_int(208.0, 137+85), get_tec_int(208.0, 137+123), 1932, get_tec_int(208.0, 137+127), 1936)       
engine_power_change_build_after(fd_fd20, 2600, 3000, 1936)       
engine_cost_change_build_after2(fd_fd20, 24, 27, 1932, 28, 1936)       
engine_RC_change_build_after2(fd_fd20, 551, 632, 1932, 636, 1936)       
engine_speed_change_after2(fd_fd20, 65, 85, 1936, 90, 1956)
engine_penalise_speed0(fd_fd20)

item (FEAT_TRAINS, fd_fd20) {
  property {
    name: string(STR_NAME_FD20);
    climates_available: get_climates_available();
    introduction_date: date(get_loc_year(1931), 1, 1);
    model_life: get_model_life(1931,1940);
    retire_early: get_retire_early(1931,1940);
    vehicle_life: 25;
    reliability_decay: 10;
    cost_factor: 24;
    sprite_id: SPRITE_ID_NEW_TRAIN;
    misc_flags: bitmask(TRAIN_FLAG_TILT, TRAIN_FLAG_MU);
    track_type: get_normal_track_type();
    ai_special_flag: AI_FLAG_PASSENGER;
    power: 2600 hpM;
    running_cost_base: RUNNING_COST_STEAM;
    weight: (137+185) ton;
    engine_class: ENGINE_CLASS_STEAM;
    tractive_effort_coefficient: get_tec(208.0, 137+85);
    length: 8;
    cargo_allow_refit: [GOOD];
    default_cargo_type: GOOD;
    cargo_capacity: 1;
    effect_spawn_model_and_powered: EFFECT_SPAWN_MODEL_STEAM;
  }
  graphics {
    default: fd_fd20_sprites;
    purchase: fd_fd20_purchase_sprites;
    articulated_part: articulated_part_tender2;
    can_attach_wagon: any_can_attach_wagon;
    start_stop: any_start_stop;
    additional_text: fd_fd20_additional_text;
    speed: fd_fd20_speed;
    purchase_speed: fd_fd20_purchase_speed;
    bitmask_vehicle_info: fd_fd20_bitmask_vehicle_info;
    cargo_capacity: return 0;
    weight: fd_fd20_weight;
    tractive_effort_coefficient: fd_fd20_tractive_effort_coefficient;
    power: fd_fd20_power;
    cost_factor: fd_fd20_cost_factor;
    create_effect: fd_create_effect;
    running_cost_factor: fd_fd20_running_cost_factor;
  }
  livery_override(unitb) {
    length: fd_tender_length;
            fd_tender_sprites;
  }
}

if (enable_long_names) {
  item (FEAT_TRAINS, fd_fd20) {
    property { 
      name: string(STR_LONGNAME_FD20); }
  }
}

