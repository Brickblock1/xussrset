// 1934-1940
// Товарные паровозы семейства ФД "Федя" (Феликс Дзержинский)
// - ФД20 (1931-1940) и ФД21 (1940-1942).

#define IMAGEFILE  "src/steam/fd.png"
purchase_sprites(fd_fd20_v1, 0, 0)
purchase_sprites(fd_fd20_v2, 110, 0)
purchase_sprites(fd_fd20_v3, 220, 0)
purchase_sprites(fd_fd20_v4, 330, 0)
purchase_sprites(fd_fd21, 440, 0)

steam_sprites(10, fd_fd20_v1, 32,   40)
steam_sprites(10, fd_fd20_v2, 32,  844)
steam_sprites(10, fd_fd20_v3, 32, 1648)
