 // is20

// Спрайты

#define IMAGEFILE  "src/steam/is.png"

// покупка
purchase_sprites(is20_1932, 0, 0)
purchase_sprites(is20_1936, 0, 20)

switch (FEAT_TRAINS, SELF, is20_purchase_sprites,
  (build_year >= 1936))
{
  1: is20_1936_purchase_sprites;
  is20_1932_purchase_sprites;
}

