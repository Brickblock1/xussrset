#define IMAGEFILE  "src/steam/y.png"
purchase_sprites(y_y_v1, 0, 0)
purchase_sprites(y_y_v2, 110, 0)
purchase_sprites_select(y_y, 1914)
steam_sprites(6y, y_y_engine_v1, 32,  40)
steam_sprites(6y, y_y_engine_v2, 32, 844)
tender_sprites(4, y_y_tender_v1, 447,  40)
tender_sprites(4, y_y_tender_v2, 447, 107)
