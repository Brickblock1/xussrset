 // y

#define IMAGEFILE  "src/steam/y.png"
purchase_sprites(y_y_v1, 0, 0)
purchase_sprites(y_y_v2, 110, 0)

steam_sprites(6y, y_y_v1, 32,  40)
steam_sprites(6y, y_y_v2, 32, 844)

tender_sprites(4, y_y_tender_v1, 447,  40)
tender_sprites(4, y_y_tender_v2, 447, 107)
#undef IMAGEFILE

switch (FEAT_TRAINS, SELF, y_y_purchase_sprites,
  current_year >= 1914)
{
  1: y_y_v2_purchase_sprites;
     y_y_v1_purchase_sprites;
}

switch (FEAT_TRAINS, SELF, y_y_sprites_start,
  build_year >= 1914)
{
  0: y_y_v1_sprites_start;
     y_y_v2_sprites_start;
}

switch (FEAT_TRAINS, SELF, y_y_tender_sprites_start,
  build_year >= 1914)
{
  0: y_y_tender_v1_sprites_start;
     y_y_tender_v2_sprites_start;
}

long_vehicle(y_y)

engine_steam_1_effect(y_y, -3, 13)
engine_speed(y_y, 60)
engine_penalise_speed0(y_y)
general_running_cost(y_y, 189)

item (FEAT_TRAINS, y_y) {
  property {
    name: string(STR_NAME_Y_Y);
    climates_available: get_climates_available();
    introduction_date: date(get_loc_year(1910), 1, 1);
    model_life: get_model_life(1910,1920);
    retire_early: get_retire_early(1910,1920);
    vehicle_life: 40;
    reliability_decay: 10;
    cost_factor: 8;
    sprite_id: SPRITE_ID_NEW_TRAIN;
    misc_flags: bitmask(TRAIN_FLAG_TILT, TRAIN_FLAG_MU);
    track_type: get_normal_track_type();
    ai_special_flag: AI_FLAG_CARGO;
    power: 1012 hpM;
    running_cost_base: RUNNING_COST_STEAM;
    engine_class: ENGINE_CLASS_STEAM;
    length: 5;
    cargo_allow_refit: [GOOD];
    default_cargo_type: GOOD;
    cargo_capacity: 1;
    weight: (60+47) ton;
    tractive_effort_coefficient: get_tec(112.0, 60+47);
    effect_spawn_model_and_powered: EFFECT_SPAWN_MODEL_STEAM;
  }

  graphics {
    default: y_y_sprites;
    purchase: y_y_purchase_sprites;
    articulated_part: articulated_part_tender1;
    can_attach_wagon: any_can_attach_wagon;
    start_stop: any_start_stop;
    additional_text: return string(STR_PURCHASE_HINT_ENGINE, 
                                   string(STR_PURCHASE_HINT_ENGINE_TYPE_FREIGHT_STEAM), 
                                   string(STR_PURCHASE_HINT_SECTIONS_1), 
                                   string(STR_PURCHASE_HINT_FROMTO, 1910, 1920), 
                                   string(STR_PURCHASE_HINT_FACTORY_KOLOMNA));
    speed: y_y_speed;
    purchase_speed: y_y_purchase_speed;
    bitmask_vehicle_info: y_y_bitmask_vehicle_info;
    cargo_capacity: return 0;
    create_effect: y_y_create_effect;
    running_cost_factor: y_y_running_cost_factor;
  }
  livery_override(unitb) {
    length: 3;
    y_y_tender_sprites_start;
  }

}

long_name_template(y_y, STR_LONGNAME_Y_Y)
models_default_cargo_template(y_y)
