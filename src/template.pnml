// Шаблон 5 (size 5)
// обычный
template s5_template(x, y, shift)
{
  [x,     y,  7, 34, -5+3,          -18-2*shift]
  [x+16,  y, 15, 28, -14+2*shift, -11-shift]
  [x+48,  y, 20, 18, -15+4*shift, -11+3]
  [x+80,  y, 15, 28, -6+2*shift,  -11-6+shift]
  [x+112, y,  7, 34, -5+3,        -18+2*shift]
  [x+128, y, 15, 28, -14-2*shift, -11-3+shift]
  [x+160, y, 20, 18, -15-4*shift, -11+3]
  [x+192, y, 15, 28, -6-2*shift,  -11-6-shift]
}

