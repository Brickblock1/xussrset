#define PROP_refrigerator_type1862_RC  7
#define PROP_refrigerator_type1862_SD  60
#define PROP_refrigerator_type1862_WT  7
#define PROP_refrigerator_type1862_TE  0
#define PROP_refrigerator_type1862_PR  0
